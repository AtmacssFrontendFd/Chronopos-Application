<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters">

    <!-- Converters -->
    <converters:FlowDirectionToTextAlignmentConverter x:Key="FlowDirectionToTextAlignmentConverter"/>
    <converters:FlowDirectionToHorizontalAlignmentConverter x:Key="FlowDirectionToHorizontalAlignmentConverter"/>
    <converters:FlowDirectionToReverseHorizontalAlignmentConverter x:Key="FlowDirectionToReverseHorizontalAlignmentConverter"/>
    <converters:HalfValueConverter x:Key="HalfValueConverter"/>
    <converters:EqualsConverter x:Key="EqualsConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

    <!-- Font Family -->
    <FontFamily x:Key="PoppinsFont">pack://application:,,,/ChronoPos.Desktop;component/Fonts/#Poppins Regular</FontFamily>
    <FontFamily x:Key="PoppinsFontFallback">Segoe UI, Arial, sans-serif</FontFamily>

    <!-- Font Sizes (will be updated by FontService) -->
    <system:Double x:Key="FontSizeVerySmall" xmlns:system="clr-namespace:System;assembly=mscorlib">13</system:Double>
    <system:Double x:Key="FontSizeSmall" xmlns:system="clr-namespace:System;assembly=mscorlib">15</system:Double>
    <system:Double x:Key="FontSizeMedium" xmlns:system="clr-namespace:System;assembly=mscorlib">17</system:Double>
    <system:Double x:Key="FontSizeLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">19</system:Double>
    <system:Double x:Key="FontSizeXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">22</system:Double>
    <system:Double x:Key="FontSizeXXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">26</system:Double>

    <!-- Zoom Resources (will be updated by ZoomService) -->
    <system:Double x:Key="CurrentZoomScale" xmlns:system="clr-namespace:System;assembly=mscorlib">1.0</system:Double>
    <system:Double x:Key="CurrentZoomPercentage" xmlns:system="clr-namespace:System;assembly=mscorlib">100</system:Double>
    <system:String x:Key="CurrentZoomLevel" xmlns:system="clr-namespace:System;assembly=mscorlib">Zoom100</system:String>

    <!-- Layout Resources (will be updated by ZoomService) -->
    <system:Double x:Key="DefaultMargin" xmlns:system="clr-namespace:System;assembly=mscorlib">10</system:Double>
    <system:Double x:Key="DefaultPadding" xmlns:system="clr-namespace:System;assembly=mscorlib">15</system:Double>
    <system:Double x:Key="ButtonHeight" xmlns:system="clr-namespace:System;assembly=mscorlib">45</system:Double>
    <system:Double x:Key="ButtonMinWidth" xmlns:system="clr-namespace:System;assembly=mscorlib">80</system:Double>
    <system:Double x:Key="CardPadding" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="BorderRadius" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
    <system:Double x:Key="IconSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>

    <!-- Thickness Resources (will be updated by ZoomService) -->
    <Thickness x:Key="DefaultMarginThickness">10</Thickness>
    <Thickness x:Key="DefaultPaddingThickness">15</Thickness>
    <Thickness x:Key="CardPaddingThickness">20</Thickness>
    
    <!-- CornerRadius Resources -->
    <CornerRadius x:Key="BorderCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#111315"/>
    <SolidColorBrush x:Key="CardBackground" Color="#292C2D"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="#3D4142"/>
    <SolidColorBrush x:Key="OverlayBackground" Color="#383C3D"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#D9D9D9"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#A7A7A7"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderLight" Color="#333333"/>
    <SolidColorBrush x:Key="BorderMuted" Color="#5E5E5E"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="Primary" Color="#E1AF23"/>
    <SolidColorBrush x:Key="PrimaryAlt" Color="#FFBD0F"/>
    <SolidColorBrush x:Key="PrimaryDark" Color="#C19A1F"/>
    <SolidColorBrush x:Key="PrimaryDarker" Color="#A8841C"/>
    <SolidColorBrush x:Key="Secondary" Color="#FF5099"/>
    <SolidColorBrush x:Key="Success" Color="#37D101"/>
    <SolidColorBrush x:Key="Info" Color="#339EA5"/>
    <SolidColorBrush x:Key="Warning" Color="#FFEDBE"/>
    <SolidColorBrush x:Key="Error" Color="#E70000"/>

    <!-- Icon Circle Backgrounds for Sidebar Buttons -->
    <SolidColorBrush x:Key="IconCircleBackground" Color="#FFFFFF"/>        <!-- White for dark theme -->
    <SolidColorBrush x:Key="IconCircleSelectedBackground" Color="#000000"/> <!-- Black when selected -->

    <!-- Muted Variants -->
    <SolidColorBrush x:Key="MutedRed" Color="#FF3A3A"/>
    <SolidColorBrush x:Key="MutedPink" Color="#F8C0D7"/>
    <SolidColorBrush x:Key="LightBlue" Color="#B2E8FF"/>

    <!-- Button Styles for Dark Theme -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfaceBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
        <Setter Property="MinWidth" Value="{DynamicResource ButtonMinWidth}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{DynamicResource BorderCornerRadius}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"
                                        RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource OverlayBackground}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryAlt}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryAlt}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Navigation Button Style - Ensures text is always visible -->
    <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="MinHeight" Value="45"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="12,8,12,8"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource BorderCornerRadius}">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
