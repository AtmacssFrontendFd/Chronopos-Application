<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters">

    <!-- Converters -->
    <converters:FlowDirectionToTextAlignmentConverter x:Key="FlowDirectionToTextAlignmentConverter"/>
    <converters:FlowDirectionToHorizontalAlignmentConverter x:Key="FlowDirectionToHorizontalAlignmentConverter"/>
    <converters:FlowDirectionToReverseHorizontalAlignmentConverter x:Key="FlowDirectionToReverseHorizontalAlignmentConverter"/>
    <converters:HalfValueConverter x:Key="HalfValueConverter"/>
    <converters:EqualsConverter x:Key="EqualsConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    <converters:ModuleToColorConverter x:Key="ModuleToColorConverter"/>
    <converters:ModuleToIconConverter x:Key="ModuleToIconConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>

    <!-- Font Family -->
    <FontFamily x:Key="PoppinsFont">pack://application:,,,/ChronoPos.Desktop;component/Fonts/#Poppins Regular</FontFamily>
    <FontFamily x:Key="PoppinsFontFallback">Segoe UI, Arial, sans-serif</FontFamily>

    <!-- Font Sizes (will be updated by FontService and ZoomService) -->
    <system:Double x:Key="FontSizeVerySmall" xmlns:system="clr-namespace:System;assembly=mscorlib">13</system:Double>
    <system:Double x:Key="FontSizeSmall" xmlns:system="clr-namespace:System;assembly=mscorlib">15</system:Double>
    <system:Double x:Key="FontSizeMedium" xmlns:system="clr-namespace:System;assembly=mscorlib">17</system:Double>
    <system:Double x:Key="FontSizeLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">19</system:Double>
    <system:Double x:Key="FontSizeXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">22</system:Double>
    <system:Double x:Key="FontSizeXXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">26</system:Double>

    <!-- Zoom Resources (will be updated by ZoomService) -->
    <system:Double x:Key="CurrentZoomScale" xmlns:system="clr-namespace:System;assembly=mscorlib">1.0</system:Double>
    <system:Double x:Key="CurrentZoomPercentage" xmlns:system="clr-namespace:System;assembly=mscorlib">100</system:Double>
    <system:String x:Key="CurrentZoomLevel" xmlns:system="clr-namespace:System;assembly=mscorlib">Zoom100</system:String>

    <!-- Layout Resources (will be updated by ZoomService) -->
    <system:Double x:Key="DefaultMargin" xmlns:system="clr-namespace:System;assembly=mscorlib">10</system:Double>
    <system:Double x:Key="DefaultPadding" xmlns:system="clr-namespace:System;assembly=mscorlib">15</system:Double>
    <system:Double x:Key="ButtonHeight" xmlns:system="clr-namespace:System;assembly=mscorlib">45</system:Double>
    <system:Double x:Key="ButtonMinWidth" xmlns:system="clr-namespace:System;assembly=mscorlib">80</system:Double>
    <system:Double x:Key="CardPadding" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="BorderRadius" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
    <system:Double x:Key="IconSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>

    <!-- Thickness Resources (will be updated by ZoomService) -->
    <Thickness x:Key="DefaultMarginThickness">10</Thickness>
    <Thickness x:Key="DefaultPaddingThickness">15</Thickness>
    <Thickness x:Key="CardPaddingThickness">20</Thickness>
    
    <!-- CornerRadius Resources -->
    <CornerRadius x:Key="BorderCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>

    <!-- ChronoPos Professional Brand Colors -->
    <Color x:Key="ChronoPosGoldColor">#D4A017</Color>
    <Color x:Key="ChronoPosOrangeColor">#F59E0B</Color>
    <Color x:Key="ChronoPosDarkGoldColor">#B8860B</Color>
    <Color x:Key="ChronoPosGoldHoverColor">#C09015</Color>
    
    <SolidColorBrush x:Key="ChronoPosGold" Color="{StaticResource ChronoPosGoldColor}"/>
    <SolidColorBrush x:Key="ChronoPosOrange" Color="{StaticResource ChronoPosOrangeColor}"/>
    <SolidColorBrush x:Key="ChronoPosDarkGold" Color="{StaticResource ChronoPosDarkGoldColor}"/>
    <SolidColorBrush x:Key="ChronoPosGoldHover" Color="{StaticResource ChronoPosGoldHoverColor}"/>
    
    <!-- Professional UI Colors -->
    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <Color x:Key="SidebarBackgroundColor">#F8F9FA</Color>
    <Color x:Key="InputBackgroundColor">#FFFFFF</Color>
    
    <Color x:Key="PrimaryTextColor">#1F2937</Color>
    <Color x:Key="SecondaryTextColor">#6B7280</Color>
    <Color x:Key="PlaceholderTextColor">#9CA3AF</Color>
    <Color x:Key="WhiteTextColor">#FFFFFF</Color>
    
    <Color x:Key="BorderLightColor">#E5E7EB</Color>
    <Color x:Key="BorderMediumColor">#D1D5DB</Color>
    
    <Color x:Key="SuccessGreenColor">#10B981</Color>
    <Color x:Key="ErrorRedColor">#EF4444</Color>
    <Color x:Key="WarningYellowColor">#F59E0B</Color>
    
    <SolidColorBrush x:Key="PageBackground" Color="{StaticResource PageBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackground" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="InputBackground" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryText" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryText" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="PlaceholderText" Color="{StaticResource PlaceholderTextColor}"/>
    <SolidColorBrush x:Key="WhiteText" Color="{StaticResource WhiteTextColor}"/>
    <SolidColorBrush x:Key="BorderMedium" Color="{StaticResource BorderMediumColor}"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="ErrorRed" Color="{StaticResource ErrorRedColor}"/>
    <SolidColorBrush x:Key="WarningYellow" Color="{StaticResource WarningYellowColor}"/>

    <!-- Backgrounds -->
    <SolidColorBrush x:Key="MainBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SurfaceBackground" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="OverlayBackground" Color="#F3F3F3"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary" Color="#000000"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#444444"/>
    <SolidColorBrush x:Key="TextDisabled" Color="#777979"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderLight" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderMuted" Color="#CCCCCC"/>

    <!-- Accents -->
    <SolidColorBrush x:Key="Primary" Color="#E1AF23"/>
    <SolidColorBrush x:Key="PrimaryAlt" Color="#FFBD0F"/>
    <SolidColorBrush x:Key="Secondary" Color="#FF8CB7"/>
    <SolidColorBrush x:Key="Success" Color="#009E5C"/>
    <SolidColorBrush x:Key="Info" Color="#1E88E5"/>
    <SolidColorBrush x:Key="Warning" Color="#FFFDE7"/>
    <SolidColorBrush x:Key="Error" Color="#FF4C4C"/>

    <!-- Icon Circle Backgrounds for Sidebar Buttons -->
    <SolidColorBrush x:Key="IconCircleBackground" Color="#000000"/>        <!-- Black for light theme -->
    <SolidColorBrush x:Key="IconCircleSelectedBackground" Color="#FFFFFF"/> <!-- White when selected -->

    <!-- Muted Variants -->
    <SolidColorBrush x:Key="MutedRed" Color="#FF5A5A"/>
    <SolidColorBrush x:Key="MutedPink" Color="#FDE7F0"/>
    <SolidColorBrush x:Key="LightBlue" Color="#ECECFF"/>

    <!-- Effects -->
    <DropShadowEffect x:Key="DropShadowEffect" 
                      Color="Black" 
                      Direction="315" 
                      ShadowDepth="2" 
                      Opacity="0.3" 
                      BlurRadius="5"/>

    <!-- Hover Background -->
    <SolidColorBrush x:Key="HoverBackground" Color="#F5F5F5"/>

    <!-- Button Styles for Light Theme -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SurfaceBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
        <Setter Property="MinWidth" Value="{DynamicResource ButtonMinWidth}"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{DynamicResource BorderCornerRadius}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                        Margin="{TemplateBinding Padding}"
                                        RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource OverlayBackground}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SelectedButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="Foreground" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryAlt}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="Foreground" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryAlt}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Navigation Button Style - Ensures text is always visible -->
    <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="MinHeight" Value="45"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="12,8,12,8"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <!-- ChronoPos Professional Button Styles -->
    <Style x:Key="ChronoPosGoldButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ChronoPosGold}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ChronoPosGoldHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ChronoPosDarkGold}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ChronoPosSecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SidebarBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#D1D5DB"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Professional TextBox Style with No Text Clipping -->
    <Style x:Key="ChronoPosTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Margin="{TemplateBinding Padding}"
                                    VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Professional PasswordBox Style -->
    <Style x:Key="ChronoPosPasswordBox" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource InputBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Margin="{TemplateBinding Padding}"
                                    VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Professional Button Styles (Aliases for compatibility) -->
    <Style x:Key="ProfessionalButtonStyle" TargetType="Button" BasedOn="{StaticResource ChronoPosGoldButton}"/>
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ChronoPosSecondaryButton}"/>
    <Style x:Key="SuccessButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SuccessGreen}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0EA76E"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#0D9461"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="DangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ErrorRed}"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#DC2626"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#B91C1C"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="6"
                            BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ProfessionalTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ChronoPosTextBox}"/>
    <Style x:Key="ProfessionalPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource ChronoPosPasswordBox}"/>

    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
        <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
        <Setter Property="FontFamily" Value="{StaticResource PoppinsFontFallback}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource BorderCornerRadius}">
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
