<UserControl x:Class="ChronoPos.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{DynamicResource PageBackground}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:SalesToHeightConverter x:Key="SalesToHeightConverter"/>
        <converters:IsPositiveConverter x:Key="IsPositiveConverter"/>
        <converters:IsNegativeConverter x:Key="IsNegativeConverter"/>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI Card Style -->
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.06" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Value Converter for Currency -->
        <Style x:Key="CurrencyTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20,15,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- KPIs -->
                <RowDefinition Height="Auto"/> <!-- Main Content Row 1 -->
                <RowDefinition Height="Auto"/> <!-- Charts -->
                <RowDefinition Height="Auto"/> <!-- Main Content Row 2 -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="Welcome back! Here's what's happening today." 
                              FontSize="13" 
                              Foreground="{DynamicResource TextSecondary}"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Loading Indicator -->
                    <TextBlock Text="⟳" 
                              FontSize="16" 
                              Foreground="#FF6B35"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                              RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                        From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    
                    <TextBlock Text="{Binding LastRefreshTimeDisplay}" 
                              FontSize="12" 
                              Foreground="{DynamicResource TextSecondary}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <Button Content="↻ Refresh" 
                           Command="{Binding LoadDashboardDataCommand}"
                           Background="#FF6B35"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="16,8"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E65A2B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.Row="0" Grid.RowSpan="5"
                   Background="#80000000"
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Panel.ZIndex="999">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4"/>
                    <TextBlock Text="Loading dashboard data..." 
                              Foreground="White" 
                              Margin="0,10,0,0"
                              FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- KPI Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Sales Card -->
                <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Today's Sales" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding TodaysSales, StringFormat='{}{0:N2}'}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="#10B981"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding TodaysTransactionCount}" 
                                      FontSize="12" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text=" transactions" 
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"
                                      Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Monthly Sales Card -->
                <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Monthly Sales" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MonthlySales, StringFormat='{}{0:N2}'}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="#3B82F6"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding GrowthPercentage, StringFormat='{}{0:+0.0;-0.0;0}%'}" 
                                      FontSize="12" 
                                      FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GrowthPercentage, Converter={StaticResource IsPositiveConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding GrowthPercentage, Converter={StaticResource IsNegativeConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text=" vs last month" 
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"
                                      Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pending Orders Card -->
                <Border Grid.Column="4" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Pending Orders" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding PendingOrders}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="#F59E0B"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="{Binding ActiveTables}" 
                                      FontSize="12" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text=" active tables" 
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"
                                      Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Low Stock Items Card -->
                <Border Grid.Column="6" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Low Stock Alert" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding LowStockItems}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="#EF4444"/>
                        
                        <Button Grid.Row="2" 
                               Content="View Items" 
                               Command="{Binding ViewLowStockItemsCommand}"
                               Background="Transparent"
                               BorderThickness="0"
                               Foreground="#3B82F6"
                               FontSize="12"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               Cursor="Hand"
                               Padding="0"
                               Margin="0,6,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Row 1: Popular Products, Recent Sales, Quick Actions -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Popular Products -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="Popular Products" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>
                            <Button Content="View All →" 
                                   Command="{Binding ViewAllProductsCommand}"
                                   HorizontalAlignment="Right"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="#3B82F6"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"/>
                        </Grid>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding PopularProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" 
                                           CornerRadius="8" 
                                           Padding="12"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Color/Icon -->
                                            <Border Grid.Column="0" 
                                                   Width="40" 
                                                   Height="40" 
                                                   CornerRadius="8"
                                                   Background="{Binding Color, FallbackValue='#FFC107'}"
                                                   Margin="0,0,12,0"/>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ProductName}" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextPrimary}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding UnitsSold}" 
                                                              FontSize="12" 
                                                              FontWeight="Medium"
                                                              Foreground="{DynamicResource TextPrimary}"/>
                                                    <TextBlock Text=" sold • " 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}"
                                                              Margin="2,0"/>
                                                    <TextBlock Text="{Binding StockStatus}" 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Revenue -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Revenue, StringFormat='{}{0:N2}'}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold"
                                                      Foreground="#10B981"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Recent Sales -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="Recent Sales" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>
                            <Button Content="View All →" 
                                   Command="{Binding ViewAllSalesCommand}"
                                   HorizontalAlignment="Right"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="#3B82F6"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"/>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="320">
                            <ItemsControl ItemsSource="{Binding RecentSales}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9FAFB" 
                                               CornerRadius="8" 
                                               Padding="12"
                                               Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding CustomerName}" 
                                                                  FontSize="14" 
                                                                  FontWeight="SemiBold"
                                                                  Foreground="{DynamicResource TextPrimary}"/>
                                                        <TextBlock Text="{Binding TimeElapsed}" 
                                                                  FontSize="11" 
                                                                  Foreground="{DynamicResource TextSecondary}"
                                                                  Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding TotalAmount, StringFormat='{}{0:N2}'}" 
                                                              FontSize="16" 
                                                              FontWeight="Bold"
                                                              Foreground="#10B981"
                                                              VerticalAlignment="Center"/>
                                                </Grid>

                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                                                    <Border Background="{Binding StatusColor}" 
                                                           CornerRadius="4" 
                                                           Padding="6,2">
                                                        <TextBlock Text="{Binding Status}" 
                                                                  FontSize="10" 
                                                                  FontWeight="SemiBold"
                                                                  Foreground="White"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding ProductNamesDisplay}" 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}"
                                                              Margin="8,0,0,0"
                                                              VerticalAlignment="Center"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <!-- New Sale Button -->
                        <Button Command="{Binding CreateNewSaleCommand}" 
                               Background="#10B981"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,8,0"/>
                                                        <TextBlock Text="New Sale" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Add Product Button -->
                        <Button Command="{Binding AddProductCommand}" 
                               Background="#3B82F6"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="Add Product" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2563EB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- View Customers Button -->
                        <Button Command="{Binding ViewAllCustomersCommand}" 
                               Background="#8B5CF6"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="View Customers" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#7C3AED"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Generate Report Button -->
                        <Button Command="{Binding GenerateReportCommand}" 
                               Background="#F59E0B"
                               BorderThickness="0"
                               Padding="0,14"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="Generate Report" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D97706"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Row -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="Sales Analytics" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Daily" 
                                       Command="{Binding ChangeToDailyChartCommand}"
                                       Background="#E5E7EB"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       Margin="0,0,8,0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Weekly" 
                                       Command="{Binding ChangeToWeeklyChartCommand}"
                                       Background="#E5E7EB"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       Margin="0,0,8,0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Monthly" 
                                       Command="{Binding ChangeToMonthlyChartCommand}"
                                       Background="#E5E7EB"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Chart Placeholder (You can integrate LiveCharts or other charting library) -->
                        <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="8">
                            <ItemsControl ItemsSource="{Binding SalesAnalytics}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Background="Transparent">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Simple bar representation -->
                                                <Border Grid.Row="0" 
                                                       Background="#3B82F6" 
                                                       VerticalAlignment="Bottom"
                                                       CornerRadius="4,4,0,0"
                                                       ToolTip="{Binding Sales, Converter={StaticResource CurrencyPriceConverter}, ConverterParameter='Sales: {0}'}">
                                                    <Border.Height>
                                                        <MultiBinding Converter="{StaticResource SalesToHeightConverter}" ConverterParameter="250">
                                                            <Binding Path="Sales"/>
                                                            <Binding Path="DataContext.MaxSalesValue" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </Border.Height>
                                                </Border>

                                                <TextBlock Grid.Row="1" 
                                                          Text="{Binding Period}" 
                                                          FontSize="10" 
                                                          Foreground="{DynamicResource TextSecondary}"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,4,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Row 2: Top Categories and Customer Insights -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top Categories -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Top Categories" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding TopCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding CategoryName}" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold"
                                                      Foreground="{DynamicResource TextPrimary}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding UnitsSold}" 
                                                          FontSize="12" 
                                                          Foreground="{DynamicResource TextSecondary}"/>
                                                <TextBlock Text=" items sold" 
                                                          FontSize="12" 
                                                          Foreground="{DynamicResource TextSecondary}"
                                                          Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding SalesPercentage, StringFormat='{}{0:0.0}%'}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#3B82F6"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,12,0"/>

                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding Revenue, StringFormat='{}{0:N2}'}" 
                                                  FontSize="14" 
                                                  FontWeight="Bold"
                                                  Foreground="#10B981"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Customer Insights -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="Customer Insights" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <!-- Customer Stats -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="New This Month" 
                                          FontSize="12" 
                                          Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding NewCustomersThisMonth}" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="#10B981"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Returning Rate" 
                                          FontSize="12" 
                                          Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding ReturningCustomerPercentage, StringFormat='{}{0:0.0}%'}" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="#3B82F6"
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Grid.Row="2" 
                                  Text="Top Customers" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,12"/>

                        <!-- Top Customers List -->
                        <ItemsControl Grid.Row="3" ItemsSource="{Binding TopCustomers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" 
                                           CornerRadius="8" 
                                           Padding="10"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding CustomerName}" 
                                                          FontSize="13" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextPrimary}"/>
                                                <TextBlock Text="{Binding TransactionCount, StringFormat='{}{0} orders'}" 
                                                          FontSize="11" 
                                                          Foreground="{DynamicResource TextSecondary}"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding TotalSpent, StringFormat='{}{0:N2}'}" 
                                                      FontSize="13" 
                                                      FontWeight="Bold"
                                                      Foreground="#10B981"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
