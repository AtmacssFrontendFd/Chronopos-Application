<UserControl x:Class="ChronoPos.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{DynamicResource PageBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:SalesToHeightConverter x:Key="SalesToHeightConverter"/>
        <converters:IsPositiveConverter x:Key="IsPositiveConverter"/>
        <converters:IsNegativeConverter x:Key="IsNegativeConverter"/>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource CardShadowColor}" BlurRadius="10" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- KPI Card Style -->
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource CardShadowColor}" BlurRadius="8" ShadowDepth="1" Opacity="0.06" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Value Converter for Currency -->
        <Style x:Key="CurrencyTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20,15,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- KPIs -->
                <RowDefinition Height="Auto"/> <!-- Main Content Row 1 -->
                <RowDefinition Height="Auto"/> <!-- Charts -->
                <RowDefinition Height="Auto"/> <!-- Main Content Row 2 -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding DashboardTitle}" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="{Binding DashboardSubtitle}" 
                              FontSize="13" 
                              Foreground="{DynamicResource TextSecondary}"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Loading Indicator -->
                    <TextBlock Text="⟳" 
                              FontSize="16" 
                              Foreground="{DynamicResource AccentColor}"
                              VerticalAlignment="Center"
                              Margin="0,0,8,0"
                              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                              RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                        From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    
              <TextBlock Text="{Binding LastRefreshTimeDisplay}" 
                  FontSize="12" 
                  Foreground="{DynamicResource TextSecondary}"
                  VerticalAlignment="Center"
                  Margin="0,0,10,0"/>
              <Button Content="{Binding RefreshNowLabel}" 
                  Command="{Binding LoadDashboardDataCommand}"
                  Background="{DynamicResource AccentColor}"
                  Foreground="White"
                           BorderThickness="0"
                           Padding="16,8"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ChronoPosOrange}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
         <Border Grid.Row="0" Grid.RowSpan="5"
             Background="#80000000"
                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Panel.ZIndex="999">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4"/>
                    <TextBlock Text="{Binding LoadingLabel}" 
                              Foreground="White" 
                              Margin="0,10,0,0"
                              FontSize="14"/>
                </StackPanel>
            </Border>

            <!-- KPI Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Today's Sales Card -->
                <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding TodaysSalesLabel}" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding TodaysSales, Converter={StaticResource CurrencyPriceConverter}}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="{DynamicResource SuccessGreen}"/>
                        
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="TodaysTransactionCount"/>
                                            <Binding Path="TransactionsSuffixLabel"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                    </Grid>
                </Border>

                <!-- Monthly Sales Card -->
                <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding MonthlySalesLabel}" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MonthlySales, Converter={StaticResource CurrencyPriceConverter}}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="{DynamicResource Info}"/>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                                  <TextBlock Text="{Binding GrowthPercentage, StringFormat='{}{0:+0.0;-0.0;0}%'}" 
                                      FontSize="12" 
                                      FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GrowthPercentage, Converter={StaticResource IsPositiveConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource SuccessGreen}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding GrowthPercentage, Converter={StaticResource IsNegativeConverter}}" Value="True">
                                                <Setter Property="Foreground" Value="{DynamicResource ErrorRed}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding VsLastMonthLabel}" 
                                      FontSize="12" 
                                      Foreground="{DynamicResource TextSecondary}"
                                      Margin="4,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pending Orders Card -->
                <Border Grid.Column="4" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding PendingOrdersLabel}" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding PendingOrders}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="{DynamicResource ChronoPosOrange}"/>
                        
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6,0,0">
                                <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="ActiveTables"/>
                                            <Binding Path="ActiveTablesLabel"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                    </Grid>
                </Border>

                <!-- Low Stock Items Card -->
                <Border Grid.Column="6" Style="{StaticResource KpiCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding LowStockItemsLabel}" 
                                  FontSize="13" 
                                  Foreground="{DynamicResource TextSecondary}"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" 
                                  Text="{Binding LowStockItems}" 
                                  Style="{StaticResource CurrencyTextStyle}"
                                  Foreground="{DynamicResource ErrorRed}"/>
                        
               <Button Grid.Row="2" 
                   Content="{Binding ViewLowStockLabel}" 
                   Command="{Binding ViewLowStockItemsCommand}"
                   Background="Transparent"
                   BorderThickness="0"
                   Foreground="{DynamicResource PrimaryColor}"
                   FontSize="12"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Left"
                   Cursor="Hand"
                   Padding="0"
                   Margin="0,6,0,0"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Row 1: Popular Products, Recent Sales, Quick Actions -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Popular Products -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="{Binding PopularProductsLabel}" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimary}"/>
                <Button Content="{Binding ViewAllProductsLabel, StringFormat='{}{0} →'}" 
                    Command="{Binding ViewAllProductsCommand}"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource PrimaryColor}"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
                        </Grid>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding PopularProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                            <Border Background="{DynamicResource CardBackground}" 
                                           CornerRadius="8" 
                                           Padding="12"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Color/Icon -->
                                            <Border Grid.Column="0" 
                                                   Width="40" 
                                                   Height="40" 
                                                   CornerRadius="8"
                                                   Background="{Binding Color, FallbackValue='#FFC107'}"
                                                   Margin="0,0,12,0"/>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ProductName}" 
                                                          FontSize="14" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextPrimary}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding UnitsSold}" 
                                                              FontSize="12" 
                                                              FontWeight="Medium"
                                                              Foreground="{DynamicResource TextPrimary}"/>
                                                    <TextBlock Text="{Binding QuantitySoldLabel, StringFormat=' {0}'}" 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}" 
                                                              Margin="2,0"/>
                                                    <TextBlock Text="•" 
                                                              FontSize="12"
                                                              Foreground="{DynamicResource TextSecondary}"
                                                              Margin="4,0"/>
                                                    <TextBlock Text="{Binding StockStatus}" 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Revenue -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Revenue, Converter={StaticResource CurrencyPriceConverter}}" 
                                                      FontSize="14" 
                                                      FontWeight="Bold"
                                                      Foreground="{DynamicResource SuccessGreen}"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Recent Sales -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,16">
                <TextBlock Text="{Binding RecentSalesLabel}" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimary}"/>
                <Button Content="{Binding ViewAllSalesLabel, StringFormat='{}{0} →'}" 
                    Command="{Binding ViewAllSalesCommand}"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="{DynamicResource PrimaryColor}"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
                        </Grid>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding RecentSales}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                            <Border Background="{DynamicResource CardBackground}" 
                                               CornerRadius="8" 
                                               Padding="12"
                                               Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding CustomerName}" 
                                                                  FontSize="14" 
                                                                  FontWeight="SemiBold"
                                                                  Foreground="{DynamicResource TextPrimary}"/>
                                                        <TextBlock Text="{Binding TimeElapsed}" 
                                                                  FontSize="11" 
                                                                  Foreground="{DynamicResource TextSecondary}"
                                                                  Margin="0,2,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="1" 
                                                              Text="{Binding TotalAmount, Converter={StaticResource CurrencyPriceConverter}}" 
                                                              FontSize="16" 
                                                              FontWeight="Bold"
                                                              Foreground="{DynamicResource SuccessGreen}"
                                                              VerticalAlignment="Center"/>
                                                </Grid>

                                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                                                    <Border Background="{Binding StatusColor}" 
                                                           CornerRadius="4" 
                                                           Padding="6,2">
                                                        <TextBlock Text="{Binding Status}" 
                                                                  FontSize="10" 
                                                                  FontWeight="SemiBold"
                                                                  Foreground="White"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding ProductNamesDisplay}" 
                                                              FontSize="12" 
                                                              Foreground="{DynamicResource TextSecondary}"
                                                              Margin="8,0,0,0"
                                                              VerticalAlignment="Center"
                                                              TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                    </Grid>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding QuickActionsLabel}" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <!-- New Sale Button -->
               <Button Command="{Binding CreateNewSaleCommand}" 
                   Background="{DynamicResource SuccessGreen}"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding NewSaleLabel}" FontSize="14" FontWeight="SemiBold" Foreground="White"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource SuccessGreen}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Add Product Button -->
               <Button Command="{Binding AddProductCommand}" 
                   Background="{DynamicResource Info}"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="{Binding AddProductLabel}" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Info}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- View Customers Button -->
               <Button Command="{Binding ViewAllCustomersCommand}" 
                   Background="{DynamicResource Secondary}"
                               BorderThickness="0"
                               Padding="0,14"
                               Margin="0,0,0,10"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="{Binding ViewCustomersLabel}" 
                                                                  FontSize="14" 
                                                                  FontWeight="SemiBold" 
                                                                  Foreground="White"
                                                                  HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Generate Report Button -->
               <Button Command="{Binding GenerateReportCommand}" 
                   Background="{DynamicResource ChronoPosOrange}"
                               BorderThickness="0"
                               Padding="0,14"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <TextBlock Text="{Binding GenerateReportLabel}" 
                                                              FontSize="14" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ChronoPosDarkGold}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Charts Row -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="{Binding SalesAnalyticsLabel}" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimary}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{Binding DailyLabel}" 
                                       Command="{Binding ChangeToDailyChartCommand}"
                                       Background="{DynamicResource BorderLight}"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       Margin="0,0,8,0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                    <Button Content="{Binding WeeklyLabel}" 
                                       Command="{Binding ChangeToWeeklyChartCommand}"
                                       Background="{DynamicResource BorderLight}"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       Margin="0,0,8,0"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                    <Button Content="{Binding MonthlyLabel}" 
                                       Command="{Binding ChangeToMonthlyChartCommand}"
                                       Background="{DynamicResource BorderLight}"
                                       BorderThickness="0"
                                       Padding="12,6"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               CornerRadius="6"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- Chart Placeholder (You can integrate LiveCharts or other charting library) -->
                        <Border Grid.Row="1" Background="{DynamicResource CardBackground}" CornerRadius="8">
                            <ItemsControl ItemsSource="{Binding SalesAnalytics}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="4" Background="Transparent">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Simple bar representation -->
                              <Border Grid.Row="0" 
                                  Background="{DynamicResource Info}" 
                                                       VerticalAlignment="Bottom"
                                                       CornerRadius="4,4,0,0"
                                                       ToolTip="{Binding Sales, Converter={StaticResource CurrencyPriceConverter}, ConverterParameter='Sales: {0}'}">
                                                    <Border.Height>
                                                        <MultiBinding Converter="{StaticResource SalesToHeightConverter}" ConverterParameter="250">
                                                            <Binding Path="Sales"/>
                                                            <Binding Path="DataContext.MaxSalesValue" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                                        </MultiBinding>
                                                    </Border.Height>
                                                </Border>

                                                <TextBlock Grid.Row="1" 
                                                          Text="{Binding Period}" 
                                                          FontSize="10" 
                                                          Foreground="{DynamicResource TextSecondary}"
                                                          HorizontalAlignment="Center"
                                                          Margin="0,4,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Main Content Row 2: Top Categories and Customer Insights -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top Categories -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding TopCategoriesLabel}" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <ItemsControl Grid.Row="1" ItemsSource="{Binding TopCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding CategoryName}" 
                                                      FontSize="14" 
                                                      FontWeight="SemiBold"
                                                      Foreground="{DynamicResource TextPrimary}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding UnitsSold}" 
                                                          FontSize="12" 
                                                          Foreground="{DynamicResource TextSecondary}"/>
                                                <TextBlock Text="{Binding ItemsSoldLabel, StringFormat=' {0}'}" 
                                                          FontSize="12" 
                                                          Foreground="{DynamicResource TextSecondary}"
                                                          Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding SalesPercentage, StringFormat='{}{0:0.0}%'}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource Info}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,12,0"/>

                                        <TextBlock Grid.Column="2" 
                                                  Text="{Binding Revenue, Converter={StaticResource CurrencyPriceConverter}}" 
                                                  FontSize="14" 
                                                  FontWeight="Bold"
                                                  Foreground="{DynamicResource SuccessGreen}"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>

                <!-- Customer Insights -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                  Text="{Binding CustomerInsightsLabel}" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,16"/>

                        <!-- Customer Stats -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="{Binding NewCustomersMonthLabel}" 
                                          FontSize="12" 
                                          Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding NewCustomersThisMonth}" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource SuccessGreen}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="{Binding ReturningCustomersLabel}" 
                                          FontSize="12" 
                                          Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding ReturningCustomerPercentage, StringFormat='{}{0:0.0}%'}" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource Info}"
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Grid.Row="2" 
                                  Text="{Binding TopCustomersLabel}" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,12"/>

                        <!-- Top Customers List -->
                        <ItemsControl Grid.Row="3" ItemsSource="{Binding TopCustomers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                                     <Border Background="{DynamicResource CardBackground}" 
                                           CornerRadius="8" 
                                           Padding="10"
                                           Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding CustomerName}" 
                                                          FontSize="13" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextPrimary}"/>
                                                <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondary}" Margin="0,2,0,0">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding Path="TransactionCount"/>
                                                            <Binding Path="OrdersSuffixLabel"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding TotalSpent, Converter={StaticResource CurrencyPriceConverter}}" 
                                                      FontSize="13" 
                                                      FontWeight="Bold"
                                                      Foreground="{DynamicResource SuccessGreen}"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
