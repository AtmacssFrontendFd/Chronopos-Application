<UserControl x:Class="ChronoPos.Desktop.Views.ProductAttributeSidePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350"
             FontFamily="{DynamicResource PoppinsFontFallback}"
             Width="420">

    <UserControl.Resources>
        <!-- Input Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource SidePanelBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Primary}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding FormTitle}" 
                             FontSize="{DynamicResource FontSizeLarge}"
                             FontWeight="Bold"
                             Foreground="White"/>
                    <TextBlock Text="Configure product attributes and values" 
                             FontSize="{DynamicResource FontSizeSmall}"
                             Foreground="White"
                             Opacity="0.9"/>
                </StackPanel>

                <Button Grid.Column="1" 
                      Content="âœ•"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="White"
                      FontSize="16"
                      Width="30" Height="30"
                      Command="{Binding CancelCommand}"
                      Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" 
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="20">

            <!-- Tab 1: Create Product Attribute -->
            <TabItem Header="Create Attribute">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Attribute Name -->
                        <StackPanel>
                            <TextBlock Text="Attribute Name *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AttributeName, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource InputTextBoxStyle}"
                                   Tag="Enter attribute name (e.g., Color, Size)"/>
                        </StackPanel>

                        <!-- Attribute Name (Arabic) -->
                        <StackPanel>
                            <TextBlock Text="Attribute Name (Arabic)" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AttributeNameAr, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource InputTextBoxStyle}"
                                   TextAlignment="Right"
                                   FlowDirection="RightToLeft"
                                   Tag="Enter Arabic name (optional)"/>
                        </StackPanel>

                        <!-- Type -->
                        <StackPanel>
                            <TextBlock Text="Type *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding SelectedAttributeType}"
                                    ItemsSource="{Binding AttributeTypes}"
                                    Style="{StaticResource InputComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Required -->
                        <StackPanel>
                            <CheckBox IsChecked="{Binding IsRequired}"
                                    Content="Required Attribute"
                                    FontSize="{DynamicResource FontSizeNormal}"
                                    Foreground="{DynamicResource TextPrimary}"/>
                            <TextBlock Text="Check if this attribute is required for all products" 
                                     FontSize="{DynamicResource FontSizeSmall}"
                                     Foreground="{DynamicResource TextSecondary}"
                                     Margin="20,5,0,0"/>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel>
                            <TextBlock Text="Status *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding SelectedAttributeStatus}"
                                    ItemsSource="{Binding StatusOptions}"
                                    Style="{StaticResource InputComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Reset" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Command="{Binding ResetCommand}"
                                  Width="80"
                                  Margin="0,0,10,0"/>
                            <Button Content="Save Attribute" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Command="{Binding SaveAttributeCommand}"
                                  IsEnabled="{Binding CanSaveAttribute}"
                                  Width="120"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Tab 2: Create Product Attribute Value -->
            <TabItem Header="Create Value">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,20,0,0">
                    <StackPanel>
                        
                        <!-- Attribute Selection -->
                        <StackPanel>
                            <TextBlock Text="Select Attribute *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding SelectedAttributeForValue}"
                                    ItemsSource="{Binding AvailableAttributes}"
                                    DisplayMemberPath="Name"
                                    Style="{StaticResource InputComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Value -->
                        <StackPanel>
                            <TextBlock Text="Value *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AttributeValue, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource InputTextBoxStyle}"
                                   Tag="Enter attribute value (e.g., Red, Large)"/>
                        </StackPanel>

                        <!-- Value (Arabic) -->
                        <StackPanel>
                            <TextBlock Text="Value (Arabic)" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AttributeValueAr, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource InputTextBoxStyle}"
                                   TextAlignment="Right"
                                   FlowDirection="RightToLeft"
                                   Tag="Enter Arabic value (optional)"/>
                        </StackPanel>

                        <!-- Status -->
                        <StackPanel>
                            <TextBlock Text="Status *" 
                                     FontWeight="SemiBold"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     Margin="0,0,0,5"/>
                            <ComboBox SelectedItem="{Binding SelectedValueStatus}"
                                    ItemsSource="{Binding StatusOptions}"
                                    Style="{StaticResource InputComboBoxStyle}"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button Content="Reset" 
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Command="{Binding ResetValueFormCommand}"
                                  Width="80"
                                  Margin="0,0,10,0"/>
                            <Button Content="Save Value" 
                                  Style="{StaticResource PrimaryButtonStyle}"
                                  Command="{Binding SaveAttributeValueCommand}"
                                  IsEnabled="{Binding CanSaveValue}"
                                  Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer Status -->
        <Border Grid.Row="2" 
                Background="{DynamicResource BorderLight}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                         Text="{Binding StatusMessage}" 
                         FontSize="{DynamicResource FontSizeSmall}"
                         Foreground="{DynamicResource TextSecondary}"
                         VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1" 
                           IsIndeterminate="True"
                           Width="100" Height="4"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Background="{DynamicResource BorderLight}"
                           Foreground="{DynamicResource Primary}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>