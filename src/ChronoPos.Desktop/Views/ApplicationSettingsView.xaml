<UserControl x:Class="ChronoPos.Desktop.Views.ApplicationSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:ChronoPos.Desktop.ViewModels"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             xmlns:viewControls="clr-namespace:ChronoPos.Desktop.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:FlowDirectionToGridColumnConverter x:Key="FlowDirectionToGridColumnConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}"
          FlowDirection="{Binding CurrentFlowDirection}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <viewControls:CircularBackButton Grid.Column="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToGridColumnConverter}, ConverterParameter=start3}"
                                             VerticalAlignment="Center"
                                             Command="{Binding GoBackCommand}"
                                             ButtonSize="30"
                                             ButtonBackground="{DynamicResource SurfaceBackground}"
                                             ButtonForeground="{DynamicResource TextSecondary}"
                                             ButtonHoverBackground="{DynamicResource OverlayBackground}"
                                             ButtonHoverForeground="{DynamicResource TextSecondary}"
                                             ButtonPressedBackground="{DynamicResource OverlayBackground}"
                                             ButtonPressedForeground="{DynamicResource TextSecondary}"
                                             ButtonIcon="&lt;"
                                             IconSize="14"
                                             IconWeight="Bold"
                                             ButtonBorderThickness="1"
                                             ButtonBorderBrush="{DynamicResource BorderLight}"
                                             ButtonTooltip="Back to Settings"/>

            <!-- Header Text -->
            <TextBlock Grid.Column="1"
                       Text="Application Settings"
                       FontSize="28"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
        </Grid>
        
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,0,20,20">
            <StackPanel>

                <!-- Language Settings -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸŒ Language Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Choose your preferred language:"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="English"
                                    Width="120"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Command="{Binding SetEnglishLanguageCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"/>

                            <Button Content="Ø§Ø±Ø¯Ùˆ"
                                    Width="120"
                                    Height="40"
                                    Command="{Binding SetUrduLanguageCommand}"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding SelectedLanguageFromDb.LanguageName, StringFormat='Current: {0}'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Theme Settings -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¨ Theme Settings"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Light Theme"
                                    Width="120"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Command="{Binding SetLightThemeCommand}"
                                    Background="White"
                                    Foreground="Black"
                                    BorderBrush="Gray"
                                    BorderThickness="1"/>

                            <Button Content="Dark Theme"
                                    Width="120"
                                    Height="40"
                                    Command="{Binding SetDarkThemeCommand}"
                                    Background="#333333"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding SelectedTheme, StringFormat='Current: {0}'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Color Scheme Settings -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¨ Color Scheme"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>

                        <!-- Primary Colors -->
                        <TextBlock Text="Primary Colors:"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>

                        <ItemsControl ItemsSource="{Binding AvailablePrimaryColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="50"
                                            Height="50"
                                            Margin="5"
                                            Command="{Binding DataContext.SetPrimaryColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{Binding DisplayName}">
                                        <Button.Background>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Button.Background>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Background Colors -->
                        <TextBlock Text="Background Colors:"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,20,0,10"/>

                        <ItemsControl ItemsSource="{Binding AvailableBackgroundColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Width="50"
                                            Height="50"
                                            Margin="5"
                                            Command="{Binding DataContext.SetBackgroundColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            ToolTip="{Binding DisplayName}">
                                        <Button.Background>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Button.Background>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Layout Direction Settings -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“± Layout Direction"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Left to Right (LTR)"
                                    Width="150"
                                    Height="40"
                                    Margin="0,0,10,0"
                                    Command="{Binding SetLeftToRightDirectionCommand}"
                                    Background="#FF9800"
                                    Foreground="White"
                                    BorderThickness="0"/>

                            <Button Content="Right to Left (RTL)"
                                    Width="150"
                                    Height="40"
                                    Command="{Binding SetRightToLeftDirectionCommand}"
                                    Background="#9C27B0"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding SelectedLayoutDirection, StringFormat='Current: {0}'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Zoom Level Settings -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ” Zoom Level"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Select your preferred zoom level:"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>

                        <ComboBox ItemsSource="{Binding AvailableZoomLevels}"
                                  SelectedValue="{Binding SelectedZoomLevel}"
                                  SelectedValuePath="Key"
                                  DisplayMemberPath="Value"
                                  Width="250"
                                  HorizontalAlignment="Left"
                                  Height="40"
                                  FontSize="14"
                                  Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Zoom Out"
                                    Width="100"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Command="{Binding ZoomOutCommand}"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderThickness="0"/>

                            <Button Content="Reset (100%)"
                                    Width="100"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Command="{Binding ResetZoomCommand}"
                                    Background="#795548"
                                    Foreground="White"
                                    BorderThickness="0"/>

                            <Button Content="Zoom In"
                                    Width="100"
                                    Height="35"
                                    Command="{Binding ZoomInCommand}"
                                    Background="#607D8B"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding SelectedZoomLevelDisplay, StringFormat='Current: {0}'}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Status Message -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â„¹ï¸"
                                   FontSize="16"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Save Button -->
                <Button Content="Save All Settings"
                        Width="200"
                        Height="45"
                        HorizontalAlignment="Left"
                        Command="{Binding SaveAllSettingsCommand}"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,0,0,20"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>

</UserControl>
