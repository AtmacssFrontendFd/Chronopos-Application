<UserControl x:Class="ChronoPos.Desktop.Views.ExchangeSalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ChronoPos.Desktop.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="8" Padding="16" Margin="0,0,0,15" BorderThickness="1" BorderBrush="#E5E7EB">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Back Button -->
                <controls:CircularBackButton 
                    Grid.Column="0"
                    Command="{Binding BackCommand}"
                    ButtonSize="30"
                    ButtonBackground="{DynamicResource SurfaceBackground}"
                    ButtonForeground="{DynamicResource TextSecondary}"
                    ButtonHoverBackground="{DynamicResource OverlayBackground}"
                    ButtonHoverForeground="{DynamicResource TextSecondary}"
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Exchange Transaction" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock Text="{Binding InvoiceNumber, StringFormat='Original Invoice: {0}'}" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CustomerName}" FontSize="15" FontWeight="SemiBold" Foreground="Black" TextAlignment="Right"/>
                    <TextBlock Text="{Binding CustomerPhone}" FontSize="11" Foreground="#6B7280" Margin="0,3,0,0" TextAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Items to Return -->
            <Border Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Return Items Header -->
                    <TextBlock Grid.Row="0" Text="Items to Return" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,10"/>

                    <!-- Return Items List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReturnItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Info Row -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding ProductName}" FontSize="13" FontWeight="SemiBold" Foreground="#1F2937"/>
                                                    <TextBlock Text="{Binding OriginalQuantity, StringFormat='Original Qty: {0}'}" FontSize="11" Foreground="#6B7280" Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="2" Text="{Binding UnitPrice, StringFormat=C2}" FontSize="13" FontWeight="Bold" Foreground="#F59E0B" VerticalAlignment="Center"/>
                                            </Grid>

                                            <!-- Return Quantity Row -->
                                            <Grid Grid.Row="1" Margin="28,8,0,0" Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Return Qty:" FontSize="11" FontWeight="SemiBold" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                
                                                <TextBox Grid.Column="1" Text="{Binding ReturnQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                                         Width="80" Height="28" Padding="6" FontSize="12" HorizontalAlignment="Left"/>
                                                
                                                <TextBlock Grid.Column="2" Text="{Binding TotalPrice, StringFormat=C2}" FontSize="13" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Return Total -->
                    <Border Grid.Row="2" Background="#FEF2F2" BorderBrush="#FECACA" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Total Return Amount" FontSize="13" FontWeight="SemiBold" Foreground="#1F2937" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalReturnAmount, StringFormat=C2}" FontSize="16" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right: New Items to Give -->
            <Border Grid.Column="2" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- New Items Header -->
                    <TextBlock Grid.Row="0" Text="New Items to Give" FontSize="16" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,10"/>

                    <!-- Product Selection with Better UI -->
                    <Grid Grid.Row="1" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0" ItemsSource="{Binding AvailableProducts}" 
                                  SelectedItem="{Binding SelectedProduct}"
                                  DisplayMemberPath="Name" Height="36" Padding="10,6" FontSize="13"
                                  Background="White" BorderBrush="#D1D5DB" BorderThickness="1">
                            <ComboBox.Resources>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#F59E0B"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>

                        <Button Grid.Column="1" Content="Add" Command="{Binding AddProductToExchangeCommand}" 
                                Width="70" Height="36" Margin="10,0,0,0" Background="#10B981" Foreground="White" 
                                BorderThickness="0" FontWeight="SemiBold" Cursor="Hand" FontSize="12">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="8,0">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!-- New Items List -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding NewItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0FDF4" BorderBrush="#BBF7D0" BorderThickness="1" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Info Row -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ProductName}" FontSize="13" FontWeight="SemiBold" Foreground="#1F2937"/>
                                                    <TextBlock FontSize="11" Foreground="#6B7280" Margin="0,2,0,0">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="Price: {0}">
                                                                <Binding Path="UnitPrice" Converter="{StaticResource CurrencyPriceConverter}"/>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1" Text="{Binding TotalPrice, Converter={StaticResource CurrencyPriceConverter}}" FontSize="13" FontWeight="Bold" Foreground="#10B981" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                
                                                <Button Grid.Column="2" Content="âœ•" Command="{Binding DataContext.RemoveNewItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                        CommandParameter="{Binding}"
                                                        Width="26" Height="26" Background="#EF4444" Foreground="White" BorderThickness="0" FontWeight="Bold" Cursor="Hand" FontSize="12">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#DC2626"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </Grid>

                                            <!-- Quantity Row -->
                                            <Grid Grid.Row="1" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="Quantity:" FontSize="11" FontWeight="SemiBold" Foreground="#6B7280" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBox Grid.Column="1" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                         Width="80" Height="28" Padding="6" FontSize="12" HorizontalAlignment="Left"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- New Items Total -->
                    <Border Grid.Row="3" Background="#F0FDF4" BorderBrush="#BBF7D0" BorderThickness="2" CornerRadius="6" Padding="10" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Total New Amount" FontSize="13" FontWeight="SemiBold" Foreground="#1F2937" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalNewAmount, StringFormat=C2}" FontSize="16" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Difference Display -->
            <Border Grid.Column="0" Background="#FEF3C7" BorderBrush="#FCD34D" BorderThickness="2" CornerRadius="6" Padding="14">
                <Grid>
                    <TextBlock Text="Price Difference:" FontSize="13" FontWeight="SemiBold" Foreground="#92400E" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DifferenceText}" FontSize="16" FontWeight="Bold" Foreground="#B45309" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="14,0,0,0">
                <Button Content="Cancel" Command="{Binding CancelCommand}" 
                        Height="40" Width="110" Margin="0,0,10,0" Background="White" Foreground="#6B7280" 
                        BorderBrush="#D1D5DB" BorderThickness="1" FontWeight="SemiBold" FontSize="13" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6" Padding="12,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Save Exchange" Command="{Binding SaveExchangeCommand}" 
                        Height="40" Width="120" Margin="0,0,10,0" Background="#F59E0B" Foreground="White" 
                        BorderThickness="0" FontWeight="Bold" FontSize="13" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D97706"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Save &amp; Print" Command="{Binding SaveAndPrintExchangeCommand}" 
                        Height="40" Width="120" Background="#10B981" Foreground="White" 
                        BorderThickness="0" FontWeight="Bold" FontSize="13" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="12,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
