<UserControl x:Class="ChronoPos.Desktop.Views.Controls.RefreshButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="120">
    
    <Button Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
            MinWidth="{Binding MinButtonWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Width="{Binding ButtonWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="{Binding ButtonHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Padding="8,6"
            Margin="2"
            FontFamily="{DynamicResource PoppinsFontFallback}"
            Cursor="Hand"
            VerticalAlignment="Top"
            HorizontalAlignment="Right">
        
        <Button.Style>
            <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                <Setter Property="Background" Value="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                <Setter Property="Foreground" Value="{Binding ButtonForeground, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                
                <Style.Triggers>
                    <!-- Default style when no custom background is provided -->
                    <DataTrigger Binding="{Binding ButtonBackground, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ButtonForeground, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="{x:Null}">
                        <Setter Property="Foreground" Value="White"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
        
        <!-- Button Content with icon and text -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="{DynamicResource AppHorizontalAlignment}" 
                    VerticalAlignment="Center"
                    FlowDirection="LeftToRight">
            
            <!-- Icon -->
            <TextBlock Text="{Binding ButtonIcon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="{DynamicResource FontSizeSmall}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            
            <!-- Button Text -->
            <TextBlock Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="{DynamicResource FontSizeSmall}"
                       FontWeight="SemiBold"
                       FontFamily="{DynamicResource PoppinsFontFallback}"
                       VerticalAlignment="Center"
                       TextAlignment="Center"/>
            
        </StackPanel>
    </Button>
</UserControl>
