<Window x:Class="ChronoPos.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChronoPos - Login" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="{DynamicResource MainBackground}" 
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderLight}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SurfaceBackground}" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="{DynamicResource BorderLight}"
                    CornerRadius="10,10,0,0"
                    Padding="30,20">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ChronoPos" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryColor}"/>
                        <TextBlock Text="Point of Sale System" 
                                   FontSize="24" 
                                   FontWeight="Light" 
                                   Foreground="{DynamicResource TextPrimary}" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <TextBlock Text="âœ•" 
                                   FontSize="20" 
                                   Foreground="{DynamicResource TextSecondary}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1">
                <StackPanel MaxWidth="500" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,40">
                    <TextBlock Text="ðŸ‘¤" 
                               FontSize="64" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Welcome Back!" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Sign in to continue to ChronoPOS" 
                               FontSize="14" 
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>

                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="40"
                            MinWidth="450">
                        <StackPanel>
                            <!-- Username -->
                            <TextBlock Text="Username or Email" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       FontSize="13"
                                       Margin="0,0,0,8"/>
                            <TextBox x:Name="UsernameTextBox"
                                     Height="45"
                                     Padding="15"
                                     Background="{DynamicResource MainBackground}"
                                     Foreground="{DynamicResource TextPrimary}"
                                     BorderBrush="{DynamicResource BorderLight}"
                                     BorderThickness="2"
                                     FontSize="14"
                                     Margin="0,0,0,20"
                                     KeyDown="Input_KeyDown"/>

                            <!-- Password -->
                            <TextBlock Text="Password" 
                                       Foreground="{DynamicResource TextSecondary}"
                                       FontSize="13"
                                       Margin="0,0,0,8"/>
                            <PasswordBox x:Name="PasswordBox"
                                         Height="45"
                                         Padding="15"
                                         Background="{DynamicResource MainBackground}"
                                         Foreground="{DynamicResource TextPrimary}"
                                         BorderBrush="{DynamicResource BorderLight}"
                                         BorderThickness="2"
                                         FontSize="14"
                                         Margin="0,0,0,15"
                                         KeyDown="Input_KeyDown"/>

                            <!-- Remember Me -->
                            <CheckBox x:Name="RememberMeCheckBox"
                                      Content="Remember me"
                                      Foreground="{DynamicResource TextSecondary}"
                                      FontSize="13"
                                      Margin="0,0,0,25"/>

                            <!-- Error Message -->
                            <Border Background="{DynamicResource ErrorColorLight}"
                                    BorderBrush="{DynamicResource ErrorColor}"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="12"
                                    Margin="0,0,0,15"
                                    Visibility="Collapsed"
                                    x:Name="ErrorBorder">
                                <TextBlock x:Name="ErrorTextBlock"
                                           Foreground="{DynamicResource ErrorColor}"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Login Button -->
                            <Button Content="Sign In â†’"
                                    x:Name="LoginButton"
                                    Height="45"
                                    Background="{DynamicResource PrimaryColor}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Click="LoginButton_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="2"
                    x:Name="LoadingOverlay"
                    Background="#AA000000"
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="â³" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="Signing in..."
                               Foreground="White"
                               FontSize="18"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
