<Window x:Class="ChronoPos.Desktop.Views.CreateAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChronoPos - Create Admin User" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Loaded="Window_Loaded">
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="ðŸŽ‰ License Activated!" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#107C10"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Create your administrator account" 
                       FontSize="14" 
                       Foreground="#666666"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="500">
                <!-- Full Name -->
                <TextBlock Text="Full Name *" Foreground="#333333" Margin="0,0,0,5"/>
                <TextBox x:Name="FullNameTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Email -->
                <TextBlock Text="Email *" Foreground="#333333" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Username -->
                <TextBlock Text="Username *" Foreground="#333333" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="14"
                         Margin="0,0,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password *" Foreground="#333333" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="40"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password *" Foreground="#333333" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="40"
                             Padding="10"
                             FontSize="14"
                             Margin="0,0,0,15"/>

                <!-- Messages -->
                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <TextBlock x:Name="SuccessTextBlock"
                           Foreground="Green"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Button -->
        <Button Grid.Row="2"
                Content="Create Admin Account"
                x:Name="CreateAdminButton"
                HorizontalAlignment="Center"
                Width="200"
                Height="45"
                Background="#107C10"
                Foreground="White"
                FontSize="14"
                FontWeight="Bold"
                Margin="0,20,0,0"
                Click="CreateAdminButton_Click"/>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3"
                x:Name="LoadingOverlay"
                Background="#CC000000"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Creating admin user..."
                           Foreground="White"
                           FontSize="16"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>