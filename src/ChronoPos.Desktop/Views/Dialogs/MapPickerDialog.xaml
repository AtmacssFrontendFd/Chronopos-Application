<Window x:Class="ChronoPos.Desktop.Views.Dialogs.MapPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pick Location on Map"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource MainBackground}"
        FontFamily="{DynamicResource PoppinsFontFallback}">

    <Window.Resources>
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Pick Location on Map"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimary}"/>
                    <TextBlock Text="Click on the map or enter coordinates manually"
                               FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource TextSecondary}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Click="CloseButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Width="32"
                        Height="32"
                        ToolTip="Close"/>
            </Grid>
        </Border>

        <!-- Map Area (Placeholder) -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceBackground}"
                Margin="20">
            <Grid>
                <!-- Map Placeholder with Grid -->
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#E8F4F8" Offset="0"/>
                            <GradientStop Color="#D0E8F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <!-- Grid Lines -->
                    <Canvas>
                        <!-- Vertical lines -->
                        <Line X1="100" Y1="0" X2="100" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="200" Y1="0" X2="200" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="300" Y1="0" X2="300" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="400" Y1="0" X2="400" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="500" Y1="0" X2="500" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="600" Y1="0" X2="600" Y2="1000" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        
                        <!-- Horizontal lines -->
                        <Line X1="0" Y1="100" X2="1000" Y2="100" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="0" Y1="200" X2="1000" Y2="200" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="0" Y1="300" X2="1000" Y2="300" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                        <Line X1="0" Y1="400" X2="1000" Y2="400" Stroke="#B0C4DE" StrokeThickness="1" StrokeDashArray="5,5"/>
                    </Canvas>

                    <!-- Center Info -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ—ºï¸"
                                   FontSize="64"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        <TextBlock Text="Map Integration Coming Soon"
                                   FontSize="{DynamicResource FontSizeLarge}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter coordinates manually below"
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        
                        <!-- Coordinate Input -->
                        <Border Background="{DynamicResource CardBackground}"
                                BorderBrush="{DynamicResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,32,0,0"
                                Width="400">
                            <StackPanel>
                                <TextBlock Text="Coordinates"
                                           FontSize="{DynamicResource FontSizeMedium}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Margin="0,0,0,12"/>
                                
                                <!-- Latitude -->
                                <TextBlock Text="Latitude"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="LatitudeTextBox"
                                         Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"
                                         Margin="0,0,0,12"
                                         ToolTip="Enter latitude (e.g., 25.2048)"/>
                                
                                <!-- Longitude -->
                                <TextBlock Text="Longitude"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="LongitudeTextBox"
                                         Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"
                                         ToolTip="Enter longitude (e.g., 55.2708)"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer Actions -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Quick Location Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="ðŸ“ Dubai"
                            Click="SetDubaiLocation_Click"
                            Background="{DynamicResource SurfaceBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            Foreground="{DynamicResource TextPrimary}"
                            Padding="12,8"
                            FontSize="{DynamicResource FontSizeSmall}"
                            Cursor="Hand"
                            Margin="0,0,8,0"/>
                    <Button Content="ðŸ“ Abu Dhabi"
                            Click="SetAbuDhabiLocation_Click"
                            Background="{DynamicResource SurfaceBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            Foreground="{DynamicResource TextPrimary}"
                            Padding="12,8"
                            FontSize="{DynamicResource FontSizeSmall}"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Click="CancelButton_Click"
                        Background="{DynamicResource SurfaceBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        Foreground="{DynamicResource TextPrimary}"
                        Padding="20,10"
                        FontSize="{DynamicResource FontSizeSmall}"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        MinWidth="100"
                        Margin="0,0,12,0"/>

                <!-- Confirm Button -->
                <Button Grid.Column="2"
                        Content="Confirm Location"
                        Click="ConfirmButton_Click"
                        Style="{StaticResource ActionButtonStyle}"
                        MinWidth="150"/>
            </Grid>
        </Border>
    </Grid>
</Window>
