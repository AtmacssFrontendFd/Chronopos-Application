<Window x:Class="ChronoPos.Desktop.Views.Dialogs.ProductSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle, RelativeSource={RelativeSource Self}, Mode=OneWay}" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ChronoPos.Desktop;component/Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        <!-- Modern Tab Style -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                                <Setter Property="Foreground" Value="{StaticResource ChronoPosGold}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ChronoPosGold}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Product Unit Item Style -->
        <Style x:Key="ProductUnitItemButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource WhiteText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ChronoPosGold}"/>
                                <Setter TargetName="border" Property="Background" Value="#FFF9E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modifier Group Expander Style -->
        <Style x:Key="ModifierGroupExpander" TargetType="Expander">
            <Setter Property="Background" Value="{StaticResource WhiteText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderMedium}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{DynamicResource PageBackground}"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderMedium}">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource ChronoPosGold}"
                    CornerRadius="12,12,0,0"
                    Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="ProductNameText"
                                   Text="Select Product Options"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource WhiteText}"/>
                        <TextBlock x:Name="ProductPriceText"
                                   Text="Base Price: AED 0.00"
                                   FontSize="13"
                                   Foreground="{DynamicResource WhiteText}"
                                   Opacity="0.9"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="âœ•"
                            Width="32"
                            Height="32"
                            FontSize="16"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource WhiteText}"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            ToolTip="{Binding CloseTooltip, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="16">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area with Tabs -->
            <TabControl Grid.Row="1"
                        x:Name="OptionsTabControl"
                        Style="{StaticResource ModernTabControl}"
                        Margin="0">
                
                <!-- Product Units Tab -->
                <TabItem x:Name="ProductUnitsTab"
                         Header="{Binding ProductUnitsHeader, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                         Style="{StaticResource ModernTabItem}"
                         Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="20">
                        <StackPanel x:Name="ProductUnitsPanel">
                            <TextBlock Text="{Binding SelectUnitLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryText}"
                                       Margin="0,0,0,15"/>
                            <!-- Product units will be populated here -->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Product Combinations Tab -->
                <TabItem x:Name="ProductCombinationsTab"
                         Header="{Binding ProductCombinationsHeader, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                         Style="{StaticResource ModernTabItem}"
                         Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="20">
                        <StackPanel x:Name="ProductCombinationsPanel">
                            <TextBlock Text="{Binding SelectCombinationLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryText}"
                                       Margin="0,0,0,15"/>
                            <!-- Product combinations will be populated here -->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Product Modifiers Tab -->
                <TabItem x:Name="ProductModifiersTab"
                         Header="{Binding ModifiersHeader, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                         Style="{StaticResource ModernTabItem}"
                         Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="20">
                        <StackPanel x:Name="ProductModifiersPanel">
                            <TextBlock Text="{Binding CustomizeProductLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryText}"
                                       Margin="0,0,0,15"/>
                            <!-- Modifier groups will be populated here -->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Product Groups Tab -->
                <TabItem x:Name="ProductGroupsTab"
                         Header="{Binding ProductGroupsHeader, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                         Style="{StaticResource ModernTabItem}"
                         Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="20">
                        <StackPanel x:Name="ProductGroupsPanel">
                            <TextBlock Text="{Binding SelectGroupLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryText}"
                                       Margin="0,0,0,15"/>
                            <!-- Product groups will be populated here -->
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Footer with Price Summary and Actions -->
            <Border Grid.Row="2"
                    Background="{DynamicResource WhiteText}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="0,1,0,0"
                    Padding="20"
                    CornerRadius="0,0,12,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Price Summary -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalPriceLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                                   FontSize="13"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock x:Name="TotalPriceText"
                                   Text="AED 0.00"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ChronoPosGold}"/>
                    </StackPanel>

                    <!-- Action Buttons -->
            <Button Grid.Column="1"
                Content="{Binding CancelButtonLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                Width="120"
                Height="44"
                Margin="0,0,10,0"
                Style="{StaticResource SecondaryButtonStyle}"
                Click="CancelButton_Click"/>
                    
                    <Button Grid.Column="2"
                            x:Name="AddToCartButton"
                            Content="{Binding AddToCartButtonLabel, RelativeSource={RelativeSource AncestorType=Window}, Mode=OneWay}"
                            Width="150"
                            Height="44"
                            Style="{StaticResource ChronoPosGoldButton}"
                            Click="AddToCartButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
