<Window x:Class="ChronoPos.Desktop.Views.Dialogs.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Import Brands"
        Height="Auto"
        Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource PoppinsFontFallback}">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosDarkGold}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosGoldHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Option Card Style -->
        <Style x:Key="OptionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MainBackground}"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderLight}">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="4" 
                            Opacity="0.15" 
                            BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBackground}"
                    CornerRadius="12,12,0,0"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{DynamicResource BorderLight}"
                    Padding="24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0"
                            Width="48"
                            Height="48"
                            CornerRadius="24"
                            Background="#E0F2FE"
                            Margin="0,0,16,0">
                        <TextBlock Text="ðŸ“¥"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Import Brands"
                                   FontSize="{DynamicResource FontSizeLarge}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text="Download template or upload your CSV file"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Content="âœ•"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextSecondary}"
                            Cursor="Hand"
                            Width="32"
                            Height="32"
                            ToolTip="Close"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         Padding="24,24">
                <StackPanel>
                    <!-- Download Template Option -->
                    <Border Style="{StaticResource OptionCardStyle}"
                            MouseDown="DownloadTemplate_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    Width="56"
                                    Height="56"
                                    CornerRadius="8"
                                    Background="#F0F9FF"
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“„"
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Content -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Download CSV Template"
                                           FontSize="{DynamicResource FontSizeMedium}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"/>
                                <TextBlock Text="Get a sample CSV file with the correct format"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Arrow -->
                            <TextBlock Grid.Column="2"
                                       Text="â†’"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource Primary}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Upload File Option -->
                    <Border Style="{StaticResource OptionCardStyle}"
                            MouseDown="UploadFile_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Grid.Column="0"
                                    Width="56"
                                    Height="56"
                                    CornerRadius="8"
                                    Background="#FEF3C7"
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“¤"
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Content -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Upload CSV File"
                                           FontSize="{DynamicResource FontSizeMedium}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"/>
                                <TextBlock Text="Import brands from your prepared CSV file"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Arrow -->
                            <TextBlock Grid.Column="2"
                                       Text="â†’"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource Primary}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Info Box -->
                    <Border Background="#F0F9FF"
                            BorderBrush="#0EA5E9"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,8,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="ðŸ’¡"
                                       FontSize="20"
                                       VerticalAlignment="Top"
                                       Margin="0,0,12,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="CSV Format Requirements:"
                                           FontSize="{DynamicResource FontSizeSmall}"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           Margin="0,0,0,8"/>
                                <TextBlock FontSize="{DynamicResource FontSizeVerySmall}"
                                           Foreground="{DynamicResource TextSecondary}"
                                           TextWrapping="Wrap"
                                           LineHeight="20">
                                    <Run Text="â€¢ Columns: Name, NameArabic, Description, LogoUrl, IsActive"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ First row must be headers"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Use quotes for fields with commas"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ IsActive must be 'true' or 'false'"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBackground}"
                    CornerRadius="0,0,12,12"
                    BorderThickness="0,1,0,0"
                    BorderBrush="{DynamicResource BorderLight}"
                    Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                            Content="Close"
                            Click="CloseButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
