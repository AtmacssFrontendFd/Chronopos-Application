<Window x:Class="ChronoPos.Desktop.Views.Dialogs.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirmation"
        Height="Auto"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource PoppinsFontFallback}">

    <Window.Resources>
        <!-- Confirm Button Style (Primary - Gold) -->
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosDarkGold}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosGoldHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style (Secondary - Gray) -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style (Red for delete/danger actions) -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="32,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="16"
            BorderThickness="0">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Direction="270" 
                            ShadowDepth="2" 
                            Opacity="0.1" 
                            BlurRadius="24"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Content Section -->
            <StackPanel Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="40,50,40,30">
                
                <!-- Icon -->
                <Border x:Name="IconBorder"
                        Width="90"
                        Height="90"
                        CornerRadius="45"
                        Background="#FEF3C7"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,24">
                    <TextBlock x:Name="IconText"
                               Text="âš "
                               FontSize="40"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#F59E0B"/>
                </Border>

                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Text="Confirm Action"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,12"/>

                <!-- Message -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Disabled"
                             MaxHeight="200">
                    <TextBlock x:Name="MessageText"
                               Text="Are you sure you want to proceed with this action?"
                               FontSize="15"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </ScrollViewer>
            </StackPanel>

            <!-- Button Section -->
            <Border Grid.Row="1"
                    Background="#F9FAFB"
                    CornerRadius="0,0,16,16"
                    Padding="32,24">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    
                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Click="CancelButton_Click"
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,0,12,0"/>

                    <!-- Confirm Button -->
                    <Button x:Name="ConfirmButton"
                            Content="Confirm"
                            Click="ConfirmButton_Click"
                            Style="{StaticResource ConfirmButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
