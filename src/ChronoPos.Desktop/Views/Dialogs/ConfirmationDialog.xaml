<Window x:Class="ChronoPos.Desktop.Views.Dialogs.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirmation"
        SizeToContent="Height"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource PoppinsFontFallback}">

    <Window.Resources>
        <!-- Confirm Button Style (Primary - Gold) -->
        <Style x:Key="ConfirmButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosDarkGold}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ChronoPosGoldHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style (Secondary - Gray) -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style (Red for delete/danger actions) -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource MainBackground}"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderLight}">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Direction="270" 
                            ShadowDepth="3" 
                            Opacity="0.15" 
                            BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Content Section (reduced vertical spacing) -->
        <StackPanel Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="32,45,32,40">
                
        <!-- Icon -->
        <Border x:Name="IconBorder"
            Width="56"
            Height="56"
            CornerRadius="28"
            Background="#FEF3C7"
            HorizontalAlignment="Center"
            Margin="0,0,0,25">
            <TextBlock x:Name="IconText"
                   Text="âš "
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#F59E0B"/>
        </Border>

        <!-- Title -->
        <TextBlock x:Name="TitleText"
               Text="Confirm Action"
               FontSize="18"
               FontWeight="Bold"
               Foreground="{DynamicResource TextPrimary}"
               HorizontalAlignment="Center"
               TextAlignment="Center"
               Margin="0,0,0,17"/>

        <!-- Message -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 MaxHeight="110">
            <TextBlock x:Name="MessageText"
                   Text="Are you sure you want to proceed with this action?"
                   FontSize="13"
                   Foreground="{DynamicResource SecondaryText}"
                   TextWrapping="Wrap"
                   LineHeight="18"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
        </ScrollViewer>
        </StackPanel>

        <!-- Button Section -->
        <Border Grid.Row="1"
            Background="{DynamicResource SurfaceBackground}"
            CornerRadius="0,0,12,12"
            BorderThickness="0,1,0,0"
            BorderBrush="{DynamicResource BorderLight}"
            Padding="16,10">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    
                    <!-- Cancel Button -->
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Click="CancelButton_Click"
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,0,10,0"/>

                    <!-- Confirm Button -->
                    <Button x:Name="ConfirmButton"
                            Content="Confirm"
                            Click="ConfirmButton_Click"
                            Style="{StaticResource ConfirmButtonStyle}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
