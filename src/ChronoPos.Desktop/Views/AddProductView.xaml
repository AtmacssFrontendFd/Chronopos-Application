<UserControl x:Class="ChronoPos.Desktop.Views.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             xmlns:controls="clr-namespace:ChronoPos.Desktop.Controls"
             xmlns:local="clr-namespace:ChronoPos.Desktop.Views"
             mc:Ignorable="d" 
             Background="{DynamicResource MainBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        
        <!-- Section Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}"
                                Margin="5,0,5,0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource OverlayBackground}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(local:AddProductView.IsSelected)}" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource Primary}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{DynamicResource BorderCornerRadius}"/>
            <Setter Property="Margin" Value="{DynamicResource DefaultMarginThickness}"/>
            <Setter Property="Padding" Value="{DynamicResource CardPaddingThickness}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="LightGray" Direction="270" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="{DynamicResource DefaultMarginThickness}"/>
            <Setter Property="TextAlignment" Value="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Margin" Value="{DynamicResource DefaultMarginThickness}"/>
            <Setter Property="TextAlignment" Value="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="{DynamicResource DefaultMarginThickness}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FlowDirection" Value="{Binding CurrentFlowDirection}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Focusable="false"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextDisabled}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="{DynamicResource DefaultMarginThickness}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackground}" 
                BorderBrush="{DynamicResource BorderLight}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="{DynamicResource DefaultMarginThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="{DynamicResource AppHorizontalAlignment}">
                    <Button Background="Transparent" 
                            BorderThickness="0" 
                            Padding="{DynamicResource DefaultPaddingThickness}" 
                            Command="{Binding CancelCommand}"
                            Cursor="Hand"
                            ToolTip="{Binding BackButtonText}">
                        <TextBlock Text="Back" 
                                   FontSize="{DynamicResource FontSizeMedium}" 
                                   VerticalAlignment="Center" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="{DynamicResource DefaultMarginThickness}"/>
                    </Button>
                    <TextBlock Text="{Binding AddProductTitle}" 
                               FontSize="{DynamicResource FontSizeLarge}" 
                               FontWeight="Bold" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center"
                               TextAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}">
                    <TextBlock Text="ðŸ‘¤" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               VerticalAlignment="Center" 
                               Foreground="{DynamicResource TextSecondary}"
                               Margin="{DynamicResource DefaultMarginThickness}"/>
                    <TextBlock Text="{Binding CurrentUserDisplayText}" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content with Sidebar -->
        <Grid Grid.Row="1" FlowDirection="{Binding CurrentFlowDirection}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation (Left in LTR, Right in RTL) -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SurfaceBackground}" 
                    BorderBrush="{DynamicResource BorderLight}" 
                    BorderThickness="0,0,1,0"
                    FlowDirection="LeftToRight">
                <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                    
                    <!-- Sidebar Header -->
                    <TextBlock Text="{Binding ProductInfoTitle}" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               FontWeight="SemiBold" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource Primary}" 
                               Margin="{DynamicResource DefaultMarginThickness}"
                               TextAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
                    
                    <!-- Navigation Buttons -->
                    <Button Content="{Binding ProductInfoTitle}" 
                            Name="ProductInfoButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="ProductInfo"
                            Click="SidebarButton_Click"/>
                    
                    <Button Content="{Binding PricingTitle}" 
                            Name="TaxPricingButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="TaxPricing"
                            Click="SidebarButton_Click"/>
                    
                    <Button Content="{Binding BarcodesTitle}" 
                            Name="BarcodesButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="Barcodes"
                            Click="SidebarButton_Click"/>
                    
                    <Button Content="{Binding PicturesTitle}" 
                            Name="PicturesButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="Pictures"
                            Click="SidebarButton_Click"/>
                    
                    <Button Content="{Binding AttributesTitle}" 
                            Name="AttributesButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="Attributes"
                            Click="SidebarButton_Click"/>
                    
                    <Button Content="{Binding UnitPricesTitle}" 
                            Name="UnitPricesButton"
                            Style="{StaticResource SidebarButtonStyle}"
                            Tag="UnitPrices"
                            Click="SidebarButton_Click"/>

                </StackPanel>
            </Border>

            <!-- Content Area (Right in LTR, Left in RTL) -->
            <ScrollViewer Grid.Column="1" 
                          VerticalScrollBarVisibility="Auto" 
                          Padding="0,0,0,0"
                          FlowDirection="{Binding CurrentFlowDirection}">
                <StackPanel>
                
                    <!-- Product Information Section -->
                    <Border Name="ProductInfoSection" Style="{StaticResource FormSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding ProductInfoTitle}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Product Code and Name -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding CodeLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="{DynamicResource DisabledBackgroundBrush}"
                                         ToolTip="{Binding CodeTooltip}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding NameLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"
                                         MaxLength="100"
                                         ToolTip="{Binding NameTooltip}"
                                         x:Name="NameTextBox"/>
                            </StackPanel>

                            <!-- Category and Supplier -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding CategoryLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                    
                                    <Button Grid.Column="1" 
                                            Content="+ Add New"
                                            Command="{Binding OpenAddCategoryPanelCommand}"
                                            Background="#28A745"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="8,4"
                                            FontSize="10"
                                            Cursor="Hand"
                                            ToolTip="Add a new category"/>
                                </Grid>
                                
                                <ComboBox ItemsSource="{Binding Categories}"
                                          SelectedValue="{Binding CategoryId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="Name"
                                          Height="35"
                                          Margin="0,0,0,15"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding BrandLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox Height="35" 
                                         Margin="0,0,0,15"
                                         ItemsSource="{Binding AvailableBrands}"
                                         SelectedItem="{Binding SelectedBrand, Mode=TwoWay}"
                                         DisplayMemberPath="Name">
                                </ComboBox>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
                                <TextBlock Text="{Binding DescriptionLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"
                                         Height="80"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         MaxLength="300"/>
                            </StackPanel>

                            <!-- Additional Fields -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding PurchaseUnitLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox Height="35" Margin="0,0,0,15">
                                    <ComboBoxItem Content="Pieces"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding SellingUnitLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox Height="35" Margin="0,0,0,15">
                                    <ComboBoxItem Content="Pieces"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Group and Reorder Level -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding GroupLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox Height="35" Margin="0,0,0,15">
                                    <ComboBoxItem Content="Group 1"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding ReorderLevelFormLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding ReorderLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Checkboxes -->
                        <WrapPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox Content="{Binding CanReturnLabel}" 
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                            <CheckBox Content="{Binding IsGroupedLabel}" 
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Tax & Pricing Section -->
                <Border Name="TaxPricingSection" Style="{StaticResource FormSectionStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding PricingTitle}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding SellingPriceLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                <TextBlock Text="{Binding CostPriceLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="{Binding MarkupPercentLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Markup, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F8F9FA"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <CheckBox Content="{Binding TaxInclusivePriceLabel}" 
                                          IsChecked="{Binding IsTaxInclusivePrice, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,0,10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding ExciseLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding Excise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Product Barcodes Section -->
                <Border Name="BarcodesSection" Style="{StaticResource FormSectionStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding BarcodesTitle}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Add New Barcode Section -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="15" Background="#FFFFFF" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Add New Barcode" FontWeight="SemiBold" FontSize="14" Foreground="#495057" Margin="0,0,0,15"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Barcode Value Input -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Barcode Value:" FontSize="12" Foreground="#495057" Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding NewBarcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource FormTextBoxStyle}"
                                                 KeyDown="BarcodeTextBox_KeyDown"
                                                 Height="35"/>
                                    </StackPanel>
                                    
                                    <!-- Add Button -->
                                    <Button Grid.Row="0" Grid.Column="1" 
                                            Content="Add"
                                            Command="{Binding AddBarcodeCommand}"
                                            Style="{StaticResource FormButtonStyle}"
                                            Background="#28A745"
                                            Foreground="White"
                                            Width="80"
                                            Height="35"
                                            Margin="0,27,5,0"/>
                                    
                                    <!-- Generate Button -->
                                    <Button Grid.Row="0" Grid.Column="2" 
                                            Content="Generate"
                                            Command="{Binding GenerateBarcodeCommand}"
                                            Style="{StaticResource FormButtonStyle}"
                                            Background="#17A2B8"
                                            Foreground="White"
                                            Width="80"
                                            Height="35"
                                            Margin="0,27,0,0"
                                            ToolTip="Auto-generate a unique barcode"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Barcode Validation Message -->
                        <Border BorderBrush="#DC3545" 
                                BorderThickness="1" 
                                CornerRadius="6" 
                                Padding="10" 
                                Background="#F8D7DA" 
                                Margin="0,0,0,15"
                                Visibility="{Binding HasBarcodeValidationError, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding BarcodeValidationMessage}" 
                                       FontSize="12" 
                                       Foreground="#721C24"
                                       TextWrapping="Wrap"/>
                        </Border>

                        <!-- Existing Barcodes List -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="15" Background="#F8F9FA">
                            <StackPanel>
                                <TextBlock Text="Product Barcodes" FontWeight="SemiBold" FontSize="14" Foreground="#495057" Margin="0,0,0,15"/>
                                
                                <!-- Barcodes List -->
                                <ItemsControl ItemsSource="{Binding Barcodes}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#E0E0E0" 
                                                    BorderThickness="1" 
                                                    CornerRadius="6" 
                                                    Padding="15" 
                                                    Margin="0,0,0,10" 
                                                    Background="#FFFFFF">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="120"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Barcode Details -->
                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Value}" 
                                                                   FontFamily="Consolas"
                                                                   FontSize="14"
                                                                   FontWeight="SemiBold"
                                                                   Margin="0,0,0,5"/>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Type:" FontSize="11" Foreground="#6C757D" Margin="0,0,5,0"/>
                                                            <TextBlock Text="{Binding BarcodeType}" FontSize="11" Foreground="#495057" Margin="0,0,15,0"/>
                                                            <Border Background="#6C757D" 
                                                                    CornerRadius="8" 
                                                                    Padding="6,2"
                                                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="NEW" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                                            </Border>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    
                                                    <!-- Barcode Type Display -->
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding BarcodeType, StringFormat='{}Type: {0}'}" 
                                                                   FontSize="11" 
                                                                   Foreground="#6C757D"
                                                                   HorizontalAlignment="Center"/>
                                                        <Border Background="#007BFF" 
                                                                CornerRadius="10" 
                                                                Padding="8,3"
                                                                Margin="0,3,0,0">
                                                            <TextBlock Text="{Binding BarcodeType}" 
                                                                       FontSize="9" 
                                                                       FontWeight="Bold" 
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <!-- Remove Button -->
                                                    <Button Grid.Column="2" 
                                                            Content="âœ•"
                                                            Command="{Binding DataContext.RemoveBarcodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource FormButtonStyle}"
                                                            Background="#DC3545"
                                                            Foreground="White"
                                                            Width="35"
                                                            Height="35"
                                                            FontSize="14"
                                                            VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- No Barcodes Message -->
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="2" 
                                        CornerRadius="8"
                                        Padding="30"
                                        Background="#FAFAFA"
                                        Visibility="{Binding Barcodes.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=0}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ“‹" FontSize="40" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                        <TextBlock Text="No barcodes added yet" FontSize="14" HorizontalAlignment="Center" Foreground="#6C757D" Margin="0,10,0,0"/>
                                        <TextBlock Text="Add barcode values above or click Generate" FontSize="11" HorizontalAlignment="Center" Foreground="#6C757D" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Barcode Tips -->
                        <Border BorderBrush="#17A2B8" BorderThickness="1" CornerRadius="6" Padding="15" Background="#E7F8FD" Margin="0,15,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ Barcode Tips" FontWeight="SemiBold" FontSize="12" Foreground="#17A2B8" Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ EAN-13: Standard European barcodes (13 digits)" FontSize="11" Foreground="#495057" Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ UPC-A: Standard US/Canada barcodes (12 digits)" FontSize="11" Foreground="#495057" Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Code 128: Alphanumeric barcodes for internal use" FontSize="11" Foreground="#495057" Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ QR Code: 2D barcodes for mobile scanning" FontSize="11" Foreground="#495057" Margin="0,0,0,3"/>
                                <TextBlock Text="â€¢ Use Generate button to create unique barcodes automatically" FontSize="11" Foreground="#495057"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Product Pictures Section -->
                <Border Name="PicturesSection" Style="{StaticResource FormSectionStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding PicturesTitle}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Unified Image Gallery -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" Padding="20" Background="#F8F9FA">
                            <StackPanel>
                                <!-- Horizontal Image Gallery -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                    <StackPanel Orientation="Horizontal">
                                        
                                        <!-- Product Images -->
                                        <ItemsControl ItemsSource="{Binding ProductImages}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="0,0,15,0">
                                                        <!-- Image Thumbnail -->
                                                        <Border Width="120" Height="120" 
                                                                BorderBrush="#DDD" 
                                                                BorderThickness="1" 
                                                                CornerRadius="8"
                                                                Background="White">
                                                            <Image Source="{Binding ImageUrl}" 
                                                                   Stretch="UniformToFill"/>
                                                        </Border>
                                                        
                                                        <!-- Primary Checkbox (Radio behavior) -->
                                                        <CheckBox IsChecked="{Binding IsPrimary, Mode=TwoWay}" 
                                                                  Command="{Binding DataContext.SetPrimaryImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                  CommandParameter="{Binding}"
                                                                  Content="Primary"
                                                                  HorizontalAlignment="Center"
                                                                  FontSize="11"
                                                                  Margin="0,8,0,0"/>
                                                        
                                                        <!-- Remove Button -->
                                                        <Border Background="#DC3545"
                                                                CornerRadius="12"
                                                                Width="25"
                                                                Height="25"
                                                                HorizontalAlignment="Center"
                                                                Margin="0,5,0,0">
                                                            <Button Content="âœ•"
                                                                    Command="{Binding DataContext.RemoveProductImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}"
                                                                    Background="Transparent"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    FontSize="12"
                                                                    Cursor="Hand"
                                                                    Width="25"
                                                                    Height="25"/>
                                                        </Border>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Add Button (Always at the end) -->
                                        <StackPanel>
                                            <Border Width="120" 
                                                    Height="120" 
                                                    Background="#28A745" 
                                                    BorderBrush="#28A745"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Cursor="Hand">
                                                <Button Background="Transparent"
                                                        BorderThickness="0"
                                                        Command="{Binding ChooseImageCommand}"
                                                        Cursor="Hand">
                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="+" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Add Image" FontSize="11" Foreground="White" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </Border>
                                        </StackPanel>
                                        
                                    </StackPanel>
                                </ScrollViewer>
                                
                                <!-- No Images Message (Only when no images exist) -->
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="2" 
                                        CornerRadius="8"
                                        Padding="30"
                                        Background="#FAFAFA"
                                        Margin="0,15,0,0"
                                        Visibility="{Binding ProductImages.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=0}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ“·" FontSize="40" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                        <TextBlock Text="No images added yet" FontSize="14" HorizontalAlignment="Center" Foreground="#6C757D" Margin="0,10,0,0"/>
                                        <TextBlock Text="Click the + button above to add your first image" FontSize="11" HorizontalAlignment="Center" Foreground="#6C757D" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Product Attributes Section -->
                <Border Name="AttributesSection" Style="{StaticResource FormSectionStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding AttributesTitle}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding UnitOfMeasurementLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding UnitsOfMeasurement}"
                                          SelectedItem="{Binding SelectedUnitOfMeasurement, Mode=TwoWay}"
                                          SelectedValue="{Binding SelectedUnitOfMeasurementId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="DisplayName"
                                          Height="35" 
                                          Margin="0,0,0,15"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding MaxDiscountLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding MaxDiscount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>

                        <WrapPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <CheckBox Content="{Binding AllowDiscountsLabel}" 
                                      IsChecked="{Binding IsDiscountAllowed, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                            <CheckBox Content="{Binding AllowPriceChangesLabel}" 
                                      IsChecked="{Binding IsPriceChangeAllowed, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                            <CheckBox Content="{Binding UseSerialNumbersLabel}" 
                                      IsChecked="{Binding IsUsingSerialNumbers, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                            <CheckBox Content="{Binding IsServiceLabel2}" 
                                      IsChecked="{Binding IsService, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                        </WrapPanel>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding AgeRestrictionYearsLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding AgeRestriction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding ProductColorLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <Border BorderBrush="#DEE2E6" 
                                        BorderThickness="1" 
                                        CornerRadius="6" 
                                        Padding="10"
                                        Background="White"
                                        Margin="0,0,0,15">
                                    <controls:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Unit Prices Section -->
                <Border Name="UnitPricesSection" Style="{StaticResource FormSectionStyle}" Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="{Binding StockControlUnitPricesLabel}" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <!-- Stock Tracking Enable/Disable -->
                        <CheckBox Content="{Binding TrackStockForProductLabel}" 
                                  IsChecked="{Binding IsStockTracked, Mode=TwoWay}"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  Margin="0,0,0,15"/>
                        
                        <!-- Stock Control Fields (Enabled when stock tracking is on) -->
                        <Grid IsEnabled="{Binding IsStockFieldsEnabled}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Store Selection and Initial Stock -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding StoreLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailableStores}"
                                          SelectedValue="{Binding SelectedStoreId, Mode=TwoWay}"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="Name"
                                          Height="35"
                                          Margin="0,0,0,15"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding InitialStockLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding InitialStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                            
                            <!-- Stock Levels -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding MinimumStockLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding MinimumStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding MaximumStockLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding MaximumStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                            
                            <!-- Reorder Settings -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding ReorderLevelLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding ReorderLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding ReorderQuantityLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding ReorderQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                            
                            <!-- Average Cost -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="{Binding AverageCostLabel}" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding AverageCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                         Style="{StaticResource FormTextBoxStyle}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Additional Stock Options -->
                        <WrapPanel Orientation="Horizontal" 
                                   Margin="0,10,0,0"
                                   IsEnabled="{Binding IsStockFieldsEnabled}">
                            <CheckBox Content="{Binding AllowNegativeStockLabel2}" 
                                      IsChecked="{Binding AllowNegativeStock, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                            <CheckBox Content="{Binding UseSerialNumbersLabel2}" 
                                      IsChecked="{Binding IsUsingSerialNumbers, Mode=TwoWay}"
                                      FontSize="12"
                                      Margin="0,0,20,10"/>
                        </WrapPanel>
                        
                        <!-- Stock Validation Messages -->
                        <ItemsControl ItemsSource="{Binding StockValidationErrors}"
                                      Margin="0,10,0,0"
                                      Visibility="{Binding StockValidationErrors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Value}" 
                                               FontSize="11" 
                                               Foreground="#DC3545"
                                               TextWrapping="Wrap"
                                               Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer Actions -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CardBackground}" 
                BorderBrush="{DynamicResource BorderLight}" 
                BorderThickness="0,1,0,0">
            <Grid Margin="{DynamicResource DefaultMarginThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource TextSecondary}"
                               Visibility="{Binding HasValidationErrors, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding ValidationMessage}" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource Error}"
                               TextWrapping="Wrap"
                               Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="{Binding CancelButtonText}" 
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="{DynamicResource TextSecondary}"
                            Foreground="White"/>
                    <Button Content="{Binding SaveChangesButtonText}" 
                            Command="{Binding SaveProductCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="{DynamicResource Primary}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" 
                Background="{DynamicResource OverlayBackground}" 
                Opacity="0.8"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Width="200" 
                             Height="4" 
                             Margin="{DynamicResource DefaultMarginThickness}"
                             Background="{DynamicResource CardBackground}"
                             Foreground="{DynamicResource Primary}"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="{DynamicResource TextPrimary}" 
                           FontSize="{DynamicResource FontSizeMedium}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           HorizontalAlignment="Center"
                           Margin="{DynamicResource DefaultMarginThickness}"/>
            </StackPanel>
        </Border>

        <!-- Category Side Panel - FULL SCREEN OVERLAY -->
        <Border Grid.RowSpan="3"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderLight}"
                BorderThickness="1"
                CornerRadius="{DynamicResource BorderCornerRadius}"
                Width="400"
                HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToReverseHorizontalAlignmentConverter}}"
                VerticalAlignment="Stretch"
                Margin="{DynamicResource DefaultMarginThickness}"
                Panel.ZIndex="1000"
                FlowDirection="{Binding CurrentFlowDirection}">
            
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="8" Opacity="0.3" BlurRadius="15"/>
            </Border.Effect>

            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsCategoryPanelOpen}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="{DynamicResource CardPaddingThickness}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="{DynamicResource DefaultMarginThickness}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal"
                                HorizontalAlignment="{DynamicResource AppHorizontalAlignment}">
                        <TextBlock Text="ðŸ“" 
                                   FontSize="{DynamicResource FontSizeLarge}" 
                                   VerticalAlignment="Center" 
                                   Margin="{DynamicResource DefaultMarginThickness}"/>
                        <TextBlock Text="{Binding AddNewCategoryTitle}" 
                                   FontSize="{DynamicResource FontSizeLarge}" 
                                   FontWeight="SemiBold"
                                   FontFamily="{DynamicResource PoppinsFontFallback}"
                                   Foreground="{DynamicResource TextPrimary}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Content="âœ•" 
                            Command="{Binding CloseCategoryPanelCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="{DynamicResource TextSecondary}"
                            FontSize="{DynamicResource FontSizeMedium}"
                            FontFamily="{DynamicResource PoppinsFontFallback}"
                            Padding="{DynamicResource DefaultPaddingThickness}"
                            Cursor="Hand"
                            ToolTip="{Binding ClosePanelTooltip}"/>
                </Grid>

                <!-- Form Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        
                        <!-- Category Name -->
                        <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                            <TextBlock Text="{Binding CategoryNameLabel}" 
                                       Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding CurrentCategory.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"
                                     MaxLength="100"/>
                        </StackPanel>

                        <!-- Category Name (Arabic) -->
                        <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                            <TextBlock Text="{Binding CategoryNameArabicLabel}" 
                                       Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding CurrentCategory.NameArabic, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"
                                     MaxLength="100"
                                     FlowDirection="RightToLeft"/>
                        </StackPanel>

                        <!-- Parent Category -->
                        <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                            <TextBlock Text="{Binding ParentCategoryLabel}" 
                                       Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding ParentCategories}"
                                      SelectedValue="{Binding CurrentCategory.ParentCategoryId, Mode=TwoWay}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      MinHeight="{DynamicResource ButtonHeight}"
                                      FontSize="{DynamicResource FontSizeSmall}"
                                      FontFamily="{DynamicResource PoppinsFontFallback}"
                                      Background="{DynamicResource CardBackground}"
                                      Foreground="{DynamicResource TextPrimary}"
                                      BorderBrush="{DynamicResource BorderLight}"
                                      FlowDirection="{Binding CurrentFlowDirection}"/>
                        </StackPanel>

                        <!-- Display Order -->
                        <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                            <TextBlock Text="{Binding DisplayOrderLabel}" 
                                       Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding CurrentCategory.DisplayOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"/>
                            <TextBlock Text="{Binding DisplayOrderHelp}" 
                                       FontSize="{DynamicResource FontSizeVerySmall}" 
                                       FontFamily="{DynamicResource PoppinsFontFallback}"
                                       Foreground="{DynamicResource TextSecondary}" 
                                       Margin="{DynamicResource DefaultMarginThickness}"
                                       TextAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                            <TextBlock Text="{Binding DescriptionLabel}" 
                                       Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding CurrentCategory.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLength="500"/>
                        </StackPanel>

                        <!-- Active Status -->
                        <CheckBox Content="{Binding ActiveCategoryLabel}" 
                                  IsChecked="{Binding CurrentCategory.IsActive, Mode=TwoWay}"
                                  FontSize="{DynamicResource FontSizeSmall}"
                                  FontFamily="{DynamicResource PoppinsFontFallback}"
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="{DynamicResource DefaultMarginThickness}"
                                  FlowDirection="{Binding CurrentFlowDirection}"/>

                        <!-- Information Panel -->
                        <Border BorderBrush="{DynamicResource Info}" 
                                BorderThickness="1" 
                                CornerRadius="{DynamicResource BorderCornerRadius}" 
                                Padding="{DynamicResource DefaultPaddingThickness}" 
                                Background="{DynamicResource OverlayBackground}" 
                                Margin="{DynamicResource DefaultMarginThickness}">
                            <StackPanel>
                                <TextBlock Text="{Binding CategoryInfoTitle}" 
                                           FontWeight="SemiBold" 
                                           FontSize="{DynamicResource FontSizeSmall}" 
                                           FontFamily="{DynamicResource PoppinsFontFallback}"
                                           Foreground="{DynamicResource Info}" 
                                           Margin="{DynamicResource DefaultMarginThickness}"
                                           TextAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToTextAlignmentConverter}}"/>
                                <TextBlock Text="{Binding CategoryInfoNameRequired}" 
                                           FontSize="{DynamicResource FontSizeVerySmall}" 
                                           FontFamily="{DynamicResource PoppinsFontFallback}"
                                           Foreground="{DynamicResource TextPrimary}" 
                                           Margin="{DynamicResource DefaultMarginThickness}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CategoryInfoArabicOptional}" 
                                           FontSize="{DynamicResource FontSizeVerySmall}" 
                                           FontFamily="{DynamicResource PoppinsFontFallback}"
                                           Foreground="{DynamicResource TextPrimary}" 
                                           Margin="{DynamicResource DefaultMarginThickness}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CategoryInfoParentHierarchy}" 
                                           FontSize="{DynamicResource FontSizeVerySmall}" 
                                           FontFamily="{DynamicResource PoppinsFontFallback}"
                                           Foreground="{DynamicResource TextPrimary}" 
                                           Margin="{DynamicResource DefaultMarginThickness}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CategoryInfoDisplayOrder}" 
                                           FontSize="{DynamicResource FontSizeVerySmall}" 
                                           FontFamily="{DynamicResource PoppinsFontFallback}"
                                           Foreground="{DynamicResource TextPrimary}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <!-- Footer Actions -->
                <StackPanel Grid.Row="2" 
                            Orientation="Vertical" 
                            Margin="{DynamicResource DefaultMarginThickness}">
                    
                    <!-- Validation Messages -->
                    <TextBlock Text="{Binding ValidationMessage}" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               FontFamily="{DynamicResource PoppinsFontFallback}"
                               Foreground="{DynamicResource Error}"
                               TextWrapping="Wrap"
                               Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="{DynamicResource DefaultMarginThickness}"/>
                    
                    <Button Content="{Binding SaveCategoryButtonText}" 
                            Command="{Binding SaveCategoryCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="{DynamicResource Primary}"
                            Foreground="White"/>
                    
                    <Button Content="{Binding CancelButtonText}" 
                            Command="{Binding CloseCategoryPanelCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="{DynamicResource TextSecondary}"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
