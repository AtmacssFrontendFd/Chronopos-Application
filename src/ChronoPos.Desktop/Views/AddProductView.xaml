<UserControl x:Class="ChronoPos.Desktop.Views.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             xmlns:controls="clr-namespace:ChronoPos.Desktop.Controls"
             mc:Ignorable="d" 
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseStringToVisibilityConverter x:Key="InverseStringToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        
        <Style x:Key="FormSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”™" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Cursor="Hand"/>
                    <TextBlock Text="Add Product" FontSize="18" FontWeight="Bold" Foreground="#495057" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ‘¤" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Administrator" FontSize="12" Foreground="#6C757D" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Form Fields -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    
                    <!-- Basic Information Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Basic Information" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Product Code *" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             IsReadOnly="True"
                                             Background="#F8F9FA"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Product Name *" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             MaxLength="100"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Description" Style="{StaticResource FieldLabelStyle}"/>
                            <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLength="300"/>

                            <TextBlock Text="Category" Style="{StaticResource FieldLabelStyle}"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      SelectedValue="{Binding CategoryId, Mode=TwoWay}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Height="35"
                                      Margin="0,0,0,15"/>
                        </StackPanel>
                    </Border>

                    <!-- Pricing Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Pricing &amp; Costs" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Selling Price *" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Price, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                                    <TextBlock Text="Cost Price" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                    <TextBlock Text="Markup %" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Markup, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"
                                             IsReadOnly="True"
                                             Background="#F8F9FA"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <CheckBox Content="Tax Inclusive Price" 
                                              IsChecked="{Binding IsTaxInclusivePrice, Mode=TwoWay}"
                                              FontSize="12"
                                              Margin="0,0,0,10"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Excise" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding Excise, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Measurement &amp; Business Rules -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Measurement &amp; Rules" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Measurement Unit" Style="{StaticResource FieldLabelStyle}"/>
                                    <ComboBox Text="{Binding MeasurementUnit, Mode=TwoWay}" 
                                              IsEditable="True"
                                              Height="35" 
                                              Margin="0,0,0,15">
                                        <ComboBoxItem Content="pcs"/>
                                        <ComboBoxItem Content="kg"/>
                                        <ComboBoxItem Content="lbs"/>
                                        <ComboBoxItem Content="liters"/>
                                        <ComboBoxItem Content="meters"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Max Discount %" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding MaxDiscount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <WrapPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <CheckBox Content="Allow Discounts" 
                                          IsChecked="{Binding IsDiscountAllowed, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                                <CheckBox Content="Allow Price Changes" 
                                          IsChecked="{Binding IsPriceChangeAllowed, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                                <CheckBox Content="Use Serial Numbers" 
                                          IsChecked="{Binding IsUsingSerialNumbers, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                                <CheckBox Content="Is Service" 
                                          IsChecked="{Binding IsService, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                            </WrapPanel>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Age Restriction (years)" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding AgeRestriction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Product Color" Style="{StaticResource FieldLabelStyle}"/>
                                    <Border BorderBrush="#DEE2E6" 
                                            BorderThickness="1" 
                                            CornerRadius="6" 
                                            Padding="10"
                                            Background="White"
                                            Margin="0,0,0,15">
                                        <controls:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Stock Control Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“¦ Stock Control" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <!-- Stock Tracking Enable/Disable -->
                            <CheckBox Content="Track Stock for this Product" 
                                      IsChecked="{Binding IsStockTracked, Mode=TwoWay}"
                                      FontSize="13"
                                      FontWeight="Medium"
                                      Margin="0,0,0,15"/>
                            
                            <!-- Stock Control Fields (Enabled when stock tracking is on) -->
                            <Grid IsEnabled="{Binding IsStockFieldsEnabled}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Store Selection and Initial Stock -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Store" Style="{StaticResource FieldLabelStyle}"/>
                                    <ComboBox ItemsSource="{Binding AvailableStores}"
                                              SelectedValue="{Binding SelectedStoreId, Mode=TwoWay}"
                                              SelectedValuePath="Id"
                                              DisplayMemberPath="Name"
                                              Height="35"
                                              Margin="0,0,0,15"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Initial Stock" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding InitialStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                                
                                <!-- Stock Levels -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Minimum Stock" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding MinimumStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Maximum Stock" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding MaximumStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                                
                                <!-- Reorder Settings -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Reorder Level" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding ReorderLevel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Reorder Quantity" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding ReorderQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                                
                                <!-- Average Cost -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Average Cost" Style="{StaticResource FieldLabelStyle}"/>
                                    <TextBox Text="{Binding AverageCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                             Style="{StaticResource FormTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Additional Stock Options -->
                            <WrapPanel Orientation="Horizontal" 
                                       Margin="0,10,0,0"
                                       IsEnabled="{Binding IsStockFieldsEnabled}">
                                <CheckBox Content="Allow Negative Stock" 
                                          IsChecked="{Binding AllowNegativeStock, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                                <CheckBox Content="Use Serial Numbers" 
                                          IsChecked="{Binding IsUsingSerialNumbers, Mode=TwoWay}"
                                          FontSize="12"
                                          Margin="0,0,20,10"/>
                            </WrapPanel>
                            
                            <!-- Stock Validation Messages -->
                            <ItemsControl ItemsSource="{Binding StockValidationErrors}"
                                          Margin="0,10,0,0"
                                          Visibility="{Binding StockValidationErrors.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Value}" 
                                                   FontSize="11" 
                                                   Foreground="#DC3545"
                                                   TextWrapping="Wrap"
                                                   Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Barcodes Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š Product Barcodes" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" 
                                         Text="{Binding NewBarcode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource FormTextBoxStyle}"
                                         KeyDown="BarcodeTextBox_KeyDown"
                                         Margin="0,0,10,0"/>
                                
                                <Button Grid.Column="1" 
                                        Content="Add Barcode"
                                        Command="{Binding AddBarcodeCommand}"
                                        Style="{StaticResource FormButtonStyle}"
                                        Background="#28A745"
                                        Foreground="White"
                                        Width="100"
                                        Margin="0,0,5,15"/>
                                
                                <Button Grid.Column="2" 
                                        Content="ðŸŽ² Generate"
                                        Command="{Binding GenerateBarcodeCommand}"
                                        Style="{StaticResource FormButtonStyle}"
                                        Background="#17A2B8"
                                        Foreground="White"
                                        Width="100"
                                        Margin="0,0,0,15"
                                        ToolTip="Auto-generate a unique barcode"/>
                            </Grid>

                            <!-- Barcode Validation Message -->
                            <TextBlock Text="{Binding BarcodeValidationMessage}" 
                                       FontSize="11" 
                                       Foreground="#DC3545"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding HasBarcodeValidationError, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Margin="0,0,0,10"/>

                            <!-- Barcode List -->
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" MaxHeight="120">
                                <ListBox ItemsSource="{Binding Barcodes}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Value}" 
                                                           VerticalAlignment="Center"
                                                           FontFamily="Consolas"
                                                           FontSize="12"/>
                                                <Button Grid.Column="1" 
                                                        Content="âœ•"
                                                        Command="{Binding DataContext.RemoveBarcodeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#DC3545"
                                                        Foreground="White"
                                                        Width="25" Height="25"
                                                        FontSize="10"
                                                        Margin="10,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Panel - Product Image &amp; Comments -->
                <StackPanel Grid.Column="1">
                    
                    <!-- Product Image Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ–¼ï¸ Product Picture" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <Border Width="200" Height="150" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="2" 
                                    CornerRadius="8"
                                    Background="#F8F9FA"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Image Source="{Binding ImagePath}" 
                                           Stretch="UniformToFill"
                                           Visibility="{Binding ImagePath, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Visibility="{Binding ImagePath, Converter={StaticResource InverseStringToVisibilityConverter}}">
                                        <TextBlock Text="ðŸ“·" FontSize="30" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                        <TextBlock Text="No Image" FontSize="12" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="ðŸ“ Choose Image" 
                                        Command="{Binding ChooseImageCommand}"
                                        Style="{StaticResource FormButtonStyle}"
                                        Background="#6C757D"
                                        Foreground="White"
                                        Margin="0,0,10,0"/>
                                <Button Content="ðŸ—‘ï¸ Remove Image" 
                                        Command="{Binding RemoveImageCommand}"
                                        Style="{StaticResource FormButtonStyle}"
                                        Background="#DC3545"
                                        Foreground="White"
                                        Visibility="{Binding ImagePath, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Comments Section -->
                    <Border Style="{StaticResource FormSectionStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¬ Comments" Style="{StaticResource SectionHeaderStyle}"/>
                            
                            <TextBox Text="{Binding NewComment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FormTextBoxStyle}"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"/>

                            <Button Content="Add Comment" 
                                    Command="{Binding AddCommentCommand}"
                                    Style="{StaticResource FormButtonStyle}"
                                    Background="#17A2B8"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,15"/>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="6" MaxHeight="150">
                                <ListBox ItemsSource="{Binding Comments}"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding}" 
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center"
                                                           FontSize="11"/>
                                                <Button Grid.Column="1" 
                                                        Content="âœ•"
                                                        Command="{Binding DataContext.RemoveCommentCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        Background="#DC3545"
                                                        Foreground="White"
                                                        Width="20" Height="20"
                                                        FontSize="8"
                                                        Margin="5,0,0,0"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="12" 
                               Foreground="#6C757D"
                               Visibility="{Binding HasValidationErrors, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding ValidationMessage}" 
                               FontSize="12" 
                               Foreground="#DC3545"
                               TextWrapping="Wrap"
                               Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Clear Form" 
                            Command="{Binding ResetFormCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="#17A2B8"
                            Foreground="White"/>
                    <Button Content="Discard Changes" 
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="#6C757D"
                            Foreground="White"/>
                    <Button Content="Save Changes" 
                            Command="{Binding SaveProductCommand}"
                            Style="{StaticResource FormButtonStyle}"
                            Background="#FFC107"
                            Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="White" 
                           FontSize="14" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
