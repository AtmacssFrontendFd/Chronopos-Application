<UserControl x:Class="ChronoPos.Desktop.Views.CustomerReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="{DynamicResource PageBackground}"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CurrencyPriceConverter x:Key="CurrencyPriceConverter"/>
        <converters:LocalizationConverter x:Key="LocalizationConverter"/>
        
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="DropShadow" Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.1" Direction="270"/>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Summary Card Style -->
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="1" Opacity="0.06" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="8"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="8"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Quick Filter Button Style -->
        <Style x:Key="QuickFilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="6"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Export Menu Button Style -->
        <Style x:Key="ExportMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#80FFFFFF" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="âŸ³" FontSize="48" Foreground="#4A90E2" HorizontalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation" CenterX="24" CenterY="24"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360" Duration="0:0:1.5"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="Loading Customer Report..." 
                          FontSize="16" 
                          Foreground="#666666"
                          Margin="0,16,0,0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="24">
                
                <!-- Header with Back Button and Title -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Circular Back Button -->
                    <Button Grid.Column="0"
                            Command="{Binding BackToReportsHubCommand}"
                            Width="44" 
                            Height="44"
                            Margin="0,0,16,0"
                            Background="White"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            Cursor="Hand"
                            ToolTip="Back to Reports Hub">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="22"
                                       Width="44"
                                       Height="44">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="1" Opacity="0.08" Direction="270"/>
                                    </Border.Effect>
                                    <TextBlock Text="â¬…" 
                                             FontSize="18" 
                                             Foreground="#333333"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Customer Report" 
                                  FontSize="28" 
                                  FontWeight="Bold" 
                                  Foreground="#1a1a1a"/>
                        <TextBlock Text="{Binding DateRangeDisplay}" 
                                  FontSize="14" 
                                  Foreground="#666666"
                                  Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Export Button with Dropdown -->
                    <Grid Grid.Column="2">
                        <Button x:Name="ExportButton"
                               Style="{StaticResource FilterButtonStyle}"
                               Padding="16,10"
                               Click="ExportButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Export" FontSize="13"/>
                                <TextBlock Text="â–¼" FontSize="10" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        
                        <Popup x:Name="ExportPopup" 
                              PlacementTarget="{Binding ElementName=ExportButton}"
                              Placement="Bottom"
                              StaysOpen="False"
                              AllowsTransparency="True">
                            <Border Background="White" 
                                   BorderBrush="#DDDDDD" 
                                   BorderThickness="1"
                                   CornerRadius="8"
                                   Padding="0,8"
                                   Effect="{StaticResource DropShadow}">
                                <StackPanel>
                                    <Button Command="{Binding ExportToExcelCommand}"
                                           Style="{StaticResource ExportMenuButtonStyle}"
                                           Click="ExportMenuItem_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“—" FontSize="14" Margin="0,0,12,0"/>
                                            <TextBlock Text="Export to Excel" FontSize="13"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding ExportToPdfCommand}"
                                           Style="{StaticResource ExportMenuButtonStyle}"
                                           Click="ExportMenuItem_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“•" FontSize="14" Margin="0,0,12,0"/>
                                            <TextBlock Text="Export to PDF" FontSize="13"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Popup>
                    </Grid>
                </Grid>

                <!-- Quick Filters -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Quick Filters" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,12"/>
                        <WrapPanel>
                            <Button Content="Today" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetTodayFilterCommand}"
                                   Margin="0,0,8,8"/>
                            <Button Content="Yesterday" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetYesterdayFilterCommand}"
                                   Margin="0,0,8,8"/>
                            <Button Content="Last 7 Days" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetLast7DaysFilterCommand}"
                                   Margin="0,0,8,8"/>
                            <Button Content="Last 30 Days" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetLast30DaysFilterCommand}"
                                   Margin="0,0,8,8"/>
                            <Button Content="This Month" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetThisMonthFilterCommand}"
                                   Margin="0,0,8,8"/>
                            <Button Content="Last Month" 
                                   Style="{StaticResource QuickFilterButtonStyle}" 
                                   Command="{Binding SetLastMonthFilterCommand}"
                                   Margin="0,0,8,8"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Filters Section - Compact Design -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- First Row: Date Range, Search, Status -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Start Date -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Start Date" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding FilterStartDate, Mode=TwoWay}"
                                          Height="36"
                                          BorderBrush="#DDDDDD"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- End Date -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="End Date" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <DatePicker SelectedDate="{Binding FilterEndDate, Mode=TwoWay}"
                                          Height="36"
                                          BorderBrush="#DDDDDD"
                                          BorderThickness="1"/>
                            </StackPanel>

                            <!-- Search -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Search Customer" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Height="36"
                                        Padding="10,8"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        FontSize="13"/>
                            </StackPanel>

                            <!-- Status Filter -->
                            <StackPanel Grid.Column="6">
                                <TextBlock Text="Status" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <ComboBox SelectedValue="{Binding FilterIsActive, Mode=TwoWay}"
                                         Height="36"
                                         BorderBrush="#DDDDDD"
                                         BorderThickness="1"
                                         Padding="10,0">
                                    <ComboBoxItem Content="All Customers" IsSelected="True"/>
                                    <ComboBoxItem Content="Active Only" Tag="True"/>
                                    <ComboBoxItem Content="Inactive Only" Tag="False"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <!-- Second Row: Segment, Min Revenue, Max Revenue, Buttons -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Segment Filter -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Customer Segment" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <ComboBox SelectedValue="{Binding FilterSegment, Mode=TwoWay}"
                                         Height="36"
                                         BorderBrush="#DDDDDD"
                                         BorderThickness="1"
                                         Padding="10,0">
                                    <ComboBoxItem Content="All Segments" IsSelected="True"/>
                                    <ComboBoxItem Content="VIP" Tag="VIP"/>
                                    <ComboBoxItem Content="Premium" Tag="Premium"/>
                                    <ComboBoxItem Content="Loyal" Tag="Loyal"/>
                                    <ComboBoxItem Content="Regular" Tag="Regular"/>
                                    <ComboBoxItem Content="New" Tag="New"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Min Revenue -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Min Revenue" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding FilterMinRevenue, Mode=TwoWay}"
                                        Height="36"
                                        Padding="10,8"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        FontSize="13"/>
                            </StackPanel>

                            <!-- Max Revenue -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Max Revenue" FontSize="12" Foreground="#666" Margin="0,0,0,6"/>
                                <TextBox Text="{Binding FilterMaxRevenue, Mode=TwoWay}"
                                        Height="36"
                                        Padding="10,8"
                                        BorderBrush="#DDDDDD"
                                        BorderThickness="1"
                                        FontSize="13"/>
                            </StackPanel>

                            <!-- Apply Filter Button -->
                            <Button Grid.Column="6"
                                   Content="Apply Filters"
                                   Style="{StaticResource FilterButtonStyle}"
                                   Command="{Binding ApplyFiltersCommand}"
                                   VerticalAlignment="Bottom"
                                   Padding="24,10"/>

                            <!-- Reset Button -->
                            <Button Grid.Column="8"
                                   Content="Reset"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Command="{Binding ResetFiltersCommand}"
                                   VerticalAlignment="Bottom"
                                   Padding="24,10"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Summary Cards -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Customers Card -->
                    <Border Grid.Column="0" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ‘¥" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Total Customers" FontSize="13" Foreground="#666666" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Summary.TotalCustomers}" FontSize="24" FontWeight="Bold" Foreground="#1a1a1a"/>
                            <TextBlock FontSize="11" Foreground="#28a745" Margin="0,4,0,0">
                                <Run Text="+"/>
                                <Run Text="{Binding Summary.NewCustomersThisPeriod}"/>
                                <Run Text=" new"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Active Customers Card -->
                    <Border Grid.Column="2" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="âœ…" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Active Customers" FontSize="13" Foreground="#666666" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Summary.ActiveCustomers}" FontSize="24" FontWeight="Bold" Foreground="#28a745"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Revenue Card -->
                    <Border Grid.Column="4" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’°" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Total Revenue" FontSize="13" Foreground="#666666" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Summary.TotalRevenue, Converter={StaticResource CurrencyPriceConverter}}" 
                                      FontSize="24" 
                                      FontWeight="Bold" 
                                      Foreground="#4A90E2"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Order Value Card -->
                    <Border Grid.Column="6" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“Š" FontSize="24" Margin="0,0,0,8"/>
                            <TextBlock Text="Avg. Order Value" FontSize="13" Foreground="#666666" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Summary.AverageOrderValue, Converter={StaticResource CurrencyPriceConverter}}" 
                                      FontSize="24" 
                                      FontWeight="Bold" 
                                      Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Customers Table -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                      Text="Customer Details" 
                                      FontSize="16" 
                                      FontWeight="SemiBold" 
                                      Foreground="#1a1a1a"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding StartRecord}" FontSize="13" Foreground="#666"/>
                                <TextBlock Text=" - " FontSize="13" Foreground="#666"/>
                                <TextBlock Text="{Binding EndRecord}" FontSize="13" Foreground="#666"/>
                                <TextBlock Text=" of " FontSize="13" Foreground="#666"/>
                                <TextBlock Text="{Binding TotalRecords}" FontSize="13" Foreground="#666"/>
                                <TextBlock Text=" customers" FontSize="13" Foreground="#666"/>
                            </StackPanel>
                        </Grid>

                        <!-- Modern DataGrid -->
                        <DataGrid ItemsSource="{Binding Customers}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 HeadersVisibility="Column"
                                 GridLinesVisibility="None"
                                 BorderThickness="0"
                                 RowHeight="56"
                                 CanUserResizeRows="False"
                                 SelectionMode="Single"
                                 Background="Transparent"
                                 AlternatingRowBackground="#F9FAFB">
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#666666"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#F0F7FF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F0F7FF"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <!-- Customer Name -->
                                <DataGridTemplateColumn Header="Customer" Width="2*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding CustomerName}" 
                                                          FontSize="13" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#1a1a1a"/>
                                                <TextBlock Text="{Binding Email}" 
                                                          FontSize="11" 
                                                          Foreground="#999999"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Phone -->
                                <DataGridTextColumn Header="Phone" 
                                                   Binding="{Binding Phone}" 
                                                   Width="*"
                                                   FontSize="13"
                                                   Foreground="#333333"/>

                                <!-- Total Purchases -->
                                <DataGridTemplateColumn Header="Purchases" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#E3F2FD" 
                                                   CornerRadius="12" 
                                                   Padding="8,4"
                                                   HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding TotalPurchases}" 
                                                          FontSize="12" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#1976D2"
                                                          HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Total Revenue -->
                                <DataGridTemplateColumn Header="Revenue" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TotalRevenue, Converter={StaticResource CurrencyPriceConverter}}" 
                                                      FontSize="13" 
                                                      FontWeight="SemiBold"
                                                      Foreground="#28a745"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Average Order Value -->
                                <DataGridTemplateColumn Header="Avg. Order" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding AverageOrderValue, Converter={StaticResource CurrencyPriceConverter}}" 
                                                      FontSize="13" 
                                                      Foreground="#666666"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Segment -->
                                <DataGridTemplateColumn Header="Segment" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#FFF4E5" 
                                                   CornerRadius="12" 
                                                   Padding="8,4"
                                                   HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding CustomerSegment}" 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#F57C00"
                                                          HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Last Purchase -->
                                <DataGridTemplateColumn Header="Last Purchase" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Text="{Binding LastPurchaseDate, StringFormat='{}{0:MMM dd}'}" 
                                                          FontSize="12" 
                                                          Foreground="#333333"/>
                                                <TextBlock Text="{Binding LastPurchaseDate, StringFormat='{}{0:yyyy}'}" 
                                                          FontSize="10" 
                                                          Foreground="#999999"
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      VerticalAlignment="Center"
                                      FontSize="13"
                                      Foreground="#666666">
                                <Run Text="Page"/>
                                <Run Text="{Binding CurrentPage}" FontWeight="SemiBold"/>
                                <Run Text="of"/>
                                <Run Text="{Binding TotalPages}" FontWeight="SemiBold"/>
                            </TextBlock>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="â—€ Previous" 
                                       Style="{StaticResource SecondaryButtonStyle}"
                                       Command="{Binding PreviousPageCommand}"
                                       IsEnabled="{Binding CanGoPrevious}"
                                       Padding="16,8"/>
                                <Button Content="Next â–¶" 
                                       Style="{StaticResource FilterButtonStyle}"
                                       Command="{Binding NextPageCommand}"
                                       IsEnabled="{Binding CanGoNext}"
                                       Padding="16,8"
                                       Margin="8,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
