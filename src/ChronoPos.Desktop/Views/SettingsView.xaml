<UserControl x:Class="ChronoPos.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource CardBackground}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20">
            
            <!-- Page Header -->
            <TextBlock Text="Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource TextPrimary}"
                       Margin="0,0,0,30"/>

            <!-- General Settings Section -->
            <Border Background="{DynamicResource SurfaceBackground}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="General Settings" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,20"/>

                    <!-- Theme Settings -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Appearance" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Choose your preferred theme for the application" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,15"/>

                        <!-- Theme Toggle Options -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Light Theme Button -->
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource CardBackground}"
                                    BorderBrush="{DynamicResource Primary}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Cursor="Hand"
                                    Width="120"
                                    Height="80">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTheme}" Value="Light">
                                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedTheme}" Value="Dark">
                                                <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
                                                <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding SetLightThemeCommand}" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="â˜€ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Light" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedTheme}" Value="Light">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Dark Theme Button -->
                            <Border Grid.Column="2" 
                                    Background="{DynamicResource CardBackground}"
                                    BorderBrush="{DynamicResource Primary}"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Cursor="Hand"
                                    Width="120"
                                    Height="80">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTheme}" Value="Dark">
                                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedTheme}" Value="Light">
                                                <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
                                                <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.InputBindings>
                                    <MouseBinding Command="{Binding SetDarkThemeCommand}" MouseAction="LeftClick"/>
                                </Border.InputBindings>
                                
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸŒ™" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                    <TextBlock Text="Dark" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedTheme}" Value="Dark">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Current Theme Info -->
                            <StackPanel Grid.Column="3" 
                                        VerticalAlignment="Center" 
                                        Margin="20,0,0,0">
                                <TextBlock Text="Current Theme:" 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding SelectedTheme}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource Primary}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Separator -->
                    <Separator Background="{DynamicResource BorderLight}" Margin="0,10,0,20"/>

                    <!-- Font Size Settings -->
                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Font Size" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Choose your preferred font size for the application" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Very Small Font -->
                            <Button Grid.Column="0" 
                                    Content="Very Small" 
                                    Width="80" 
                                    Height="40"
                                    FontSize="9"
                                    Command="{Binding SetVerySmallFontCommand}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFontSize}" Value="VerySmall">
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Small Font -->
                            <Button Grid.Column="2" 
                                    Content="Small" 
                                    Width="80" 
                                    Height="40"
                                    FontSize="11"
                                    Command="{Binding SetSmallFontCommand}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFontSize}" Value="Small">
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Medium Font -->
                            <Button Grid.Column="4" 
                                    Content="Medium" 
                                    Width="80" 
                                    Height="40"
                                    FontSize="13"
                                    Command="{Binding SetMediumFontCommand}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFontSize}" Value="Medium">
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Large Font -->
                            <Button Grid.Column="6" 
                                    Content="Large" 
                                    Width="80" 
                                    Height="40"
                                    FontSize="15"
                                    Command="{Binding SetLargeFontCommand}">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedFontSize}" Value="Large">
                                                <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Current Font Size Info -->
                            <StackPanel Grid.Column="7" 
                                        VerticalAlignment="Center" 
                                        Margin="20,0,0,0">
                                <TextBlock Text="Current Font Size:" 
                                           FontSize="12" 
                                           Foreground="{DynamicResource TextSecondary}"/>
                                <TextBlock Text="{Binding SelectedFontSize}" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="{DynamicResource Primary}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Separator -->
                    <Separator Background="{DynamicResource BorderLight}" Margin="0,10,0,20"/>

                    <!-- Language Settings (Placeholder) -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Language" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        
                        <ComboBox Width="200" 
                                  HorizontalAlignment="Left"
                                  Background="{DynamicResource CardBackground}"
                                  Foreground="{DynamicResource TextPrimary}"
                                  BorderBrush="{DynamicResource BorderLight}">
                            <ComboBoxItem Content="English" IsSelected="True"/>
                            <ComboBoxItem Content="Spanish"/>
                            <ComboBoxItem Content="French"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Startup Settings (Placeholder) -->
                    <StackPanel>
                        <TextBlock Text="Startup" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Start with Windows" 
                                  Foreground="{DynamicResource TextPrimary}"
                                  Margin="0,0,0,5"/>
                        <CheckBox Content="Start minimized to system tray" 
                                  Foreground="{DynamicResource TextPrimary}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- System Information Section -->
            <Border Background="{DynamicResource SurfaceBackground}" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="System Information" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Application:" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="ChronoPos v1.0.0" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Framework:" 
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text=".NET 8.0" 
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Build Date:" 
                                   Foreground="{DynamicResource TextSecondary}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="September 2, 2025" 
                                   Foreground="{DynamicResource TextPrimary}"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
