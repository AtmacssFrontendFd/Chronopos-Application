<Window x:Class="ChronoPos.Desktop.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChronoPos - Reset Password" 
        Height="720" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Modern Input TextBox Style with Circular Border -->
        <Style x:Key="ModernInputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"
                                            HorizontalScrollBarVisibility="Hidden"
                                            VerticalScrollBarVisibility="Disabled"/>
                                <TextBlock x:Name="Placeholder"
                                          Text="{TemplateBinding Tag}"
                                          Foreground="#999999"
                                          FontSize="14"
                                          Margin="20,0"
                                          VerticalAlignment="Center"
                                          IsHitTestVisible="False"
                                          Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFB800"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern Input PasswordBox Style with Circular Border -->
        <Style x:Key="ModernInputPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        HorizontalScrollBarVisibility="Hidden"
                                        VerticalScrollBarVisibility="Disabled"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FFB800"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Yellow Button Style with Circular Border -->
        <Style x:Key="YellowButton" TargetType="Button">
            <Setter Property="Background" Value="#FFB800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6A600"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CC9500"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFB800"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#E6A600"/>
                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- File Browse Button Style -->
        <Style x:Key="FileBrowseButton" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                    <Setter Property="BorderBrush" Value="#FFB800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Language ComboBox Style -->
        <Style x:Key="LanguageComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FFB800"/>
            <Setter Property="BorderBrush" Value="#FFB800"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Popup x:Name="PART_Popup" 
                                   AllowsTransparency="true" 
                                   Grid.ColumnSpan="2" 
                                   IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                   Margin="1" 
                                   PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}" 
                                   Placement="Bottom">
                                <Border x:Name="dropDownBorder" 
                                        BorderBrush="#FFB800" 
                                        BorderThickness="1" 
                                        Background="White"
                                        CornerRadius="8"
                                        Margin="0,2,0,0"
                                        MinWidth="{Binding ActualWidth, ElementName=templateRoot}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <Grid x:Name="grid" RenderOptions.ClearTypeHint="Enabled">
                                            <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0">
                                                <Rectangle x:Name="opaqueRect" Fill="{Binding Background, ElementName=dropDownBorder}" Height="{Binding ActualHeight, ElementName=dropDownBorder}" Width="{Binding ActualWidth, ElementName=dropDownBorder}"/>
                                            </Canvas>
                                            <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Grid>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton x:Name="toggleButton" 
                                          BorderBrush="{TemplateBinding BorderBrush}" 
                                          BorderThickness="{TemplateBinding BorderThickness}" 
                                          Background="{TemplateBinding Background}" 
                                          Grid.ColumnSpan="2" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="false"
                                          ClickMode="Press">
                                <ToggleButton.Style>
                                    <Style TargetType="{x:Type ToggleButton}">
                                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                                        <Setter Property="IsTabStop" Value="false"/>
                                        <Setter Property="Focusable" Value="false"/>
                                        <Setter Property="ClickMode" Value="Press"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                    <Border x:Name="templateRoot" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="20"
                                                            SnapsToDevicePixels="true">
                                                        <Border x:Name="splitBorder" 
                                                                BorderBrush="Transparent" 
                                                                BorderThickness="1" 
                                                                HorizontalAlignment="Right" 
                                                                Margin="0" 
                                                                SnapsToDevicePixels="true" 
                                                                Width="30">
                                                            <Path x:Name="arrow" 
                                                                  Data="F1 M 0,0 L 2.667,2.66665 L 5.3334,0 L 5.3334,-1.78168 L 2.6667,0.88501 L0,-1.78168 L0,0 Z" 
                                                                  Fill="#FFB800" 
                                                                  HorizontalAlignment="Center" 
                                                                  Margin="0" 
                                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter Property="Background" TargetName="templateRoot" Value="#FFF9E5"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="true">
                                                            <Setter Property="Background" TargetName="templateRoot" Value="#FFE4B8"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <ContentPresenter x:Name="contentPresenter" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              IsHitTestVisible="false" 
                                              Margin="{TemplateBinding Padding}" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter Property="Height" TargetName="dropDownBorder" Value="95"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsGrouping" Value="true"/>
                                    <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="ScrollViewer.CanContentScroll" TargetName="DropDownScrollViewer" Value="false"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="ItemBorder"
                                            Background="Transparent"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FFF9E5"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#FFB800"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="0"
            BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Language and Close Button -->
            <Grid Grid.Row="0" Margin="0,25,35,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Language Selector -->
                <ComboBox x:Name="LanguageComboBox"
                          Grid.Column="1"
                          HorizontalAlignment="Right"
                          Width="130"
                          Height="38"
                          Style="{StaticResource LanguageComboBoxStyle}"
                          VerticalAlignment="Top"
                          Margin="0,0,15,0"
                          SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBoxItem Content="English" Tag="en"/>
                    <ComboBoxItem Content="Ø§Ù„Ø¹Ø±Ø¨ÙŠØ©" Tag="ar"/>
                </ComboBox>

                <!-- Close Button -->
                <Button Grid.Column="2"
                        Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="32"
                        Height="32"
                        FontSize="18"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#999999"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        ToolTip="Close Window">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <Grid>
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Width="520"
                                Margin="20">
                    
                    <!-- Logo and Title -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                        <!-- Logo -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                            <Image Source="/Images/logo.png" 
                                   Width="55" 
                                   Height="55" 
                                   Margin="0,0,12,0"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                            <TextBlock Text="ChronoPOS" 
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="#FFB800"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Reset Password Form Card -->
                    <Border BorderBrush="#4A90E2"
                            BorderThickness="3"
                            CornerRadius="12"
                            Padding="60,45"
                            Background="White">
                        <StackPanel>
                            <!-- Reset Password Title -->
                            <TextBlock x:Name="ResetTitleTextBlock"
                                       Text="Reset Password" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock x:Name="ResetSubtitleTextBlock"
                                       Text="Please provide your license file and set a new password" 
                                       FontSize="14" 
                                       Foreground="#666666"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       Margin="0,0,0,35"/>

                            <!-- License File Field -->
                            <TextBlock x:Name="LicenseLabelTextBlock"
                                       Text="License File" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,15">
                                <TextBox x:Name="LicenseFileTextBox"
                                         Style="{StaticResource ModernInputTextBox}"
                                         Tag="Select license file..."
                                         IsReadOnly="True"
                                         Background="#F8F8F8"/>
                                <Button x:Name="BrowseLicenseButton"
                                        Content="Browse..."
                                        Style="{StaticResource FileBrowseButton}"
                                        HorizontalAlignment="Right"
                                        Margin="0,5,10,5"
                                        Height="40"
                                        Width="80"
                                        Click="BrowseLicenseButton_Click"/>
                            </Grid>
                            
                            <!-- Verify License Button -->
                            <Button x:Name="VerifyLicenseButton"
                                    Content="Verify License"
                                    Style="{StaticResource YellowButton}"
                                    Margin="0,0,0,25"
                                    Click="VerifyLicenseButton_Click"
                                    IsEnabled="False"/>

                            <!-- License Verification Status -->
                            <Border Background="#D1FAE5"
                                    BorderBrush="#10B981"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,25"
                                    Visibility="Collapsed"
                                    x:Name="LicenseVerifiedBorder">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœ“" 
                                               Foreground="#047857"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"/>
                                    <TextBlock x:Name="LicenseVerifiedTextBlock"
                                               Text="License verified successfully. You can now set a new password."
                                               Foreground="#047857"
                                               FontSize="13"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- New Password Field -->
                            <TextBlock x:Name="NewPasswordLabelTextBlock"
                                       Text="New Password" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Margin="0,0,0,10"/>
                            <Grid x:Name="NewPasswordGrid" 
                                  Margin="0,0,0,25"
                                  IsEnabled="False">
                                <!-- Password Box (hidden when showing password) -->
                                <PasswordBox x:Name="NewPasswordBox"
                                             Style="{StaticResource ModernInputPasswordBox}"
                                             KeyDown="Input_KeyDown"
                                             PasswordChanged="NewPasswordBox_PasswordChanged"/>
                                
                                <!-- Password TextBox (visible when showing password) -->
                                <TextBox x:Name="NewPasswordTextBox"
                                         Style="{StaticResource ModernInputTextBox}"
                                         Tag="Enter new password"
                                         KeyDown="Input_KeyDown"
                                         Visibility="Collapsed"
                                         TextChanged="NewPasswordTextBox_TextChanged"/>
                                
                                <!-- Show/Hide Password Button -->
                                <Button x:Name="ShowNewPasswordButton"
                                        Content="ðŸ‘"
                                        Width="45"
                                        Height="40"
                                        HorizontalAlignment="Right"
                                        Margin="0,5,8,5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#999999"
                                        FontSize="18"
                                        Cursor="Hand"
                                        ToolTip="Show/Hide Password"
                                        Click="ShowNewPasswordButton_Click"/>
                            </Grid>

                            <!-- Confirm Password Field -->
                            <TextBlock x:Name="ConfirmPasswordLabelTextBlock"
                                       Text="Confirm Password" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Margin="0,0,0,10"/>
                            <Grid x:Name="ConfirmPasswordGrid" 
                                  Margin="0,0,0,20"
                                  IsEnabled="False">
                                <!-- Password Box (hidden when showing password) -->
                                <PasswordBox x:Name="ConfirmPasswordBox"
                                             Style="{StaticResource ModernInputPasswordBox}"
                                             KeyDown="Input_KeyDown"
                                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                                
                                <!-- Password TextBox (visible when showing password) -->
                                <TextBox x:Name="ConfirmPasswordTextBox"
                                         Style="{StaticResource ModernInputTextBox}"
                                         Tag="Confirm new password"
                                         KeyDown="Input_KeyDown"
                                         Visibility="Collapsed"
                                         TextChanged="ConfirmPasswordTextBox_TextChanged"/>
                                
                                <!-- Show/Hide Password Button -->
                                <Button x:Name="ShowConfirmPasswordButton"
                                        Content="ðŸ‘"
                                        Width="45"
                                        Height="40"
                                        HorizontalAlignment="Right"
                                        Margin="0,5,8,5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="#999999"
                                        FontSize="18"
                                        Cursor="Hand"
                                        ToolTip="Show/Hide Password"
                                        Click="ShowConfirmPasswordButton_Click"/>
                            </Grid>

                            <!-- Back to Login -->
                            <Grid Margin="0,0,0,30">
                                <Button x:Name="BackToLoginButton"
                                        Content="â† Back to Login"
                                        Style="{StaticResource LinkButton}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Click="BackToLoginButton_Click"/>
                            </Grid>

                            <!-- Error Message -->
                            <Border Background="#FEE2E2"
                                    BorderBrush="#EF4444"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,20"
                                    Visibility="Collapsed"
                                    x:Name="ErrorBorder">
                                <TextBlock x:Name="ErrorTextBlock"
                                           Foreground="#DC2626"
                                           FontSize="13"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Success Message -->
                            <Border Background="#D1FAE5"
                                    BorderBrush="#10B981"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,20"
                                    Visibility="Collapsed"
                                    x:Name="SuccessBorder">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âœ“" 
                                               Foreground="#047857"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="SuccessTextBlock"
                                               Foreground="#047857"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Reset Password Button -->
                            <Button x:Name="ResetPasswordButton"
                                    Content="Reset Password"
                                    Style="{StaticResource YellowButton}"
                                    Click="ResetPasswordButton_Click"
                                    Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
                </Grid>
            </ScrollViewer>

            <!-- Loading Overlay -->
            <Border Grid.RowSpan="2"
                    x:Name="LoadingOverlay"
                    Background="#CC000000"
                    Visibility="Collapsed">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Border Background="White"
                            CornerRadius="8"
                            Padding="40,30">
                        <StackPanel>
                            <TextBlock Text="â³" 
                                       FontSize="48" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,15"/>
                            <TextBlock Text="Resetting password..."
                                       Foreground="#333333"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>