<UserControl x:Class="ChronoPos.Desktop.Views.ProductModifierSidePanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350"
             FontFamily="{DynamicResource PoppinsFontFallback}"
             Width="420">

    <UserControl.Resources>
        <!-- Input Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderNormal}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource SidePanelBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Primary}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding FormTitle}" 
                             FontSize="{DynamicResource FontSizeLarge}"
                             FontWeight="Bold"
                             Foreground="White"/>
                    <TextBlock Text="Configure product modifier details" 
                             FontSize="{DynamicResource FontSizeSmall}"
                             Foreground="White"
                             Opacity="0.9"/>
                </StackPanel>

                <Button Grid.Column="1" 
                      Content="âœ•"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="White"
                      FontSize="16"
                      Width="30" Height="30"
                      Command="{Binding CancelCommand}"
                      Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                
                <!-- Modifier Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Modifier Name *" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding ModifierName, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           Tag="Enter modifier name (e.g., Extra Cheese, Large Size)"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Description" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           AcceptsReturn="True"
                           TextWrapping="Wrap"
                           MinHeight="60"
                           Tag="Enter description (optional)"/>
                </StackPanel>

                <!-- Price -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Price *" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           Tag="Enter price"/>
                </StackPanel>

                <!-- Cost -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Cost" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Cost, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           Tag="Enter cost (optional)"/>
                </StackPanel>

                <!-- SKU -->
                <StackPanel Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="SKU" 
                                 FontWeight="SemiBold"
                                 FontSize="{DynamicResource FontSizeNormal}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 Margin="0,0,0,5"/>
                        
                        <Button Grid.Column="1"
                              Content="Generate"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Command="{Binding GenerateSkuCommand}"
                              Padding="8,4"
                              FontSize="{DynamicResource FontSizeExtraSmall}"
                              VerticalAlignment="Top"
                              Margin="10,0,0,0"/>
                    </Grid>
                    <TextBox Text="{Binding Sku, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           Tag="Enter SKU (optional, must be unique)"/>
                    <TextBlock Text="Must be unique if provided" 
                             FontSize="{DynamicResource FontSizeExtraSmall}"
                             Foreground="{DynamicResource TextSecondary}"
                             Margin="0,5,0,0"
                             FontStyle="Italic"/>
                </StackPanel>

                <!-- Barcode -->
                <StackPanel Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                 Text="Barcode" 
                                 FontWeight="SemiBold"
                                 FontSize="{DynamicResource FontSizeNormal}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 Margin="0,0,0,5"/>
                        
                        <Button Grid.Column="1"
                              Content="Generate"
                              Style="{StaticResource SecondaryButtonStyle}"
                              Command="{Binding GenerateBarcodeCommand}"
                              Padding="8,4"
                              FontSize="{DynamicResource FontSizeExtraSmall}"
                              VerticalAlignment="Top"
                              Margin="10,0,0,0"/>
                    </Grid>
                    <TextBox Text="{Binding Barcode, UpdateSourceTrigger=PropertyChanged}"
                           Style="{StaticResource InputTextBoxStyle}"
                           Tag="Enter barcode (optional, must be unique)"/>
                    <TextBlock Text="Must be unique if provided" 
                             FontSize="{DynamicResource FontSizeExtraSmall}"
                             Foreground="{DynamicResource TextSecondary}"
                             Margin="0,5,0,0"
                             FontStyle="Italic"/>
                </StackPanel>

                <!-- Tax Type -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Tax Type" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedTaxType}"
                            ItemsSource="{Binding TaxTypes}"
                            DisplayMemberPath="Name"
                            Style="{StaticResource InputComboBoxStyle}"/>
                    <TextBlock Text="Select applicable tax type (optional)" 
                             FontSize="{DynamicResource FontSizeExtraSmall}"
                             Foreground="{DynamicResource TextSecondary}"
                             Margin="0,5,0,0"
                             FontStyle="Italic"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Status *" 
                             FontWeight="SemiBold"
                             FontSize="{DynamicResource FontSizeNormal}"
                             Foreground="{DynamicResource TextPrimary}"
                             Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedStatus}"
                            ItemsSource="{Binding StatusOptions}"
                            Style="{StaticResource InputComboBoxStyle}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Reset" 
                          Style="{StaticResource SecondaryButtonStyle}"
                          Command="{Binding ResetCommand}"
                          Width="80"
                          Margin="0,0,10,0"/>
                    <Button Content="Save" 
                          Style="{StaticResource PrimaryButtonStyle}"
                          Command="{Binding SaveModifierCommand}"
                          IsEnabled="{Binding CanSave}"
                          Width="100"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Status -->
        <Border Grid.Row="2" 
                Background="{DynamicResource BorderLight}"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                         Text="{Binding StatusMessage}" 
                         FontSize="{DynamicResource FontSizeSmall}"
                         Foreground="{DynamicResource TextSecondary}"
                         VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="1" 
                           IsIndeterminate="True"
                           Width="100" Height="4"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Background="{DynamicResource BorderLight}"
                           Foreground="{DynamicResource Primary}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
