<Window x:Class="ChronoPos.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ChronoPos.Desktop.Views.Controls"
        Title="ChronoPos - Point of Sale System" 
        Height="800" 
        Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        FlowDirection="{DynamicResource AppFlowDirection}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBackground}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource BorderLight}">
            <Grid Margin="{DynamicResource CardPaddingThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Logo Image (will show if logo.png exists) -->
                    <Image Source="/Images/logo.png" 
                           Width="40" 
                           Height="40" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    
                    <!-- Text Logo as fallback -->
                    <TextBlock Text="ChronoPos" 
                               FontSize="{DynamicResource FontSizeXXLarge}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                    
                    <!-- <TextBlock Text="Point of Sale System" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/> -->
                </StackPanel>
                
                <!-- Search Bar with Results Popup -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" MinWidth="400" MaxWidth="600" Margin="20,0" VerticalAlignment="Center">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            CornerRadius="25"
                            Height="45"
                            Padding="3">
                        <Grid Margin="18,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Icon -->
                            <TextBlock Grid.Column="0"
                                      Text="ðŸ”"
                                      FontSize="18"
                                      Foreground="{DynamicResource TextSecondary}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,12,0"/>
                            
                            <!-- Search TextBox -->
                            <TextBox Grid.Column="1"
                                    x:Name="GlobalSearchTextBox"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextPrimary}"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding GlobalSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                    Tag="Search products, customers, sales..."
                                    GotFocus="GlobalSearchTextBox_GotFocus"
                                    LostFocus="GlobalSearchTextBox_LostFocus"
                                    KeyDown="GlobalSearchTextBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Background="Transparent"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="False">
                                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <!-- Clear Button -->
                            <Button Grid.Column="2"
                                   x:Name="ClearSearchButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Width="24"
                                   Height="24"
                                   Visibility="{Binding HasGlobalSearchText, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Command="{Binding ClearGlobalSearchCommand}"
                                   Margin="12,0,0,0">
                                <TextBlock Text="âŒ"
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Search Results Popup -->
                    <Popup x:Name="SearchResultsPopup"
                           PlacementTarget="{Binding ElementName=GlobalSearchTextBox}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           StaysOpen="False"
                           IsOpen="{Binding ShowGlobalSearchResults, Mode=TwoWay}"
                           Width="580"
                           MaxHeight="450">
                        <Border Background="{DynamicResource CardBackground}"
                                BorderBrush="{DynamicResource BorderLight}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="10">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Search Results Header -->
                                <Border Grid.Row="0"
                                        Background="{DynamicResource SurfaceBackground}"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="{DynamicResource BorderLight}"
                                        Padding="15,10">
                                    <Grid>
                                        <TextBlock Text="{Binding GlobalSearchResultsHeader}"
                                                  FontSize="14"
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource TextPrimary}"/>
                                        <TextBlock Text="Press Enter to navigate"
                                                  FontSize="11"
                                                  Foreground="{DynamicResource TextSecondary}"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Search Results List -->
                                <ScrollViewer Grid.Row="1"
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Disabled"
                                            MaxHeight="350">
                                    <ItemsControl ItemsSource="{Binding GlobalSearchResults}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="0,0,0,1"
                                                        BorderBrush="{DynamicResource BorderLight}"
                                                        Background="Transparent"
                                                        Cursor="Hand"
                                                        MouseLeftButtonDown="SearchResultItem_MouseDoubleClick">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid Margin="15,12">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Icon/Category Indicator -->
                                                        <Border Grid.Column="0"
                                                                Background="{DynamicResource Primary}"
                                                                CornerRadius="6"
                                                                Width="40"
                                                                Height="40"
                                                                Margin="0,0,12,0"
                                                                VerticalAlignment="Center">
                                                            <TextBlock HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      FontSize="18"
                                                                      Foreground="White">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Products">
                                                                                <Setter Property="Text" Value="ðŸ“¦"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Customers">
                                                                                <Setter Property="Text" Value="ðŸ‘¤"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Suppliers">
                                                                                <Setter Property="Text" Value="ðŸ­"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Sales">
                                                                                <Setter Property="Text" Value="ðŸ›’"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Transactions">
                                                                                <Setter Property="Text" Value="ðŸ’³"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Stock">
                                                                                <Setter Property="Text" Value="ðŸ“Š"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Brands">
                                                                                <Setter Property="Text" Value="ðŸ·ï¸"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Categories">
                                                                                <Setter Property="Text" Value="ðŸ“‚"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Settings">
                                                                                <Setter Property="Text" Value="âš™ï¸"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Users">
                                                                                <Setter Property="Text" Value="ðŸ‘¥"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Security">
                                                                                <Setter Property="Text" Value="ðŸ”"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Finance">
                                                                                <Setter Property="Text" Value="ðŸ’°"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Restaurant">
                                                                                <Setter Property="Text" Value="ðŸ½ï¸"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Reservations">
                                                                                <Setter Property="Text" Value="ðŸ“…"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Tables">
                                                                                <Setter Property="Text" Value="ðŸª‘"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Orders">
                                                                                <Setter Property="Text" Value="ðŸ“"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Reports">
                                                                                <Setter Property="Text" Value="ðŸ“ˆ"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Dashboard">
                                                                                <Setter Property="Text" Value="ðŸ "/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Configuration">
                                                                                <Setter Property="Text" Value="ðŸ”§"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Localization">
                                                                                <Setter Property="Text" Value="ðŸŒ"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Appearance">
                                                                                <Setter Property="Text" Value="ðŸŽ¨"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Tools">
                                                                                <Setter Property="Text" Value="ðŸ› ï¸"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="Data">
                                                                                <Setter Property="Text" Value="ðŸ’¾"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Module}" Value="System">
                                                                                <Setter Property="Text" Value="ðŸ–¥ï¸"/>
                                                                            </DataTrigger>
                                                                            <!-- Default icon -->
                                                                            <DataTrigger Binding="{Binding Module}" Value="">
                                                                                <Setter Property="Text" Value="ðŸ“„"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                        
                                                        <!-- Result Info -->
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Title}"
                                                                      FontSize="13"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="{DynamicResource TextPrimary}"
                                                                      TextTrimming="CharacterEllipsis"/>
                                                            <TextBlock Text="{Binding Description}"
                                                                      FontSize="11"
                                                                      Foreground="{DynamicResource TextSecondary}"
                                                                      TextTrimming="CharacterEllipsis"
                                                                      Margin="0,2,0,0"/>
                                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                                <Border Background="{DynamicResource SurfaceBackground}"
                                                                        BorderBrush="{DynamicResource BorderLight}"
                                                                        BorderThickness="1"
                                                                        CornerRadius="3"
                                                                        Padding="6,2">
                                                                    <TextBlock Text="{Binding Module}"
                                                                              FontSize="10"
                                                                              Foreground="{DynamicResource Primary}"/>
                                                                </Border>
                                                            </StackPanel>
                                                        </StackPanel>
                                                        
                                                        <!-- Price/Status (if available) -->
                                                        <StackPanel Grid.Column="2" 
                                                                   VerticalAlignment="Center" 
                                                                   HorizontalAlignment="Right"
                                                                   Margin="12,0,0,0">
                                                            <TextBlock FontSize="12"
                                                                      FontWeight="SemiBold"
                                                                      Foreground="{DynamicResource Primary}"
                                                                      HorizontalAlignment="Right"
                                                                      Visibility="{Binding Price, Converter={StaticResource NullToVisibilityConverter}}">
                                                                <Run Text="{Binding DataContext.CurrencySymbol, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                                                <Run Text="{Binding Price, StringFormat=N2}"/>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding Status}"
                                                                      FontSize="10"
                                                                      Foreground="{DynamicResource TextSecondary}"
                                                                      HorizontalAlignment="Right"
                                                                      Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                
                                <!-- Show More Button -->
                                <Border Grid.Row="2"
                                        Background="{DynamicResource SurfaceBackground}"
                                        BorderThickness="0,1,0,0"
                                        BorderBrush="{DynamicResource BorderLight}"
                                        Padding="15,10"
                                        Visibility="{Binding HasMoreGlobalSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Button Content="Show all results â†’"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="{DynamicResource Primary}"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            HorizontalAlignment="Center"
                                            Command="{Binding ShowAllGlobalSearchResultsCommand}"
                                            Cursor="Hand"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Popup>
                </Grid>
                
                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               FontSize="{DynamicResource FontSizeVerySmall}" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    
                    <!-- Language Switcher -->
                    <Border Background="{DynamicResource SurfaceBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            CornerRadius="15"
                            Margin="0,0,15,0">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Padding="8,4"
                                Command="{Binding ToggleLanguageCommand}"
                                ToolTip="Switch Language">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŒ" 
                                          FontSize="14" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CurrentLanguageDisplayName}" 
                                          FontSize="{DynamicResource FontSizeVerySmall}"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- User Icon and Name -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{DynamicResource Primary}"
                                CornerRadius="15"
                                Width="30"
                                Height="30"
                                Margin="0,0,8,0">
                            <TextBlock Text="ðŸ‘¤"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"
                                      FontSize="16"/>
                        </Border>
                        <TextBlock Text="{Binding CurrentUser}" 
                                   FontSize="{DynamicResource FontSizeSmall}" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="{DynamicResource DefaultMarginThickness}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SidebarWidth, Mode=TwoWay}" MinWidth="120" MaxWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}" 
                    Margin="0,0,10,0"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                             HorizontalScrollBarVisibility="Disabled"
                             CanContentScroll="True">
                    <StackPanel Margin="10,15,10,15">
                            <!-- Navigation Buttons using SidebarButton with UMAC Visibility -->
                            <controls:SidebarButton IconName="dashboard"
                                                   ButtonText="{Binding DashboardButtonText}"
                                                   Command="{Binding ShowDashboardCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Dashboard}"
                                                   Visibility="{Binding IsDashboardVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="transactions"
                                                   ButtonText="{Binding SalesWindowButtonText}"
                                                   Command="{Binding ShowTransactionsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Transactions}"
                                                   Visibility="{Binding IsTransactionsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="transaction"
                                                   ButtonText="{Binding TransactionButtonText}"
                                                   Command="{Binding ShowTransactionCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Transaction}"
                                                   Visibility="{Binding IsTransactionVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="management"
                                                   ButtonText="{Binding BackOfficeButtonText}"
                                                   Command="{Binding ShowManagementCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Management}"
                                                   Visibility="{Binding IsManagementVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="reservation"
                                                   ButtonText="{Binding ReservationButtonText}"
                                                   Command="{Binding ShowReservationCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Reservation}"
                                                   Visibility="{Binding IsReservationVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="reports"
                                                   ButtonText="{Binding ReportsButtonText}"
                                                   Command="{Binding ShowReportsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Reports}"
                                                   Visibility="{Binding IsReportsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,15"/>
                            
                            <Separator Background="{DynamicResource BorderLight}" Margin="0,10,0,5"/>
                            
                            <controls:SidebarButton IconName="settings"
                                                   ButtonText="{Binding SettingsButtonText}"
                                                   Command="{Binding ShowSettingsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Settings}"
                                                   Visibility="{Binding IsSettingsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="logout"
                                                   ButtonText="{Binding LogoutButtonText}"
                                                   Command="{Binding LogoutCommand}"
                                                   IsLogoutButton="True"
                                                   Margin="0,10,0,5"/>
                        </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- GridSplitter for Resizing Sidebar -->
            <GridSplitter Grid.Column="1"
                         Width="5"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Stretch"
                         Background="Transparent"
                         ShowsPreview="False"
                         Cursor="SizeWE"
                         Margin="5,0">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="Transparent">
                            <Rectangle Width="2" 
                                      Fill="{DynamicResource BorderLight}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10"/>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Content Area -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <Grid Margin="{DynamicResource CardPaddingThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Content Frame -->
                    <ContentControl Grid.Row="0" Content="{Binding CurrentView}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SurfaceBackground}">
            <StatusBarItem>
                <TextBlock Text="Â© 2025 ChronoPos - All Rights Reserved" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Professional Edition" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
