<Window x:Class="ChronoPos.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChronoPos - Point of Sale System" 
        Height="800" 
        Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        FlowDirection="{DynamicResource AppFlowDirection}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBackground}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource BorderLight}">
            <Grid Margin="{DynamicResource CardPaddingThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Logo Image (will show if logo.png exists) -->
                    <Image Source="/Images/logo.png" 
                           Width="40" 
                           Height="40" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    
                    <!-- Text Logo as fallback -->
                    <TextBlock Text="ChronoPos" 
                               FontSize="{DynamicResource FontSizeXXLarge}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                    
                    <!-- <TextBlock Text="Point of Sale System" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/> -->
                </StackPanel>
                
                <!-- Search Bar -->
                <Grid Grid.Column="1" HorizontalAlignment="Center" MinWidth="400" MaxWidth="600" Margin="20,0" VerticalAlignment="Center">
                    <Border Background="{DynamicResource CardBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            CornerRadius="25"
                            Height="45"
                            Padding="3">
                        <Grid Margin="18,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Search Icon -->
                            <TextBlock Grid.Column="0"
                                      Text="ðŸ”"
                                      FontSize="18"
                                      Foreground="{DynamicResource TextSecondary}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,12,0"/>
                            
                            <!-- Search TextBox -->
                            <TextBox Grid.Column="1"
                                    x:Name="GlobalSearchTextBox"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Foreground="{DynamicResource TextPrimary}"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding GlobalSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                    Tag="Search products, customers, sales..."
                                    GotFocus="GlobalSearchTextBox_GotFocus"
                                    LostFocus="GlobalSearchTextBox_LostFocus"
                                    KeyDown="GlobalSearchTextBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Background="Transparent"
                                                                Focusable="false"
                                                                HorizontalScrollBarVisibility="Hidden"
                                                                VerticalScrollBarVisibility="Hidden"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="False">
                                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <!-- Clear Button -->
                            <Button Grid.Column="2"
                                   x:Name="ClearSearchButton"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Width="24"
                                   Height="24"
                                   Visibility="{Binding HasGlobalSearchText, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Command="{Binding ClearGlobalSearchCommand}"
                                   Margin="12,0,0,0">
                                <TextBlock Text="âŒ"
                                          FontSize="12"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               FontSize="{DynamicResource FontSizeVerySmall}" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    
                    <!-- Language Switcher -->
                    <Border Background="{DynamicResource SurfaceBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            CornerRadius="15"
                            Margin="0,0,15,0">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Padding="8,4"
                                Command="{Binding ToggleLanguageCommand}"
                                ToolTip="Switch Language">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŒ" 
                                          FontSize="14" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CurrentLanguageDisplayName}" 
                                          FontSize="{DynamicResource FontSizeVerySmall}"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- User Icon and Name -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{DynamicResource Primary}"
                                CornerRadius="15"
                                Width="30"
                                Height="30"
                                Margin="0,0,8,0">
                            <TextBlock Text="ðŸ‘¤"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"
                                      FontSize="16"/>
                        </Border>
                        <TextBlock Text="{Binding CurrentUser}" 
                                   FontSize="{DynamicResource FontSizeSmall}" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="{DynamicResource DefaultMarginThickness}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}" 
                    Margin="0,0,10,0"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                    <TextBlock Text="Navigation" 
                               FontSize="{DynamicResource FontSizeMedium}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,15"/>
                    
                    <Button Command="{Binding ShowDashboardCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ " VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding DashboardButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Dashboard">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding ShowTransactionsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’³" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding TransactionsButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Transactions">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding ShowManagementCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“¦" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding ManagementButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Management">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding ShowReservationCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ¨" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding ReservationButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Reservation">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Command="{Binding ShowOrderTableCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“‹" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding OrderTableButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="OrderTable">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Margin="0,0,0,25"
                            Command="{Binding ShowReportsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“ˆ" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding ReportsButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Reports">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Separator Background="{DynamicResource BorderLight}" Margin="0,15,0,10"/>
                    
                    <Button Command="{Binding ShowSettingsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš™ï¸" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding SettingsButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Settings">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Background="{DynamicResource Error}"
                            Foreground="White"
                            Margin="0,15,0,5"
                            Command="{Binding LogoutCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸšª" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding LogoutButtonText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Setter Property="Background" Value="{DynamicResource Error}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <Grid Margin="{DynamicResource CardPaddingThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Content Frame -->
                    <ContentControl Grid.Row="0" Content="{Binding CurrentView}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SurfaceBackground}">
            <StatusBarItem>
                <TextBlock Text="Ready" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
