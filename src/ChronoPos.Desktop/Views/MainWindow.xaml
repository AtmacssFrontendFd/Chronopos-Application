<Window x:Class="ChronoPos.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ChronoPos.Desktop.Views.Controls"
        xmlns:usercontrols="clr-namespace:ChronoPos.Desktop.UserControls"
        Title="ChronoPos - Point of Sale System" 
        Height="800" 
        Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        FlowDirection="{DynamicResource AppFlowDirection}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBackground}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource BorderLight}">
            <Grid Margin="{DynamicResource CardPaddingThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Logo Image (will show if logo.png exists) -->
                    <Image Source="/Images/logo.png" 
                           Width="40" 
                           Height="40" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                    
                    <!-- Text Logo as fallback -->
                    <TextBlock Text="ChronoPos" 
                               FontSize="{DynamicResource FontSizeXXLarge}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                    
                    <!-- <TextBlock Text="Point of Sale System" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/> -->
                </StackPanel>
                
                <!-- Global Search Bar -->
                <usercontrols:GlobalSearchBar Grid.Column="1" 
                                             HorizontalAlignment="Center" 
                                             MinWidth="400" 
                                             MaxWidth="600" 
                                             Margin="20,0" 
                                             VerticalAlignment="Center"
                                             DataContext="{Binding GlobalSearchBarViewModel}"/>
                
                <!-- User Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               FontSize="{DynamicResource FontSizeVerySmall}" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    
                    <!-- Language Switcher -->
                    <Border Background="{DynamicResource SurfaceBackground}"
                            BorderBrush="{DynamicResource BorderLight}"
                            BorderThickness="1"
                            CornerRadius="15"
                            Margin="0,0,15,0">
                        <Button Background="Transparent"
                                BorderThickness="0"
                                Padding="8,4"
                                Command="{Binding ToggleLanguageCommand}"
                                ToolTip="Switch Language">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŒ" 
                                          FontSize="14" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding CurrentLanguageDisplayName}" 
                                          FontSize="{DynamicResource FontSizeVerySmall}"
                                          VerticalAlignment="Center"
                                          Foreground="{DynamicResource TextPrimary}"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    
                    <!-- User Icon and Name -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{DynamicResource Primary}"
                                CornerRadius="15"
                                Width="30"
                                Height="30"
                                Margin="0,0,8,0">
                            <TextBlock Text="ðŸ‘¤"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="White"
                                      FontSize="16"/>
                        </Border>
                        <TextBlock Text="{Binding CurrentUser}" 
                                   FontSize="{DynamicResource FontSizeSmall}" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="{DynamicResource DefaultMarginThickness}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding SidebarWidth, Mode=TwoWay}" MinWidth="120" MaxWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}" 
                    Margin="0,0,10,0"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden"
                             HorizontalScrollBarVisibility="Disabled"
                             CanContentScroll="True">
                    <StackPanel Margin="10,15,10,15">
                            <!-- Navigation Buttons using SidebarButton with UMAC Visibility -->
                            <controls:SidebarButton IconName="dashboard"
                                                   ButtonText="{Binding DashboardButtonText}"
                                                   Command="{Binding ShowDashboardCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Dashboard}"
                                                   Visibility="{Binding IsDashboardVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="transactions"
                                                   ButtonText="{Binding SalesWindowButtonText}"
                                                   Command="{Binding ShowTransactionsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Transactions}"
                                                   Visibility="{Binding IsTransactionsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="transaction"
                                                   ButtonText="{Binding TransactionButtonText}"
                                                   Command="{Binding ShowTransactionCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Transaction}"
                                                   Visibility="{Binding IsTransactionVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="management"
                                                   ButtonText="{Binding BackOfficeButtonText}"
                                                   Command="{Binding ShowManagementCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Management}"
                                                   Visibility="{Binding IsManagementVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="reservation"
                                                   ButtonText="{Binding ReservationButtonText}"
                                                   Command="{Binding ShowReservationCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Reservation}"
                                                   Visibility="{Binding IsReservationVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="reports"
                                                   ButtonText="{Binding ReportsButtonText}"
                                                   Command="{Binding ShowReportsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Reports}"
                                                   Visibility="{Binding IsReportsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,15"/>
                            
                            <Separator Background="{DynamicResource BorderLight}" Margin="0,10,0,5"/>
                            
                            <controls:SidebarButton IconName="settings"
                                                   ButtonText="{Binding SettingsButtonText}"
                                                   Command="{Binding ShowSettingsCommand}"
                                                   IsSelected="{Binding SelectedPage, Converter={StaticResource EqualsConverter}, ConverterParameter=Settings}"
                                                   Visibility="{Binding IsSettingsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                                   Margin="0,0,0,5"/>
                            
                            <controls:SidebarButton IconName="logout"
                                                   ButtonText="{Binding LogoutButtonText}"
                                                   Command="{Binding LogoutCommand}"
                                                   IsLogoutButton="True"
                                                   Margin="0,10,0,5"/>
                        </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- GridSplitter for Resizing Sidebar -->
            <GridSplitter Grid.Column="1"
                         Width="5"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Stretch"
                         Background="Transparent"
                         ShowsPreview="False"
                         Cursor="SizeWE"
                         Margin="5,0">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="Transparent">
                            <Rectangle Width="2" 
                                      Fill="{DynamicResource BorderLight}"
                                      HorizontalAlignment="Center"
                                      Margin="0,10"/>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>

            <!-- Content Area -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <Grid Margin="{DynamicResource CardPaddingThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Content Frame -->
                    <ContentControl Grid.Row="0" Content="{Binding CurrentView}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SurfaceBackground}">
            <StatusBarItem>
                <TextBlock Text="Â© 2025 ChronoPos - All Rights Reserved" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Professional Edition" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
