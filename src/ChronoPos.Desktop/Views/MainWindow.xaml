<Window x:Class="ChronoPos.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChronoPos - Point of Sale System" 
        Height="800" 
        Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MainBackground}"
        FlowDirection="{DynamicResource AppFlowDirection}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBackground}" 
                BorderThickness="0,0,0,1" 
                BorderBrush="{DynamicResource BorderLight}">
            <Grid Margin="{DynamicResource CardPaddingThickness}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ChronoPos" 
                               FontSize="{DynamicResource FontSizeXXLarge}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Point of Sale System" 
                               FontSize="{DynamicResource FontSizeSmall}" 
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center" 
                               Margin="15,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentDateTime}" 
                               FontSize="{DynamicResource FontSizeVerySmall}" 
                               Foreground="{DynamicResource TextPrimary}" 
                               VerticalAlignment="Center" 
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding CurrentUser}" 
                               FontSize="{DynamicResource FontSizeVerySmall}" 
                               Foreground="{DynamicResource TextSecondary}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="{DynamicResource DefaultMarginThickness}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}" 
                    Margin="0,0,10,0"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <StackPanel Margin="{DynamicResource DefaultMarginThickness}">
                    <TextBlock Text="Navigation" 
                               FontSize="{DynamicResource FontSizeMedium}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,15"/>
                    
                    <Button Content="ðŸ  Dashboard" 
                            Command="{Binding ShowDashboardCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Dashboard">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ’³ Transactions" 
                            Command="{Binding ShowTransactionsCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Transactions">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ“¦ Management" 
                            Command="{Binding ShowManagementCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Management">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ¨ Reservation" 
                            Command="{Binding ShowReservationCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Reservation">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ“‹ Order Table" 
                            Command="{Binding ShowOrderTableCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="OrderTable">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸ“ˆ Reports" 
                            Margin="0,0,0,25"
                            Command="{Binding ShowReportsCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Reports">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Separator Background="{DynamicResource BorderLight}" Margin="0,15,0,10"/>
                    
                    <Button Content="âš™ï¸ Settings" 
                            Command="{Binding ShowSettingsCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedPage}" Value="Settings">
                                        <Setter Property="Background" Value="{DynamicResource Primary}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="ðŸšª Logout" 
                            Background="{DynamicResource Error}"
                            Foreground="White"
                            Margin="0,15,0,5"
                            Command="{Binding LogoutCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
                                <Setter Property="Background" Value="{DynamicResource Error}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="{DynamicResource BorderCornerRadius}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1">
                <Grid Margin="{DynamicResource CardPaddingThickness}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Page Title -->
                    <TextBlock Grid.Row="0" 
                               Text="{Binding CurrentPageTitle}" 
                               FontSize="{DynamicResource FontSizeLarge}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,20"/>

                    <!-- Content Frame -->
                    <ContentControl Grid.Row="1" Content="{Binding CurrentView}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SurfaceBackground}">
            <StatusBarItem>
                <TextBlock Text="Ready" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding StatusMessage}" Foreground="{DynamicResource TextPrimary}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
