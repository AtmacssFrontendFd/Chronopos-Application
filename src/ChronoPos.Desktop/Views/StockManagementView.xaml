                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    
                                        <!-- Total Amount Column -->
                                        <DataGridTextColumn Header="Total Amount" 
                                                            Binding="{Binding TotalAmount, Converter={StaticResource CurrencyPriceConverter}}" 
                                                            Width="120"
