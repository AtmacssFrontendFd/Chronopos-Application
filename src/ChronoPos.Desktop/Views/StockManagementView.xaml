                                       FontSize="13" 
                                       Foreground="{DynamicResource TextSecondary}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Command="{Binding CloseAdjustProductPanelCommand}"
                                Width="36" Height="36"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand">
                            <TextBlock Text="âœ•" 
                                       FontSize="16"
                                       Foreground="{DynamicResource TextSecondary}"/>
