                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
                                                    <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Supplier Column -->
                                        <DataGridTextColumn Header="Supplier" 
                                                            Binding="{Binding SupplierName}" 
                                                            Width="*"
                                                            MinWidth="150">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Store Column -->
                                        <DataGridTextColumn Header="Store" 
                                                            Binding="{Binding StoreName}" 
                                                            Width="*"
                                                            MinWidth="120">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Replace Date Column -->
                                        <DataGridTextColumn Header="Replace Date" 
                                                            Binding="{Binding ReplaceDate, StringFormat=dd/MM/yyyy}" 
                                                            Width="130"
                                                            MinWidth="110">
