                                                <Style TargetType="TextBlock">
                                                    <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Status Column with Color Indicator -->
                                        <DataGridTemplateColumn Header="Status" Width="100" MinWidth="90">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="{Binding Status, Converter={StaticResource StatusColorConverter}}"
