<Application x:Class="ChronoPos.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default theme (Light) will be loaded here by ThemeService -->
                <ResourceDictionary Source="pack://application:,,,/ChronoPos.Desktop;component/Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Built-in WPF Converter for Boolean to Visibility -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            
            <!-- Null to Visibility Converter -->
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            
            <!-- Add converters for Product Batches -->
            <converters:DaysToExpiryConverter x:Key="DaysToExpiryConverter"/>
            <converters:BatchStatusToColorConverter x:Key="BatchStatusToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
