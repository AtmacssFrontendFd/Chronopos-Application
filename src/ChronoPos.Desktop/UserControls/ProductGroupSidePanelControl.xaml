<UserControl x:Class="ChronoPos.Desktop.UserControls.ProductGroupSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding FormTitle}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource TextPrimary}"
                   Margin="30,20,30,20"/>

        <!-- Validation Error Message -->
        <Border Grid.Row="1"
                Background="#FFEBEE" 
                BorderBrush="#F44336" 
                BorderThickness="1" 
                CornerRadius="4" 
                Padding="15,10"
                Margin="30,0,30,10"
                Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding ValidationMessage}" 
                       Foreground="#C62828" 
                       FontSize="14"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Tab Headers -->
        <Grid Grid.Row="2" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Basic Info Tab -->
            <Border Grid.Column="0"
                    Background="{Binding SelectedTabIndex, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Tab0}"
                    BorderBrush="{DynamicResource Primary}"
                    BorderThickness="0,0,0,2"
                    Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTabIndex}" Value="0">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button Content="Basic Info"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextPrimary}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="0,10"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTabIndex}" Value="0">
                                    <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>

            <!-- Add Items Tab -->
            <Border Grid.Column="1"
                    Background="{Binding SelectedTabIndex, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Tab1}"
                    BorderBrush="{DynamicResource Primary}"
                    BorderThickness="0,0,0,2"
                    Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedTabIndex}" Value="1">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Button Content="Add Items"
                        Command="{Binding SelectTabCommand}"
                        CommandParameter="1"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource TextPrimary}"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="0,10"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTabIndex}" Value="1">
                                    <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>

        <!-- Tab Content -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,10,0,0">
            <StackPanel Margin="30,10,30,20">
                
                <!-- Tab 0: Basic Information -->
                <StackPanel Visibility="{Binding IsBasicInfoTabSelected, Converter={StaticResource BoolToVisibilityConverter}}">

                <!-- Basic Information Section -->
                <TextBlock Text="Basic Information" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}"
                           Margin="0,0,0,15"/>

                <!-- Group Name (English) -->
                <TextBlock Text="Group Name (English) *" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputFieldStyle}"
                         Margin="0,0,0,15"/>

                <!-- Group Name (Arabic) -->
                <TextBlock Text="Group Name (Arabic)" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding NameAr, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputFieldStyle}"
                         FlowDirection="RightToLeft"
                         Margin="0,0,0,15"/>

                <!-- Description (English) -->
                <TextBlock Text="Description (English)" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputFieldStyle}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="80"
                         VerticalAlignment="Top"
                         Margin="0,0,0,15"/>

                <!-- Description (Arabic) -->
                <TextBlock Text="Description (Arabic)" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding DescriptionAr, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputFieldStyle}"
                         FlowDirection="RightToLeft"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="80"
                         VerticalAlignment="Top"
                         Margin="0,0,0,15"/>

                <!-- SKU Prefix -->
                <TextBlock Text="SKU Prefix" Style="{StaticResource LabelStyle}"/>
                <TextBox Text="{Binding SkuPrefix, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource InputFieldStyle}"
                         Margin="0,0,0,15"/>

                <!-- Status -->
                <CheckBox Content="Active Status" 
                          IsChecked="{Binding IsActive}"
                          Foreground="{DynamicResource TextPrimary}"
                          FontSize="14"
                          Margin="0,0,0,20"/>

                <!-- Pricing & Configuration Section -->
                <TextBlock Text="Pricing &amp; Configuration" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimary}"
                           Margin="0,10,0,15"/>

                <!-- Tax Type -->
                <TextBlock Text="Tax Type" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding TaxTypes}"
                          SelectedItem="{Binding SelectedTaxType}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource ComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <!-- Price Type -->
                <TextBlock Text="Price Type" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding PriceTypes}"
                          SelectedItem="{Binding SelectedPriceType}"
                          DisplayMemberPath="TypeName"
                          Style="{StaticResource ComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <!-- Discount -->
                <TextBlock Text="Discount" Style="{StaticResource LabelStyle}"/>
                <ComboBox ItemsSource="{Binding Discounts}"
                          SelectedItem="{Binding SelectedDiscount}"
                          DisplayMemberPath="DiscountName"
                          Style="{StaticResource ComboBoxStyle}"
                          Margin="0,0,0,20"/>

                    <!-- Group Items Section (only show in edit mode) -->
                    <Border BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,10,0,20"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="Group Items" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimary}"
                                           VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Items List -->
                            <ListBox ItemsSource="{Binding GroupItems}"
                                     SelectedItem="{Binding SelectedGroupItem}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     MaxHeight="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource BorderColor}"
                                                BorderThickness="0,0,0,1"
                                                Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ProductName}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimary}"/>
                                                    <TextBlock Text="{Binding ProductCode}" 
                                                               FontSize="12"
                                                               Foreground="{DynamicResource TextSecondary}"/>
                                                </StackPanel>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0"
                                                           Foreground="{DynamicResource TextSecondary}"/>

                                                <Button Grid.Column="2"
                                                        Content="ðŸ—‘ï¸"
                                                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Foreground="{DynamicResource Error}"
                                                        Cursor="Hand"
                                                        Padding="5"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Empty State -->
                            <TextBlock Text="No items added to this group yet."
                                       FontSize="13"
                                       Foreground="{DynamicResource TextSecondary}"
                                       HorizontalAlignment="Center"
                                       Margin="0,20"
                                       Visibility="{Binding GroupItems.Count, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Tab 1: Add Items -->
                <StackPanel Visibility="{Binding IsAddItemsTabSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    
                    <!-- Product Selection -->
                    <TextBlock Text="Select Product" Style="{StaticResource LabelStyle}"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,10,0"/>
                        
                        <Button Grid.Column="1"
                                Content="+"
                                Command="{Binding AddProductCommand}"
                                Background="{DynamicResource Primary}"
                                Foreground="White"
                                BorderThickness="0"
                                Width="40"
                                Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Selected Products Chips -->
                    <ItemsControl ItemsSource="{Binding SelectedProducts}" 
                                  Margin="0,0,0,15"
                                  Visibility="{Binding SelectedProducts.Count, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E3F2FD"
                                        BorderBrush="#2196F3"
                                        BorderThickness="1"
                                        CornerRadius="16"
                                        Padding="12,6"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="13"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button Content="Ã—"
                                                Command="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#1976D2"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Padding="0"
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Center">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="10">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#BBDEFB"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Product Unit Selection -->
                    <TextBlock Text="Select Product Unit" Style="{StaticResource LabelStyle}"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding ProductUnits}"
                                  SelectedItem="{Binding SelectedProductUnit}"
                                  DisplayMemberPath="UnitName"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,10,0"/>
                        
                        <Button Grid.Column="1"
                                Content="+"
                                Command="{Binding AddProductUnitCommand}"
                                Background="{DynamicResource Primary}"
                                Foreground="White"
                                BorderThickness="0"
                                Width="40"
                                Height="40"
                                FontSize="20"
                                FontWeight="Bold"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Selected Product Units Chips -->
                    <ItemsControl ItemsSource="{Binding SelectedProductUnits}" 
                                  Margin="0,0,0,15"
                                  Visibility="{Binding SelectedProductUnits.Count, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F3E5F5"
                                        BorderBrush="#9C27B0"
                                        BorderThickness="1"
                                        CornerRadius="16"
                                        Padding="12,6"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding UnitName}"
                                                   FontSize="13"
                                                   Foreground="#7B1FA2"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button Content="Ã—"
                                                Command="{Binding DataContext.RemoveProductUnitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="#7B1FA2"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Padding="0"
                                                Width="20"
                                                Height="20"
                                                VerticalAlignment="Center">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="10">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E1BEE7"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Info Text -->
                    <TextBlock Text="Note: Click the + button to add products or units. Items will be created for all combinations when you save the product group."
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondary}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>

                    <!-- Preview Section -->
                    <Border BorderBrush="{DynamicResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,10,0,0"
                            Visibility="{Binding HasItemSelection, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Items to be Created:" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimary}"
                                       Margin="0,0,0,10"/>
                            
                            <TextBlock Foreground="{DynamicResource TextSecondary}" FontSize="13">
                                <Run Text="â€¢ "/>
                                <Run Text="{Binding ItemCreationPreview, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="30,10,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="{Binding SaveButtonText}"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource ActionButtonStyle}"/>

            <Button Grid.Column="2"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButtonStyle}"/>
        </Grid>
    </Grid>
</UserControl>
