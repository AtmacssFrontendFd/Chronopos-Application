<UserControl x:Class="ChronoPos.Desktop.UserControls.SupplierSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="{DynamicResource CardBackground}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryLight}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="{DynamicResource FontSizeLarge}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Command="{Binding CloseSidePanelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Padding="8"
                        ToolTip="Close"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="{DynamicResource DefaultPaddingThickness}">
            <StackPanel>
                <TextBlock Text="Supplier Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <!-- Company Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Company Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.CompanyName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter company name"/>
                </StackPanel>
                
                <!-- Contact Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Contact Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.ContactName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter contact person name"/>
                </StackPanel>
                
                <!-- Email -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter email address"/>
                </StackPanel>
                
                <!-- Phone Number -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter phone number"/>
                </StackPanel>
                
                <!-- VAT/TRN Number -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="VAT/TRN Number" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.VatTrnNumber, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter VAT/TRN number"/>
                </StackPanel>
                
                <!-- Website -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Website" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.Website, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputFieldStyle}" ToolTip="Enter website URL"/>
                </StackPanel>

                <TextBlock Text="Address Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <!-- Address -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Address *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingSupplier.Address, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             ToolTip="Enter full address"/>
                </StackPanel>
                
                <!-- City and Country in a Grid -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- City -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="City" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding EditingSupplier.City, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputFieldStyle}"
                                 ToolTip="Enter city"/>
                    </StackPanel>

                    <!-- Country -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Country" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding EditingSupplier.Country, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputFieldStyle}"
                                 ToolTip="Enter country"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Financial Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <!-- Credit Limit and Payment Terms in a Grid -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Credit Limit -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Credit Limit" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding EditingSupplier.CreditLimit, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputFieldStyle}"
                                 ToolTip="Enter credit limit"/>
                    </StackPanel>

                    <!-- Payment Terms -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Payment Terms" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding EditingSupplier.PaymentTerms, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputFieldStyle}"
                                 ToolTip="Enter payment terms"/>
                    </StackPanel>
                </Grid>

                <!-- Status -->
                <StackPanel Margin="0,0,0,20">
                    <CheckBox Content="Is Active"
                             IsChecked="{Binding EditingSupplier.IsActive}"
                             FontSize="{DynamicResource FontSizeSmall}"
                             FontFamily="{DynamicResource PoppinsFontFallback}"
                             Foreground="{DynamicResource TextPrimary}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ValidationMessage}"
                           FontSize="{DynamicResource FontSizeExtraSmall}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           Foreground="{DynamicResource Error}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CloseSidePanelCommand}"
                        Background="{DynamicResource SurfaceBackground}"
                        Foreground="{DynamicResource TextPrimary}"
                        BorderThickness="1"
                        BorderBrush="{DynamicResource BorderLight}"
                        Padding="15,8"
                        Margin="0,0,10,0"
                        FontFamily="{DynamicResource PoppinsFontFallback}"
                        FontSize="{DynamicResource FontSizeSmall}"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save Supplier"
                        Command="{Binding SaveSupplierCommand}"
                        Background="{DynamicResource Primary}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontFamily="{DynamicResource PoppinsFontFallback}"
                        FontSize="{DynamicResource FontSizeSmall}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>