<UserControl x:Class="ChronoPos.Desktop.UserControls.SupplierSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="White"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Form Section Style -->
        <Style x:Key="FormSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#F39C12"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Command="{Binding CloseSidePanelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="16"
                        Width="30"
                        Height="30"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <StackPanel>
                <!-- Supplier Information Section -->
                <Border Style="{StaticResource FormSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Supplier Information" 
                                   Style="{StaticResource LabelStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,15"/>

                        <!-- Company Name -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Company Name" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="*" Foreground="Red" FontWeight="Bold" Margin="2,0,0,0"/>
                            </StackPanel>
                            <TextBox Text="{Binding EditingSupplier.CompanyName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Contact Name -->
                        <StackPanel Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="Contact Name" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="*" Foreground="Red" FontWeight="Bold" Margin="2,0,0,0"/>
                            </StackPanel>
                            <TextBox Text="{Binding EditingSupplier.ContactName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding EditingSupplier.Email, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Phone Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding EditingSupplier.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- VAT/TRN Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="VAT/TRN Number" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding EditingSupplier.VatTrnNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>

                        <!-- Website -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Website" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding EditingSupplier.Website, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Address Information Section -->
                <Border Style="{StaticResource FormSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Address Information" 
                                   Style="{StaticResource LabelStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,15"/>

                        <!-- Address -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                            <TextBox Text="{Binding EditingSupplier.Address, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputFieldStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Height="80"/>
                        </StackPanel>

                        <!-- City and Country in a Grid -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- City -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="City" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding EditingSupplier.City, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"/>
                            </StackPanel>

                            <!-- Country -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Country" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding EditingSupplier.Country, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Financial Information Section -->
                <Border Style="{StaticResource FormSectionStyle}">
                    <StackPanel>
                        <TextBlock Text="Financial Information" 
                                   Style="{StaticResource LabelStyle}"
                                   FontSize="16"
                                   Margin="0,0,0,15"/>

                        <!-- Credit Limit and Payment Terms in a Grid -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Credit Limit -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Credit Limit" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding EditingSupplier.CreditLimit, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"/>
                            </StackPanel>

                            <!-- Payment Terms -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Payment Terms" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding EditingSupplier.PaymentTerms, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputFieldStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Status -->
                        <StackPanel Margin="0,0,0,10">
                            <CheckBox Content="Is Active"
                                     IsChecked="{Binding EditingSupplier.IsActive}"
                                     FontSize="14"
                                     FontFamily="Segoe UI"
                                     Foreground="Black"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#F5F5F5"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ValidationMessage}"
                           FontSize="12"
                           FontFamily="Segoe UI"
                           Foreground="Red"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CloseSidePanelCommand}"
                        Background="White"
                        Foreground="Black"
                        BorderThickness="1"
                        BorderBrush="#D0D0D0"
                        Padding="15,8"
                        Margin="0,0,10,0"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save Supplier"
                        Command="{Binding SaveSupplierCommand}"
                        Background="#F39C12"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>