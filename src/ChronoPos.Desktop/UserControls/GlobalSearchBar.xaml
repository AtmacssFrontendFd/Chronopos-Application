<UserControl x:Class="ChronoPos.Desktop.UserControls.GlobalSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="400">
    
    <UserControl.Resources>
        <!-- Search Icon Style -->
        <Style x:Key="SearchIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <!-- Search TextBox Style -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <ScrollViewer x:Name="PART_ContentHost"
                                    Background="Transparent"
                                    Focusable="false"
                                    HorizontalScrollBarVisibility="Hidden"
                                    VerticalScrollBarVisibility="Hidden"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Search Results ListBox Style -->
        <Style x:Key="SearchResultsListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MaxHeight" Value="300"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
        
        <!-- Search Result Item Style -->
        <Style x:Key="SearchResultItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!-- Main Search Container -->
        <Border Background="{DynamicResource SurfaceBackground}"
                BorderBrush="{DynamicResource BorderLight}"
                BorderThickness="1"
                CornerRadius="20"
                Height="40">
            <Grid Margin="12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Icon -->
                <TextBlock Grid.Column="0"
                          Text="&#xE721;"
                          Style="{StaticResource SearchIconStyle}"
                          Margin="0,0,8,0"/>
                
                <!-- Search TextBox -->
                <TextBox Grid.Column="1"
                        x:Name="SearchTextBox"
                        Style="{StaticResource SearchTextBoxStyle}"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        Tag="{Binding PlaceholderText}"
                        GotFocus="SearchTextBox_GotFocus"
                        LostFocus="SearchTextBox_LostFocus"
                        KeyDown="SearchTextBox_KeyDown">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                
                <!-- Clear Button -->
                <Button Grid.Column="2"
                       x:Name="ClearButton"
                       Background="Transparent"
                       BorderThickness="0"
                       Width="20"
                       Height="20"
                       Visibility="{Binding HasSearchText, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Command="{Binding ClearSearchCommand}"
                       Margin="8,0,0,0">
                    <TextBlock Text="&#xE711;"
                              Style="{StaticResource SearchIconStyle}"
                              FontSize="12"/>
                </Button>
            </Grid>
        </Border>
        
        <!-- Search Results Popup -->
        <Popup x:Name="SearchResultsPopup"
               IsOpen="{Binding ShowSearchResults}"
               PlacementTarget="{Binding ElementName=SearchTextBox}"
               Placement="Bottom"
               AllowsTransparency="True"
               PopupAnimation="Slide"
               StaysOpen="False">
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1"
                    CornerRadius="8"
                    MinWidth="380"
                    MaxWidth="500"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Results Header -->
                    <Border Grid.Row="0"
                           Background="{DynamicResource HoverBackground}"
                           Padding="12,8"
                           CornerRadius="8,8,0,0">
                        <TextBlock Text="{Binding SearchResultsHeader}"
                                  FontSize="{DynamicResource FontSizeSmall}"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextSecondary}"/>
                    </Border>
                    
                    <!-- Search Results List -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding SearchResults}"
                            SelectedItem="{Binding SelectedSearchResult}"
                            Style="{StaticResource SearchResultsListBoxStyle}"
                            MaxHeight="300">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource SearchResultItemStyle}">
                                <EventSetter Event="MouseDoubleClick" Handler="SearchResultItem_MouseDoubleClick"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Module Icon -->
                                    <Border Grid.Column="0"
                                           Background="{Binding Category, Converter={StaticResource ModuleToColorConverter}}"
                                           CornerRadius="4"
                                           Width="32"
                                           Height="32"
                                           Margin="0,0,8,0">
                                        <TextBlock Text="{Binding Module, Converter={StaticResource ModuleToIconConverter}}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Foreground="White"
                                                  FontSize="14"/>
                                    </Border>
                                    
                                    <!-- Content -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}"
                                                  FontWeight="SemiBold"
                                                  FontSize="{DynamicResource FontSizeMedium}"
                                                  TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Description}"
                                                  FontSize="{DynamicResource FontSizeSmall}"
                                                  Foreground="{DynamicResource TextSecondary}"
                                                  TextTrimming="CharacterEllipsis"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Price/Status -->
                                    <StackPanel Grid.Column="2" 
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0">
                                        <TextBlock Text="{Binding Price, Converter={StaticResource CurrencyPriceConverter}}"
                                                  FontWeight="SemiBold"
                                                  HorizontalAlignment="Right"
                                                  Visibility="{Binding Price, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <TextBlock Text="{Binding Status}"
                                                  FontSize="{DynamicResource FontSizeVerySmall}"
                                                  Foreground="{DynamicResource TextSecondary}"
                                                  HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Footer -->
                    <Border Grid.Row="2"
                           BorderBrush="{DynamicResource BorderLight}"
                           BorderThickness="0,1,0,0"
                           Padding="12,8"
                           Visibility="{Binding HasMoreResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding MoreResultsText}"
                                  FontSize="{DynamicResource FontSizeVerySmall}"
                                  Foreground="{DynamicResource TextSecondary}"
                                  HorizontalAlignment="Center">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ShowAllResultsCommand}"/>
                            </TextBlock.InputBindings>
                        </TextBlock>
                    </Border>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>