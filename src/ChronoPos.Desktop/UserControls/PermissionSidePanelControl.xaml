<UserControl x:Class="ChronoPos.Desktop.UserControls.PermissionSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">
    <UserControl.Resources>
        <!-- Converters -->
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:ScreenNameToDisplayNameConverter x:Key="ScreenNameToDisplayNameConverter"/>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="{DynamicResource FontSizeLarge}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="✕"
                        Command="{Binding CloseCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Padding="8"
                        ToolTip="Close"/>
            </Grid>
        </Border>
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="{DynamicResource DefaultPaddingThickness}">
            <StackPanel>
                <TextBlock Text="Permission Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <!-- Permission Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Permission Name *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}" 
                             ToolTip="Enter permission name"/>
                </StackPanel>
                
                <!-- Permission Code -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Permission Code *" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}" 
                             ToolTip="Enter unique permission code (e.g., PRODUCTS_VIEW)"/>
                </StackPanel>
                
                <!-- Screen Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Screen Names" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailableScreenNames}"
                                  SelectedItem="{Binding SelectedScreenName}"
                                  IsEditable="True"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,5,0"
                                  ToolTip="Select or enter screen/module name">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ScreenNameToDisplayNameConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Grid.Column="1"
                                Content="Add"
                                Command="{Binding AddScreenNameCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Padding="12,8"
                                MinWidth="60"
                                ToolTip="Add screen name"/>
                    </Grid>
                    
                    <!-- Selected Screen Names List -->
                    <ItemsControl ItemsSource="{Binding SelectedScreenNames}" Margin="0,5,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Primary}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Converter={StaticResource ScreenNameToDisplayNameConverter}}"
                                                   Foreground="White"
                                                   FontSize="{DynamicResource FontSizeExtraSmall}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button Grid.Column="1"
                                                Content="✕"
                                                Command="{Binding DataContext.RemoveScreenNameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="White"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Padding="2"
                                                Width="16"
                                                Height="16"
                                                ToolTip="Remove"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Type Matrix (CRUD) -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Type Matrix" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailableTypeMatrix}"
                                  SelectedItem="{Binding SelectedTypeMatrix}"
                                  IsEditable="True"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,5,0"
                                  ToolTip="Select type matrix (Create, Read, Update, Delete)"/>
                        <Button Grid.Column="1"
                                Content="Add"
                                Command="{Binding AddTypeMatrixCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                Padding="12,8"
                                MinWidth="60"
                                ToolTip="Add type matrix"/>
                    </Grid>
                    
                    <!-- Selected Type Matrix List -->
                    <ItemsControl ItemsSource="{Binding SelectedTypeMatrixList}" Margin="0,5,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Primary}"
                                        CornerRadius="12"
                                        Padding="8,4"
                                        Margin="0,2,5,2"
                                        HorizontalAlignment="Left">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding}"
                                                   Foreground="White"
                                                   FontSize="{DynamicResource FontSizeExtraSmall}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button Grid.Column="1"
                                                Content="✕"
                                                Command="{Binding DataContext.RemoveTypeMatrixCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Foreground="White"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Padding="2"
                                                Width="16"
                                                Height="16"
                                                ToolTip="Remove"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Is Parent Permission -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <CheckBox Content="Is Parent Permission" 
                              IsChecked="{Binding IsParent}" 
                              FontSize="{DynamicResource FontSizeMedium}" 
                              FontWeight="SemiBold" 
                              FontFamily="{DynamicResource PoppinsFontFallback}" 
                              ToolTip="Check if this is a parent permission (container for other permissions)"/>
                </StackPanel>
                
                <!-- Parent Permission Selection -->
                <StackPanel Margin="0,0,0,20" Visibility="{Binding IsParent, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Parent Permission" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailableParentPermissions}"
                              SelectedItem="{Binding SelectedParentPermission}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource ComboBoxStyle}"
                              ToolTip="Select the parent permission for this child permission"/>
                </StackPanel>
                
                <!-- Status -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailableStatuses}"
                              SelectedItem="{Binding Status, Mode=TwoWay}"
                              Style="{StaticResource ComboBoxStyle}"
                              ToolTip="Select permission status"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="{Binding ValidationMessage}" 
                           Foreground="Red" 
                           FontSize="{DynamicResource FontSizeSmall}" 
                           VerticalAlignment="Center" 
                           TextWrapping="Wrap"/>
                <Button Grid.Column="1" 
                        Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Margin="0,0,10,0"/>
                <Button Grid.Column="2" 
                        Content="{Binding SaveButtonText}" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        IsDefault="True"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
