<UserControl x:Class="ChronoPos.Desktop.UserControls.RoleSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">
    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="{DynamicResource FontSizeLarge}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="✕"
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Padding="8"
                        ToolTip="Close"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="{DynamicResource DefaultPaddingThickness}">
            <StackPanel>
                <TextBlock Text="Role Information" 
                           Style="{StaticResource SectionHeaderStyle}"/>

                <!-- Role Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Role Name *" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding RoleName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}" 
                             ToolTip="Enter role name"/>
                </StackPanel>

                <!-- Permissions Section -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Permissions" 
                               Style="{StaticResource LabelStyle}"/>
                    
                    <!-- Dropdown and Add Button -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding AvailablePermissions}"
                                  SelectedItem="{Binding SelectedPermission, Mode=TwoWay}"
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource ComboBoxStyle}"
                                  Margin="0,0,10,0"
                                  ToolTip="Select a permission to add"/>
                        
                        <Button Grid.Column="1"
                                Content="Add"
                                Command="{Binding AddPermissionCommand}"
                                Style="{StaticResource ActionButtonStyle}"
                                MinWidth="80"
                                ToolTip="Add selected permission"/>
                    </Grid>
                    
                    <!-- Selected Permissions (Chips) -->
                    <ItemsControl ItemsSource="{Binding SelectedPermissions}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource Primary}"
                                        CornerRadius="12"
                                        Padding="10,5"
                                        Margin="0,0,8,8">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="White"
                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Button Content="✕"
                                                Command="{Binding DataContext.RemovePermissionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Cursor="Hand"
                                                Padding="4,0"
                                                ToolTip="Remove permission"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Description" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}" 
                             Height="100" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto" 
                             ToolTip="Enter role description"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Status *" 
                               Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailableStatuses}" 
                              SelectedItem="{Binding Status, Mode=TwoWay}" 
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Processing..."
                               FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Message -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding ValidationMessage}" 
                           Foreground="Red" 
                           FontSize="{DynamicResource FontSizeSmall}" 
                           VerticalAlignment="Center" 
                           TextWrapping="Wrap"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1" 
                        Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Margin="0,0,10,0"/>

                <!-- Save Button -->
                <Button Grid.Column="2" 
                        Content="{Binding SaveButtonText}" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource ActionButtonStyle}" 
                        IsEnabled="{Binding CanSave}"
                        IsDefault="True"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
