<UserControl x:Class="ChronoPos.Desktop.UserControls.ProductCombinationSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             Background="{DynamicResource CardBackground}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Form Styles -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="FormInputStyle" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
        </Style>

        <Style x:Key="FormTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FormInputStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource FormInputStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource OverlayBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="{DynamicResource DefaultPaddingThickness}">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="{DynamicResource FontSizeLarge}"
                           FontWeight="Bold"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           Foreground="{DynamicResource TextPrimary}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="✕"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="30"
                        Height="30"
                        Padding="0"
                        FontSize="14"/>
            </Grid>

            <!-- Loading Indicator -->
            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        HorizontalAlignment="Center"
                        Margin="0,20">
                <TextBlock Text="Loading..."
                           FontSize="{DynamicResource FontSizeMedium}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           Foreground="{DynamicResource TextSecondary}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Form Content -->
            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                
                <!-- Product Unit Selection -->
                <TextBlock Text="Product Unit *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding ProductUnits}"
                          SelectedItem="{Binding SelectedProductUnit}"
                          DisplayMemberPath="DisplayName"
                          Style="{StaticResource FormComboBoxStyle}"/>

                <!-- Attribute Selection -->
                <TextBlock Text="Attribute *" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Attributes}"
                          SelectedItem="{Binding SelectedAttribute}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource FormComboBoxStyle}"/>

                <!-- Attribute Value Selection -->
                <TextBlock Text="Attribute Value *" Style="{StaticResource FormLabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding AttributeValues}"
                              SelectedItem="{Binding SelectedAttributeValue}"
                              DisplayMemberPath="Value"
                              Style="{StaticResource FormComboBoxStyle}"
                              Margin="0,0,10,15"/>
                    
                    <Button Grid.Column="1"
                            Content="Add"
                            Command="{Binding AddAttributeValueCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="15,8"
                            Margin="0,0,0,15"/>
                </Grid>

                <!-- Selected Attribute Values -->
                <TextBlock Text="Selected Values" Style="{StaticResource FormLabelStyle}"/>
                <Border BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="{DynamicResource BorderCornerRadius}"
                        Background="{DynamicResource SurfaceBackground}"
                        MinHeight="100"
                        Padding="10"
                        Margin="0,0,0,15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="150">
                        <ItemsControl ItemsSource="{Binding SelectedAttributeValues}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackground}"
                                            BorderBrush="{DynamicResource BorderLight}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="8"
                                            Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Value}"
                                                       FontSize="{DynamicResource FontSizeSmall}"
                                                       FontFamily="{DynamicResource PoppinsFontFallback}"
                                                       Foreground="{DynamicResource TextPrimary}"
                                                       VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="1"
                                                    Content="✕"
                                                    Command="{Binding DataContext.RemoveAttributeValueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    Foreground="Red"
                                                    BorderThickness="0"
                                                    FontSize="12"
                                                    Width="20"
                                                    Height="20"
                                                    Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Validation Message -->
                <TextBlock Text="{Binding ValidationMessage}"
                           Foreground="Red"
                           FontSize="{DynamicResource FontSizeExtraSmall}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"
                           Visibility="{Binding ValidationMessage, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Action Buttons -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>

                    <Button Grid.Column="2"
                            Content="{Binding SaveButtonText}"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            IsEnabled="{Binding CanSave}"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>