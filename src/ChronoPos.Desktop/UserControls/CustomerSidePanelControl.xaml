<UserControl x:Class="ChronoPos.Desktop.UserControls.CustomerSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="600"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="{DynamicResource DefaultPaddingThickness}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeMedium}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="{DynamicResource ButtonHeight}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource BorderLight}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontFamily" Value="{DynamicResource PoppinsFontFallback}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="{DynamicResource FontSizeLarge}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Command="{Binding CloseSidePanelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Padding="8"
                        ToolTip="Close"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="{DynamicResource DefaultPaddingThickness}">
            <StackPanel Margin="0,20,0,20">
                <TextBlock Text="Customer Information" Style="{StaticResource SectionHeaderStyle}"/>
                
                <!-- First Name -->
                <StackPanel Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="First Name" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="*" Foreground="{DynamicResource ErrorColor}" FontWeight="Bold" Margin="2,0,0,0"/>
                    </StackPanel>
                    <TextBox Text="{Binding EditingCustomer.FirstName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             ToolTip="Enter customer's first name"/>
                </StackPanel>

                <!-- Last Name -->
                <StackPanel Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Last Name" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="*" Foreground="{DynamicResource ErrorColor}" FontWeight="Bold" Margin="2,0,0,0"/>
                    </StackPanel>
                    <TextBox Text="{Binding EditingCustomer.LastName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             ToolTip="Enter customer's last name"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingCustomer.Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             ToolTip="Enter customer's email address"/>
                </StackPanel>

                <!-- Phone Number -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingCustomer.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             ToolTip="Enter customer's phone number"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding EditingCustomer.Address, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             VerticalScrollBarVisibility="Auto"
                             ToolTip="Enter customer's address"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0,0,0,20">
                    <CheckBox Content="Is Active"
                             IsChecked="{Binding EditingCustomer.IsActive}"
                             Style="{StaticResource CheckBoxStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{DynamicResource CardBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Messages -->
                <TextBlock Grid.Column="0"
                           Text="{Binding ValidationMessage}"
                           FontSize="{DynamicResource FontSizeExtraSmall}"
                           FontFamily="{DynamicResource PoppinsFontFallback}"
                           Foreground="{DynamicResource ErrorColor}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CloseSidePanelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save Customer"
                        Command="{Binding SaveCustomerCommand}"
                        Style="{StaticResource ActionButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>