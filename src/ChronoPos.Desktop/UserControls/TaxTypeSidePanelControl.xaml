<UserControl x:Class="ChronoPos.Desktop.UserControls.TaxTypeSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">
    
    <UserControl.Resources>
        <converters:FlowDirectionToHorizontalAlignmentConverter x:Key="FlowDirectionToHorizontalAlignmentConverter"/>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="{DynamicResource DefaultPaddingThickness}">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                      Text="{Binding FormTitle}"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="{DynamicResource TextPrimary}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
            
            <Button Grid.Column="1"
                   Command="{Binding CloseCommand}"
                   Background="Transparent"
                   BorderThickness="0"
                   Padding="8"
                   Cursor="Hand"
                   VerticalAlignment="Top">
                <TextBlock Text="âœ•" 
                          FontSize="16" 
                          Foreground="{DynamicResource TextSecondary}"/>
            </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="{DynamicResource DefaultPaddingThickness}">
            <StackPanel>
                <!-- Name Field -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Name*"
                              Style="{StaticResource LabelStyle}"
                              HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Description Field -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Description"
                              Style="{StaticResource LabelStyle}"
                              HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource InputFieldStyle}"
                            Height="80"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Value Field -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Value*"
                              Style="{StaticResource LabelStyle}"
                              HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Is Percentage CheckBox -->
                <StackPanel Margin="0,0,0,15">
                    <CheckBox IsChecked="{Binding IsPercentage}"
                             Content="Is Percentage"
                             FontSize="14"
                             Foreground="{DynamicResource TextPrimary}"
                             HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                </StackPanel>

                <!-- Applies To Section -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Applies To"
                              FontWeight="Medium"
                              FontSize="14"
                              Foreground="{DynamicResource TextPrimary}"
                              Margin="0,0,0,12"
                              HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    <StackPanel>
                        <CheckBox IsChecked="{Binding AppliesToBuying}"
                                 Content="Buying"
                                 FontSize="14"
                                 Margin="0,0,0,8"
                                 Foreground="{DynamicResource TextPrimary}"
                                 HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                        <CheckBox IsChecked="{Binding AppliesToSelling}"
                                 Content="Selling"
                                 FontSize="14"
                                 Foreground="{DynamicResource TextPrimary}"
                                 HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Field -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Status"
                              FontWeight="Medium"
                              FontSize="14"
                              Foreground="{DynamicResource TextPrimary}"
                              Margin="0,0,0,12"
                              HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                    <CheckBox IsChecked="{Binding Status}"
                             Content="Active"
                             FontSize="14"
                             Foreground="{DynamicResource TextPrimary}"
                             HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
                </StackPanel>

                <!-- Validation Message -->
                <TextBlock Text="{Binding ValidationMessage}"
                          Foreground="{DynamicResource Error}"
                          FontSize="14"
                          Margin="0,0,0,15"
                          TextWrapping="Wrap"
                          HorizontalAlignment="{Binding CurrentFlowDirection, Converter={StaticResource FlowDirectionToHorizontalAlignmentConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Cancel"
                   Command="{Binding CancelCommand}"
                   Background="{DynamicResource TextSecondary}"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="12,8"
                   FontSize="{DynamicResource FontSizeSmall}"
                   FontWeight="SemiBold"
                   FontFamily="{DynamicResource PoppinsFontFallback}"
                   Cursor="Hand"
                   Margin="0,0,10,0"
                   MinWidth="80">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Content="{Binding SaveButtonText}"
                   Command="{Binding SaveCommand}"
                   Background="{DynamicResource Primary}"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="12,8"
                   FontSize="{DynamicResource FontSizeSmall}"
                   FontWeight="SemiBold"
                   FontFamily="{DynamicResource PoppinsFontFallback}"
                   Cursor="Hand"
                   MinWidth="80">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{DynamicResource BorderCornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryDarker}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>