<UserControl x:Class="ChronoPos.Desktop.UserControls.ProfileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <StackPanel>
            
            <!-- Profile Header -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profile Icon -->
                    <Border Grid.Column="0"
                            Width="100"
                            Height="100"
                            Background="{DynamicResource Primary}"
                            CornerRadius="50"
                            Margin="0,0,25,0"
                            VerticalAlignment="Top">
                        <TextBlock Text="{Binding Initials}"
                                   FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- User Name and Email -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CurrentUser.FullName}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding CurrentUser.Email}"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,0,0,5"/>
                        <Border Background="{DynamicResource Primary}"
                                CornerRadius="12"
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Margin="0,5,0,0">
                            <TextBlock Text="{Binding RoleName}"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Refresh Button -->
                    <Button Grid.Column="2"
                            Content="â†» Refresh"
                            Command="{Binding RefreshProfileCommand}"
                            Background="{DynamicResource Primary}"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Personal Information Section -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="25"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Personal Information"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Full Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                            <TextBlock Text="Full Name"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.FullName}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                            <TextBlock Text="Email Address"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.Email}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Phone Number -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                            <TextBlock Text="Phone Number"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.PhoneNo, TargetNullValue='Not Provided'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Date of Birth -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                            <TextBlock Text="Date of Birth"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.Dob, StringFormat='{}{0:dd MMM yyyy}', TargetNullValue='Not Provided'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- UAE ID -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                            <TextBlock Text="UAE ID"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.UaeId, TargetNullValue='Not Provided'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Nationality Status -->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                            <TextBlock Text="Nationality Status"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.NationalityStatus, TargetNullValue='Not Provided'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,0">
                            <TextBlock Text="Address"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.Address, TargetNullValue='Not Provided'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Employment Information Section -->
            <Border Background="{DynamicResource CardBackground}"
                    BorderBrush="{DynamicResource BorderLight}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="25">
                <StackPanel>
                    <TextBlock Text="Employment Information"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,20"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Role -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                            <TextBlock Text="Role"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding RoleName}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource Primary}"/>
                        </StackPanel>

                        <!-- Shop ID -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                            <TextBlock Text="Shop ID"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.ShopId}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Created Date -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Account Created"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.CreatedAt, StringFormat='{}{0:dd MMM yyyy}'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"/>
                        </StackPanel>

                        <!-- Additional Details -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,0">
                            <TextBlock Text="Additional Details"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource TextSecondary}"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding CurrentUser.AdditionalDetails, TargetNullValue='None'}"
                                       FontSize="14"
                                       Foreground="{DynamicResource TextPrimary}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
