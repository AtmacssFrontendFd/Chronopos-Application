<UserControl x:Class="ChronoPos.Desktop.UserControls.UserSidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:ChronoPos.Desktop.Converters"
             mc:Ignorable="d"
             Background="{DynamicResource CardBackground}"
             FlowDirection="{Binding CurrentFlowDirection}"
             FontFamily="{DynamicResource PoppinsFontFallback}">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        
        <!-- Input Field Style -->
        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        
        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="40"/>
        </Style>
        
        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FormTitle}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimary}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="âœ•"
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextSecondary}"
                        Cursor="Hand"
                        Padding="8"
                        ToolTip="Close"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Padding="20">
            <StackPanel>
                <!-- Full Name -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Full Name *" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Username -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Username *" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Email -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Email Address *" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Password" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text=" *" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#E53E3E"
                                   Visibility="{Binding FormTitle, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBlock Text=" (Leave empty to keep current password)" 
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource TextSecondary}"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0"
                                   Visibility="{Binding FormTitle, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                    <PasswordBox x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Background="{DynamicResource SurfaceBackground}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 BorderBrush="{DynamicResource BorderLight}"
                                 BorderThickness="1"
                                 Padding="12"
                                 FontSize="14"
                                 MinHeight="40"
                                 ToolTip="Leave empty to keep existing password when editing"/>
                </StackPanel>

                <!-- Confirm Password -->
                <StackPanel Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <TextBlock Text="Confirm Password" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <TextBlock Text=" *" 
                                   FontSize="13"
                                   FontWeight="Medium"
                                   Foreground="#E53E3E"
                                   Visibility="{Binding FormTitle, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                 Background="{DynamicResource SurfaceBackground}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 BorderBrush="{DynamicResource BorderLight}"
                                 BorderThickness="1"
                                 Padding="12"
                                 FontSize="14"
                                 MinHeight="40"/>
                </StackPanel>

                <!-- Role -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Role *" 
                               Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding AvailableRoles}" 
                              SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                              DisplayMemberPath="RoleName"
                              Style="{StaticResource ComboBoxStyle}"/>
                </StackPanel>

                <!-- Role Permissions -->
                <Border Background="{DynamicResource SurfaceBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20"
                        Visibility="{Binding RolePermissions.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Role Permissions"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>
                        
                        <ItemsControl ItemsSource="{Binding RolePermissions}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Primary}"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="0,0,8,8">
                                        <TextBlock Text="{Binding ScreenName}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Permission Overrides Section -->
                <Border Background="{DynamicResource CardBackground}"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Additional Permission Overrides"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,10"/>

                        <!-- Permission Selection -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding AvailablePermissions}"
                                      SelectedItem="{Binding SelectedPermission, Mode=TwoWay}"
                                      DisplayMemberPath="ScreenName"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Content="+ Add"
                                    Command="{Binding AddPermissionOverrideCommand}"
                                    Background="{DynamicResource Primary}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Valid From and Valid To -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Valid From"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondary}"
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding ValidFrom, Mode=TwoWay}"
                                            Background="{DynamicResource SurfaceBackground}"
                                            Foreground="{DynamicResource TextPrimary}"
                                            BorderBrush="{DynamicResource BorderLight}"
                                            BorderThickness="1"
                                            Padding="8"
                                            FontSize="13"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                <TextBlock Text="Valid To"
                                           FontSize="12"
                                           Foreground="{DynamicResource TextSecondary}"
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="{Binding ValidTo, Mode=TwoWay}"
                                            Background="{DynamicResource SurfaceBackground}"
                                            Foreground="{DynamicResource TextPrimary}"
                                            BorderBrush="{DynamicResource BorderLight}"
                                            BorderThickness="1"
                                            Padding="8"
                                            FontSize="13"/>
                            </StackPanel>
                        </Grid>

                        <!-- Added Permissions -->
                        <ItemsControl ItemsSource="{Binding PermissionOverrides}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceBackground}"
                                            BorderBrush="{DynamicResource BorderLight}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding ScreenName}"
                                                           FontSize="13"
                                                           FontWeight="Medium"
                                                           Foreground="{DynamicResource TextPrimary}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock FontSize="11" Foreground="{DynamicResource TextSecondary}">
                                                        <Run Text="From: "/>
                                                        <Run Text="{Binding ValidFrom, StringFormat='dd/MM/yyyy', TargetNullValue='N/A'}"/>
                                                        <Run Text=" To: "/>
                                                        <Run Text="{Binding ValidTo, StringFormat='dd/MM/yyyy', TargetNullValue='N/A'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Command="{Binding DataContext.RemovePermissionOverrideCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Padding="5"
                                                    ToolTip="Remove">
                                                <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                                      Fill="#E53E3E"
                                                      Stretch="Uniform"
                                                      Width="16"
                                                      Height="16"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Phone Number -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Phone Number" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding PhoneNo, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}"/>
                </StackPanel>

                <!-- Address -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Address" 
                               Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputFieldStyle}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Processing..."
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondary}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource SurfaceBackground}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource BorderLight}"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Message -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding ValidationMessage}" 
                           Foreground="Red" 
                           FontSize="13" 
                           VerticalAlignment="Center" 
                           TextWrapping="Wrap"/>

                <!-- Cancel Button -->
                <Button Grid.Column="1" 
                        Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderBrush="{DynamicResource BorderLight}"
                        BorderThickness="1"
                        Foreground="{DynamicResource TextPrimary}"
                        Padding="20,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        MinWidth="100">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="2" 
                        Content="{Binding SaveButtonText}" 
                        Command="{Binding SaveCommand}"
                        Background="{DynamicResource Primary}"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="{Binding CanSave}"
                        MinWidth="120">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
